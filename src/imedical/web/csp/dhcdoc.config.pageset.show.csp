<div id="page" class="hisui-layout" data-options="fit:true">
	<div data-options="title:'页面',region:'west',collapsible:true,split:true,border:true,collapsed:false" style="width:390px;">
		
		
		<div class="hisui-layout" data-options="fit:true">
			<div data-options="region:'north',collapsible:true,border:false" style="height:95px;padding:10px;border-bottom:1px dashed #ccc;">
				<div>
					<span class="c-span">页面代码</span>
					<input id="pageCode" class="textbox" type="text">
					<span class="c-span2"></span>
					<a id="i-find" class="hisui-linkbutton" data-options="iconCls:'icon-w-find'">查询</a>
				</div>
				<div class="c-row">
					<span class="c-span">页面名称</span>
					<input id="pageName" class="textbox" type="text">
					<span class="c-span2"></span>
					<a id="page-clear" class="hisui-linkbutton" data-options="iconCls:'icon-w-clean	'">清空</a>
				</div>
			</div>
			<div data-options="region:'center',border:false">
				<div id="i-page"></div>
			</div>
		</div>
	
	
	
	</div>
	<div data-options="region:'center',border:false">
		<div class="hisui-tabs" data-options="fit:true">   
			<div title="页面DOM设置">
				<div class="hisui-layout" data-options="fit:true">
					<div data-options="region:'north',collapsible:true,split:false,border:false" style="height:52px;padding:10px;border-bottom:1px dashed #ccc;">
						<div class="c-center">
							<a id ="ps_condition" href="javascript:void(0)" class="hisui-menubutton menubutton-blue" style="width:80px;" data-options="menu:'#mm-blue'">全部</a>
							<div id="mm-blue" style="width:100px;"> 
							    <div id="ps-must">必填</div>   
							    <div id="ps-jump" >跳转</div>
							    <div id="ps-all" >全部</div>
							</div>
							<input id="ps_content" class="textbox" style="width:60%;" placeholder="选择一个页面，然后搜索一下！"/>
							<a id="ps_search" class="hisui-linkbutton">搜索一下</a>
						</div>
					</div>
					<div data-options="region:'center',border:false">
						<div id="i-pageset"></div>
					</div>
				</div>
				
			</div>  
			<div title="页面消息设置" data-options="fit:true">   
				<div class="hisui-layout" data-options="fit:true">
					<div data-options="region:'center',border:false">
						<div id="i-message"></div>
					</div>
				</div>
			</div>   
			<div title="页面快捷键设置" data-options="closable:false">   
				<div class="hisui-layout" data-options="fit:true">
					<div data-options="region:'center',border:false">
						<div id="i-key"></div>
					</div>
				</div>  
			</div>   
			
		</div>

	</div>
</div>