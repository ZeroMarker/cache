<!-- 主页面-->
<div class="hisui-layout" data-options="fit:true">
	<div data-options="region:'center',border:false,collapsible:false" style="padding:10px;">
		<table id="gridAdmHistory" data-options="toolbar:'#custtb'"></table>
		<div id="custtb" style="padding:3px" > 
	       <table class="report-tab">
				<tr class="report-tr">				
					<td class="report-td">#(..Get("病案号"))#:</td>
					<td >
						<input class="textbox readonly-noborder" id="txtMrNo" style="width:100px">
					</td>
					<td class="report-td">#(..Get("住院天数"))#:</td>
					<td>
						<input class="textbox readonly-noborder" id="txtAdmDays" style="width:100px"/>	
					</td>
					<td class="report-td">#(..Get("住院次数"))#:</td>
					<td>
						<input class="textbox readonly-noborder" id="txtAdmTimes" style="width:100px"/>	
					</td>
					<td class="report-td">#(..Get("入院诊断"))#:</td>
					<td>
						<input class="textbox readonly-noborder" id="txtAdmitDiag" style="width:500px"/>	
					</td>				
				</tr>
				<tr class="report-tr">				
					<td class="report-td">#(..Get("主要诊断"))#:</td>
					<td >
						<input class="textbox readonly-noborder" id="txtMainDiag" style="width:100px">
					</td>
					<td class="report-td">#(..Get("死亡时间"))#:</td>
					<td>
						<input class="textbox readonly-noborder" id="txtDeathTime" style="width:100px"/>	
					</td>
					<td class="report-td">#(..Get("死亡日期"))#:</td>
					<td>
						<input class="textbox readonly-noborder" id="txtDeathDate" style="width:100px"/>	
					</td>
					<td class="report-td">#(..Get("其他诊断"))#:</td>
					<td>
						<input class="textbox readonly-noborder" id="txtOtherDiag" style="width:500px"/>	
					</td>				
				</tr>								
			</table>
	    </div>          
	</div>
</div>