<script Language="Javascript">
	var LgGroupID="#(%session.Get("LOGON.GROUPID"))#"; //安全组ID
	var LgGroupDesc="#(%session.Get("LOGON.GROUPDESC"))#"; //安全组
	var LgUserID="#(%session.Get("LOGON.USERID"))#"; //用户ID
	var LgUserCode="#(%session.Get("LOGON.USERCODE"))#"; //用户工号
	var LgUserName="#(%session.Get("LOGON.USERNAME"))#"; //用户姓名
	var LgCtLocID="#(%session.Get("LOGON.CTLOCID"))#";      //科室ID
	var LgHospID="#(%session.Get("LOGON.HOSPID"))#"; //医院ID
</script>
<link rel="stylesheet" type="text/css" href="../scripts/dhcadvEvt/skin/css/form.css" />
<style type="text/css">
 .combox{
    height: 29px;
    border-color: #40a2de;
    white-space: nowrap;
    margin: 0 6 0 6;
    border-width: 1px;
    border-style: solid;
    vertical-align: middle;
    width:70px;
  }
  .panel-body {
    padding-top: 0px;
  }
 .toggle-btn {
    color: #40a2de;
    text-decoration: underline;
    padding-right: 13px;
    background: url(../images/fa-angle-double-down_40a2de_12.png) no-repeat center right;
    line-height: 13px;
    display: inline-block;
    border-bottom: 1px solid #40a2de;
    cursor: pointer;
}
.toggle-btn.expanded {
    background-image: url(../images/fa-angle-double-up_40a2de_12.png);
}
.dashline-div {
    height: 0px;
    border-top: 1px dashed #ccc;
    margin: 7 0 7 0
}
</style>
