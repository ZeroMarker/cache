			<div class="hisui-panel" title="处方明细" data-options="fit:true,headerCls:'panel-header-gray',iconCls:'icon-paper'">
				<table id="OrderList"></table>	
			</div>
		</div>
		<div class="diaglist_div" data-options="region:'center',split:true,border:false" style="padding:0 10px 0 0;">
			<div class="hisui-panel" title="诊断明细" data-options="fit:true,headerCls:'panel-header-gray',iconCls:'icon-paper',tools:'#tools'">
				<table id='DiagList'></table>
			</div>
			<div id="tools" style="text-align: right;">
				<input class='hisui-radio' type="radio" label='全部' name='DiagType' checked value='ALL'>
