<div data-options="region:'west',split:true,border:false" style="width:500px;padding:10px 0 0px 10px;">
	<div class="hisui-panel" title="处方列表" data-options="fit:true,headerCls:'panel-header-gray',iconCls:'icon-paper'">
		<table id="PrescNoList"></table>
	</div>	
</div>
<div data-options="region:'center',border:false">
	<div class="hisui-layout" data-options="fit:true,border:false">  
