<csp:method name=OnPreHTTP arguments="" returntype=%Boolean>
 	i ##Class(websys.SessionEvents).SessionExpired() 
	q 1
</csp:method>
<HTML>
<head>
        <title>质控消息</title>
        <script language="cache" runat="server">
  		s userID = %session.Get("LOGON.USERID")
		s userLoc = %session.Get("LOGON.CTLOCID")
		s ssgroupID = %session.Get("LOGON.GROUPID")
	   </script>
	    <script type="text/javascript">
		var userID = '#(userID)#';
		var userLoc = '#(userLoc)#';
		var ssgroupID = '#(ssgroupID)#';
	   </script>
		<link rel="stylesheet" type="text/css" href="../scripts_lib/hisui-0.1.0/dist/css/hisui.css" />
        <script type="text/javascript" src="../scripts_lib/hisui-0.1.0/dist/js/jquery-1.11.3.min.js" charset="utf-8"></script>
        <script type="text/javascript" src="../scripts_lib/hisui-0.1.0/dist/js/jquery.hisui.js" charset="utf-8"></script>
        <script type="text/javascript" src="../scripts_lib/hisui-0.1.0/dist/js/locale/hisui-lang-zh_CN.js" charset="utf-8"></script>
        <script type="text/javascript" src="../scripts/websys.jquery.js" charset="utf-8"></script>
        <script type="text/javascript" src="../../dist/plugin/datagrid-scrollview.js"></script>
        <script src="../scripts/epr/JQuery/datagrid-detailview.js"></script>
	    <script src="../scripts/DHC.EMR.Quality.MessageSummary.js"></script>
		<!--script src="../scripts/epr/js/eprMessageSummary.js"></script-->
	    
</head>

<body class="hisui-layout" data-options="fit:true,border:false" style="border:none;">
	<div data-options="region:'north',split:true,headerCls:'panel-header-gray',border:true" style="height:320px; border:none;padding:5px 5px 0px 5px">
		<div class="hisui-panel" title="质控消息查询" data-options="headerCls:'panel-header-gray',iconCls:'icon-paper',fit:true" >
			<div id="messageListTableTBar" style="padding:10px;height:33px">	
				<div style="float:left">
					    <span style="margin-left:10px;margin-right:10px;">消息状态 </span>
					    <input class='hisui-radio' type="radio" checked=true label='未处理消息' name='msgTypeRadio' id="uMessageRadio" value='U|U|U'></input>
					    <input class='hisui-radio' type="radio" label='医生已处理消息' name='msgTypeRadio' id="eMessageRadio" value='R|E|U'></input>
					    <input class='hisui-radio' type="radio" label='确认已修复消息' name='msgTypeRadio' id="cMessageRadio" value='R|E|C'></input>
		 				<span style="margin-left:20px;margin-right:0px;">开始时间 </span><input id="inputCreateDateStart" class="hisui-datebox" />
		 				<span style="margin-left:20px;margin-right:0px;">结束时间 </span><input id="inputCreateDateEnd" class="hisui-datebox" />
		 		</div>	
		 		<div style="float:right;">
	 				<a id="ConfirmBtn" href="#" data-options="iconCls:'icon-ok'" class="hisui-linkbutton" style="margin-right:15px;">确认已修复</a>		
	 			</div>
			</div>	
			<div class="hisui-datagrid" id="messageListTable" data-options="border:false" style="border:none;height:275px;"></div>
		</div>
	</div>
	<div data-options="region:'center',headerCls:'panel-header-gray',border:false" style="border:none;">
		<div class="hisui-layout" data-options="fit:true">
			<div data-options="region:'west',split:true" style="border:none; width:820px; padding:0px 0px 5px 5px">	
				<div class="hisui-panel" title="医生列表" data-options="headerCls:'panel-header-gray',iconCls:'icon-person',fit:true" style="width:815px,margin-left:40px;margin-bottom:40px">
					<div id="docListTableTBar" style="height:30;padding: 5px 0px 5px 10px;">	
							<span style="margin-left:20px;margin-right:10px;">医生所在科室</span> <select class="hisui-combobox" id="inputDocLoc" name="inputDocLoc" style="width:130px;"></select>
							<!--span style="margin-left:10px;margin-right:10px;">医生所在安全组</span> <select id="inputDocSSGroup" name="inputDocSSGroup" style="width:75px;height:30px;"></select-->
							<span style="margin-left:10px;margin-right:10px;">医生姓名</span> <input id="inputDocName" class="hisui-validatebox textbox" style="width:100px;"/>
							<a href="#" id="docSearchBtn" class="hisui-linkbutton" iconCls="icon-w-find" style="margin-left:10px;">查询</a>
							<a href="#" id="docResetBtn" class="hisui-linkbutton" iconCls="icon-w-update" style="margin-left:10px;">清屏</a>
					</div>
					<div class="hisui-datagrid" id="docListTable" data-options="border:false" style="border:none;height:254px;"></div>
				</div>		
			</div>
			<div data-options="region:'center'" style="border:none;padding:0px 5px 5px 0px">
				<div class="hisui-panel" title="发消息" data-options="headerCls:'panel-header-gray',iconCls:'icon-paper',fit:true" style="margin-right:40px;margin-bottom:40px">
					<div style="padding:5px 20px 10px 20px">
						<form id="ff" method="post">
							<table cellpadding="3" >
								<tr>
									<td>收件人</td>
									<td>
										<input class="hisui-validatebox" type="text" name="inputReceiveUserName" id="inputReceiveUserName" readonly="true" disabled data-options="required:true" style="width:350px;height:30px;" />
										<input type="hidden" name="inputReceiveUserID" id="inputReceiveUserID" />
									</td>
								</tr>
								<tr>
									<td>紧急程度</td>
									<td>
										<select id="inputPriority" name="inputPriority" style="width:357px;height:30px;"></select>
										<input type="hidden" name="inputPriorityValue" id="inputPriorityValue" />
									</td>
								</tr>
								<tr>
									<td>消息标题</td>
									<td><input class="hisui-validatebox textbox" type="text" name="inputMessageHeader" id="inputMessageHeader" data-options="required:true" style="width:350px;height:30px;" /></td>
								</tr>
								<tr>
									<td>消息内容</td>
									<td><textarea class="hisui-validatebox textbox" name="inputMessage" id="inputMessage" style="width:350px;height:58px;" ></textarea></td>
								</tr>
								<tr>
									<td></td>
									<td align="right">
										<a href="#" id="sendBtn" class="hisui-linkbutton" >发送</a>
									</td>
								</tr>
							</table>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div data-options="region:'south'" style="border:none;height:1px"></div>
</body>

</HTML>

