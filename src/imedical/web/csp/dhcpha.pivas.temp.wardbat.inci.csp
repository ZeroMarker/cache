<!-- 住院配液中心模板 病区交接单药品汇总 -->
<head>
    <style>
        td {
            line-height: 7mm;
            padding-left: 1mm;
            padding-right: 1mm;
            border-right: 1px solid #000;
            border-bottom: 1px solid #000;
            white-space: nowrap;
            overflow: hidden;
        }

        div {
            white-space: nowrap;
            overflow: hidden;
        }

        tfoot td {
            border: 0;
        }

        * {
            font-size: 14px;
            font-family: "宋体", verdana, helvetica, arial, sans-serif;
        }
    </style>
</head>
<!-- <script id="tempPivasLabel" type="text/x-handlebars-template"> -->
{{#each this}}
<table border=0 cellpadding=0 cellspacing=0 style="width: 190mm;">
    <thead style="visibility: hidden;">
        <td style="width: 100mm;border-left: 1px solid #000;">
        </td>
        <td style="width: 20mm;">
        </td>
        <td style="width: 20mm;">
        </td>
        <td style="width: 10mm;text-align: center;">
        </td>
        <td style="width: 10mm;text-align: center;">
        </td>
    </thead>
    <thead>
        <td colspan=10 style="padding-left:22mm;border-right: 0;">
            <div style="font-size: 16px;font-weight: bold;">
                {{hospDesc}}{{recLocDesc}}交接单{{rePrint}}
            </div>
            <div style="padding-top:0mm;">
                <div style="float: left;">
                    用药日期: {{doseDateRange}}
                </div>
                <div style="float:left;padding-left:5mm;">
                    打印信息：{{printDateTime}}
                </div>
                <div style="float:left;padding-left:5mm;">
                    {{printUserName}}
                </div>
                <div style="clear: both;"></div>
            </div>
            <div style="padding-top:0mm;">
                <div style="float: left;">
                    {{pogsNo}}
                </div>
                <div style="float:left;padding-left:5mm;">
                 {{wardDesc}}
                </div>
                <div style="float:left;padding-left:5mm;">
                    批次：{{batNoCntStr}}
                </div>
            </div>
        </td>
    </thead>
    <tbody>
        {{#each rows}}
        <tr>
            <td style="width: 100mm;border-left: 1px solid #000;">
                <div>{{inciDesc}}</div>
            </td>
            <td style="width: 20mm;">
                <div>{{manfDesc}}</div>
            </td>
            <td style="width: 20mm;">
                {{spec}}
            </td>
            <td style="width: 10mm;text-align: center;">
                {{qty}}
            </td>
            <td style="width: 10mm;text-align: center;">
                {{uomDesc}}
            </td>
        </tr>
        {{/each}}
    </tbody>
    <tfoot>
        <td colspan=10>
            <div style="float: left;width:23%;">
                送药人：
            </div>
            <div style="float: left;width:23%;">
                送药时间：
            </div>
            <div style="float: left;width:23%;">
                接收人：
            </div>
            <div style="float: left;width:23%;">
                接收时间：
            </div>
        </td>
    </tfoot>
</table>
{{/each}}

