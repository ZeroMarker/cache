<!DOCTYPE html>
<!--配液药品信息维护
	csp:dhcpha.pivas.drugmaintain.csp
	js: scripts/pharmacy/pivas/drugmaintain.js
-->
<HTML XMLNS=TRAK>

<HEAD>
    <title>
        <TRAK:TRANSLATE id=title>##(%session.Get("TITLE"))##</TRAK:TRANSLATE>
    </title>
    <TRAK:HEAD> </TRAK:HEAD>
    <HISUI/>
    <link rel="stylesheet" type="text/css" href="../scripts/pharmacy/common/css/dhcpha.hisui.css"></link>
    <style>
	.panel-header-card-gray + .panel-body {
	    border-color:#cccccc;
	}
    </style>
</HEAD>

<body>
    <div class="hisui-layout" fit="true" border="false">
        <div data-options="region:'center'" class="dhcpha-hisui-container">
            <div class="hisui-layout" fit="true" border="false">
                <div data-options="region:'center',title:'配液药品',split:true,headerCls:'panel-header-gray',iconCls:'icon-panel-drug'">
                    <table id="gridIncItm"></table>
                </div>
                <div data-options="region:'east',title:'配液药品信息维护',split:true,width:300,headerCls:'panel-header-gray',iconCls:'icon-panel-pivas-drug'" style="overflow:hidden;padding:10px;">
                    <div class="hisui-panel" title="科室药品信息" style="width:100%;" data-options="headerCls:'panel-header-card'" style="padding-top:10px;">
                        <table class="dhcpha-north-tbl" cellspacing=0 cellpadding=0 style="padding-left:13px">
                            <tr>
                                <td>
                                    <label for="cmbConTable">配置台</label>
                                </td>
                                <td>
                                    <input id="cmbConTable" class="hisui-validatebox" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label for="txtStoreInfo">储存条件</label>
                                </td>
                                <td>
                                    <input id="txtStoreInfo" class="hisui-validatebox" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label for="txtUseInfo">用药说明</label>
                                </td>
                                <td>
                                    <input id="txtUseInfo" class="hisui-validatebox" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label for="txtCoef">配置系数</label>
                                </td>
                                <td>
                                    <input id="txtCoef" class="hisui-numberbox" style="width:41px" data-options="precision:2"/>~
                                    <input id="txtConCoef" class="hisui-numberbox" style="width:41px" data-options="precision:2"/>~
                                    <input id="txtSameCoef" class="hisui-numberbox" style="width:41px" data-options="precision:2"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div style="height:10px"></div>
                    <div class="hisui-panel" title="药品公共信息" style="width:270px;" data-options="headerCls:'panel-header-card'" style="padding-top:10px;">
                        <table class="dhcpha-north-tbl" cellspacing=0 cellpadding=0 style="padding-left:13px">
                            <tr>
                                <td>
                                    <label for="cmbPhcDrugType">主辅用药 </label>
                                </td>
                                <td>
                                    <input id="cmbPhcDrugType" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label for="chkMenstr">溶媒</label>
                                </td>
                                <td style="text-align:left;padding-left:6px">
                                    <input id="chkMenstr" type="checkbox" class="hisui-checkbox" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label for="txtIvgttSpeed">滴速 </label>
                                </td>
                                <td>
                                    <input id="txtIvgttSpeed" class="hisui-validatebox" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label for="txtLabelSign">标签标识 </label>
                                </td>
                                <td>
                                    <input id="txtLabelSign" class="hisui-validatebox" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label for="cmbPhcPivaCat">配液小类 </label>
                                </td>
                                <td>
                                    <input id="cmbPhcPivaCat" />
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div style="text-align:center;margin-top:10px">
                        <a class="hisui-linkbutton" plain='false' iconCls="icon-w-save" id="btnSave">保存</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="gridIncItmBar">
        <table class="dhcpha-north-tbl" cellspacing=0 cellpadding=0>
            <tr>
                <td>
                    <input id="cmbPivaLoc" placeholder="配液中心..." />
                </td>
                <td>
                    <input id="cmbStkCat" placeholder="库存分类..." />
                </td>
                <td>
                    <input id="txtAlias" class="hisui-validatebox" placeholder="别名..." />
                </td>
                <td>
                    <input id="chkMyLoc" type="checkbox" class="hisui-checkbox" checked/><label for="chkMyLoc">仅本科室</label>
                </td>
                <td>
                    <a class="hisui-linkbutton" plain='false' iconCls="icon-w-find" id="btnFind" >查询</a>
                </td>
            </tr>
        </table>
    </div>
    <script type="text/javascript" src="../scripts/pharmacy/common/js/dhcpha.hisui.extend.js"></script>
    <script type="text/javascript" src="../scripts/pharmacy/common/js/dhcpha.hisui.com.js"></script>
    <script type="text/javascript" src="../scripts/pharmacy/pivas/common.js"></script>
    <script type="text/javascript" src="../scripts/pharmacy/pivas/drugmaintain.js"></script>
</body>

</HTML>