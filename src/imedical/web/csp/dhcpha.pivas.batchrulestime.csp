<!DOCTYPE html>
<!--配液排批规则-时间规则
	csp:dhcpha.pivas.batchrulestime.csp
	js: scripts/pharmacy/pivas/batchrulestime.js
-->
<HTML XMLNS=TRAK>

<HEAD>
    <title>
        <TRAK:TRANSLATE id=title>##(%session.Get("TITLE"))##</TRAK:TRANSLATE>
    </title>
    <TRAK:HEAD></TRAK:HEAD>
    <HISUI />
    <link rel="stylesheet" type="text/css" href="../scripts/pharmacy/common/css/dhcpha.hisui.css" />
</HEAD>

<body>
    <div class="hisui-layout" fit="true">
        <div data-options="region:'center',split:true,headerCls:'panel-header-gray'" class="dhcpha-hisui-container">
            <div class="hisui-layout" fit="true" border="false">
                <div data-options="region:'center',title:'',headerCls:'panel-header-gray'" class="dhcpha-hisui-border"
                    style="border-radius: 4px;">
                    <div id="gridBatTime" data-options="fit:true" border="false">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="gridBatTimeBar">
        <table>
            <tr>
                <td>
                    <input id="cmbPivaLoc" class="hisui-combobox" />
                </td>
                <td>
                    <div class="datagrid-btn-separator"></div>
                </td>
                <td>
                    <a class="hisui-linkbutton" plain='true' iconCls="icon-add" id="btnAdd">新增</a>
                </td>
                <td>
                    <a class="hisui-linkbutton" plain='true' iconCls="icon-edit" id="btnUpdate">编辑</a>
                </td>
                <td>
                    <a class="hisui-linkbutton" plain='true' iconCls="icon-remove" id="btnDelete">删除</a>
                </td>
            </tr>
        </table>
    </div>

    <div id="gridBatTimeWin" class="hisui-dialog" title="时间规则列表" closed="true" style="width:300px;height:360px;"
        data-options="modal:true,
	buttons:[{
		text:'确定',
		handler:function(){
			SavePIVABatTime();
		}
	},{
		text:'取消',
		handler:function(){
			$('#gridBatTimeWin').window('close');
		}
	}]">

        <div class="hisui-layout" fit="true" style="overflow:hidden">
            <div data-options="region:'center'" class="dhcpha-hisui-container" style="padding:15px">
                <div class="hisui-layout" data-options="fit:true">
                    <div data-options="region:'center'" border="false" style="overflow:hidden">
                        <table class="dhcpha-north-tbl">
                            <tr>
                                <td>
                                    <label for="timeStart"><span style="color:red">*</span>用药开始时间</label>
                                    <input id="timeStart" class="hisui-timespinner" showSeconds="true"
                                        style="width:154px" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label for="timeEnd"><span style="color:red">*</span>用药结束时间</label>
                                    <input id="timeEnd" class="hisui-timespinner" showSeconds="true"
                                        style="width:154px" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label for="txtBatNo"><span style="color:red">*</span>批次</label>
                                    <input id="txtBatNo" class="hisui-validatebox" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    关联医嘱
                                    <input id="cmbSeqType" type="text" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label for="timePY">要求配送时间</label>
                                    <input id="timePY" class="hisui-timespinner" showSeconds="true"
                                        style="width:154px" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label for="cmbPriority">医嘱优先级</label>
                                    <input id="cmbPriority" class="hisui-combobox" />
                                </td>
                            </tr>
                            <tr style="display: none">
                                <td>
                                    <label for="cmbWard">病区</label>
                                    <input id="cmbWard" />
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="../scripts/pharmacy/common/js/dhcpha.hisui.extend.js"></script>
    <script type="text/javascript" src="../scripts/pharmacy/common/js/dhcpha.hisui.com.js"></script>
    <script type="text/javascript" src="../scripts/pharmacy/pivas/common.js"></script>
    <script type="text/javascript" src="../scripts/pharmacy/pivas/batchrulestime.js"></script>
</body>

</HTML>