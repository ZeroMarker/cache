<csp:method name=OnPreHTTP arguments="" returntype=%Boolean>
	i ##Class(websys.SessionEvents).SessionExpired() q 1
	q 1
</csp:method>
<csp:content charset="UTF-8">

<script language="cache" runat="server">

	s Action=$Get(%request.Data("actiontype",1))
	s Start=$Get(%request.Data("start",1))
	s Limit=$Get(%request.Data("limit",1))
	s Sort=$Get(%request.Data("sort",1))
	s Dir=$Get(%request.Data("dir",1))

	s StrParam=$Get(%request.Data("strParam",1))
	
	s UserId=$Get(%request.Data("UserId",1))
	s LocId=$Get(%request.Data("LocId",1))
	s ListDetail=$Get(%request.Data("ListDetail",1))
	
	//查询待做封面的入库/退货单列表
	i Action = "querygdrec" d
	.s result = ##class(web.DHCSTM.PayCover).jsDHCINGdRecList(Start,Limit,StrParam)
	.i result = "" d
	..w "{results:0,rows:[]}"
	.e  d
	..w result
	
	//保存付款封面
	i Action = "Save" d
	.s result = ##class(web.DHCSTM.PayCover).Save(ListDetail,UserId,LocId)
	.i result>0 d
	..w "{success:'true',info:'"_result_"'}"
	.e  d
	..w "{success:'false',info:'"_result_"'}"
	//修改付款封面(添加明细)
	i Action = "Update" d
	.s CvrID=$Get(%request.Data("CvrID",1))
	.s result = ##class(web.DHCSTM.PayCover).Update(ListDetail,UserId,LocId,CvrID)
	.i result=0 d
	..w "{success:'true',info:''}"
	.e  d
	..w "{success:'false',info:'"_result_"'}"
	//查找封面主表信息
	i Action = "Query" d
	.s ListParam=$Get(%request.Data("ParamStr",1))
	.d ##class(web.DHCSTM.PayCover).Query(Start,Limit,ListParam)
	
	//查找付款封面对应的入库退货单
	i Action = "QueryCoverRec" d
	.S Parref=$Get(%request.Data("Parref",1))
	.d ##class(web.DHCSTM.PayCoverItm).jsQueryCoverRec(Parref)
	
	i Action = "Delete" d
	.s CoverId=$Get(%request.Data("CoverId",1))
	.s ret=##class(web.DHCSTM.PayCover).Delete(CoverId)
	.i ret=0  d
	..w "{success:'true',info:'"_ret_"'}"
	.e  d
	..w "{success:'false',info:'"_ret_"'}"
	.
	
	i Action = "Select" d
    .s CoverId=$Get(%request.Data("CoverId",1))
    .s ret=##class(web.DHCSTM.PayCover).Select(CoverId)	
    .w "{success:'true',info:'"_ret_"'}"
	
	
	
</script>