<div class="hisui-layout" data-options="fit:true">
    <div data-options="region:'center',border:false,collapsible:false" class="ma-panel" style="padding:10px;">
        <table id="gridHandHyReg" data-options="toolbar:'#ToolBar'"></table>
        <div id="ToolBar">
            <table  id="TabReg" class="search-table">
                <tr>
                    <td style="padding-left:10px;padding-right:10px;">
                        <label for="cboHospital">#(..Get("医院"))#</label>
                    </td>
                    <td>
                        <input class="hisui-combobox textbox" id="cboHospital" style="width:240px" />
                    </td>
                    <td style="padding-left: 30px; padding-right: 10px;">
                        <label for="cboObsLoc">#(..Get("调查科室/病区"))#</label>
                    </td>
                    <td>
                        <input class="hisui-combobox textbox" id="cboObsLoc" style="width:180px" />
                    </td>
                    <td style="padding-left: 30px; padding-right: 10px;">
                        <label for="cboObsType">#(..Get("调查方式"))#</label>
                    </td>
                    <td>
                        <input class="hisui-combobox textbox" id="cboObsType" style="width:80px" />
                    </td>
                    <td style="padding-left: 30px; padding-right: 10px;">
                        <label for="cboObsPage">#(..Get("调查页"))#</label>
                    </td>
                    <td>
                        <input id="cboObsPage" class="hisui-combobox textbox" style="width: 80px" />
                    </td>
                    <td style="padding-left: 30px; padding-right: 10px;">
                        <label for="ObsDate">#(..Get("调查日期"))#</label>
                    </td>
                    <td>
                        <input id="ObsDate" class="hisui-datebox textbox" style="width: 150px" />
                    </td>
                    <td style="padding-left: 30px; padding-right: 10px;">
                        <label for="txtObsUser">#(..Get("调查人"))#</label>
                    </td>
                    <td>
                        <input class="textbox" id="txtObsUser" style="width: 100px">
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <div data-options="region:'south',border:false,bodyCls:'panel-header-gray'" class="page-footer ma-panel">
        <a id="btnSave" class="hisui-linkbutton">保存</a>
        <a id="btnPrintNull" class="hisui-linkbutton">打印空白页</a>
		<a id="btnPrint" class="hisui-linkbutton">打印</a>
        <a id="btnDelete" class="hisui-linkbutton">删除</a>
    </div>
</div>
