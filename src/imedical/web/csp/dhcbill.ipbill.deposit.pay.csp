<div class="hisui-layout" data-options="fit:true">
	<div data-options="region:'north',border:false" style="height:'auto';">
		<table class="search-table">
			<tr>
				<td class="r-label td-first-col-58"><label>金额</label></td>
				<td><input id="payAmt" class="hisui-numberbox textbox" data-options="precision:2,min:0,validType:'checkMaxAmt'" style="color: #FF0000;font-weight: bold;"/></td>
				<td class="r-label r-label-1"><label>支付方式</label></td>
				<td><input id="payMode" class="hisui-combobox textbox"/></td>
				<td class="r-label r-label-1"><label>押金类型</label></td>
				<td><input id="payDepositType" class="hisui-combobox textbox"/></td>
			</tr>
			<tr>
				<td class="r-label"><label>当前票号</label></td>
				<td><input id="payRcptNo" class="textbox" style="font-weight: bold;" disabled/><a href="javascript:;" id="btn-payRcptTip" class="hisui-linkbutton" data-options="iconCls:'icon-tip',plain:true"></a></td>
				<td class="r-label r-label-1"><label>银行</label></td>
				<td><input id="bank" class="hisui-combobox textbox"/></td>
				<td class="r-label r-label-1"><label>支行</label></td>
				<td><input id="bankBranch" class="textbox"/></td>
			</tr>
			<tr>
				<td class="r-label"><label>支票号</label></td>
				<td><input id="checkNo" class="textbox"/></td>
				<td class="r-label r-label-1"><label>账户号</label></td>
				<td><input id="payAccNo" class="textbox"/></td>
				<td class="r-label r-label-1"><label>单位</label></td>
				<td><input id="company" class="textbox"/></td>
			</tr>
		</table>
		<div style="text-align:center;padding-bottom:10px;">
			<a href="javascript:;" class="hisui-linkbutton dep-panel-btn" id="btn-pay">交押金(F9)</a>
			<div style="display:inline-block;margin:0 5px;"></div>
			<a href="javascript:;" class="hisui-linkbutton dep-panel-btn" id="btn-reprint">补打收据</a>
			<div style="display:inline-block;margin:0 5px;"></div>
			<a href="javascript:;" class="hisui-linkbutton dep-panel-btn" id="btn-abort">作废</a>
			<div style="display:inline-block;margin:0 5px;"></div>
			<a href="javascript:;" class="hisui-linkbutton dep-panel-btn" id="btn-voidInvNo">跳号</a>
		</div>
	</div>
	<div data-options="region:'center',border:false" style="border-top:1px solid #cccccc;">
		<table id="payDepList"></table>
	</div>
</div>
<form method="get">
	<input id='requiredFlag' name='requiredFlag' type='hidden'/>
	<input id='transferFlag' name='transferFlag' type='hidden'/>
</form>
<script type="text/javascript" src="../scripts/dhcbill/dhcipbill/dhcbill.ipbill.deposit.pay.js"></script>