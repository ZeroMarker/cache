<!--NICU患者日志(科室患者信息)-->
<div class="hisui-layout" data-options="fit:true">
    <!--患者信息-->
    <div data-options="region:'center',border:false,collapsible:false" style="padding: 10px 0px 10px 10px; overflow: hidden; ">
        <table id="gridNICULoc" data-options="toolbar:'#ToolBarListN'"></table>
        <div id="ToolBarListN" style="text-align: right">
            <a class="hisui-linkbutton" data-options="plain:true,iconCls:'icon-gen'" href="#" id="btnNICUGreat" style="width:80px;">生成</a>
            <a class="hisui-linkbutton" data-options="plain:true,iconCls:'icon-submit'" href="#" id="btnNICUSubmit" style="width: 80px;">提交</a>
        </div>
    </div>
    <!--三管信息-->
    <div id="west" data-options="region:'east',border:false,collapsible:false" style="width:415px;padding:10px;">
        <table id="gridNICUOE" data-options="toolbar:'#ToolBarOEListN'"></table>
        <div id="ToolBarOEListN" style="text-align: center; box-sizing: border-box; height: 30.6px; padding-top: 5px;">
            <a href="#" id="btnNICUAll" style="display: inline-block; width: 30%; background-color: #dbedf9;">全部</a>
            <a href="#" id="btnNICUPICC" style="display: inline-block; width:37%;">脐/中心静脉插管</a>
            <a href="#" id="btnNICUVAP" style="display: inline-block; width:30%;">呼吸机</a>
        </div>
    </div>
</div>
<!--补体重-->
<div id="LayerWeight" style="overflow:hidden;padding-right:10px;display:none">
    <table class="search-table">
        <tr>
            <td class="r-label">
                <label for="txtCode">体重</label>
            </td>
            <td>
                <input class="textbox" id="txtWeight" data-options="required:true" style="width:150px">
            </td>
        </tr>
        <tr>
            <td colspan="2" style="text-align:center">
                <a id="btnSaveWeight" class="hisui-linkbutton">保存</a>
            </td>
        </tr>
    </table>
</div>
<!--补Apgar评分-->
<div id="LayerApgar" style="overflow:hidden;padding-right:10px;display:none">
    <table class="search-table">
        <tr>
            <td class="r-label">
                <label for="txtCode">Apgar评分</label>
            </td>
            <td>
                <input class="textbox" id="txtApgar" data-options="required:true" style="width:150px">
            </td>
        </tr>
        <tr>
            <td colspan="2" style="text-align:center">
                <a id="btnSaveApgar" class="hisui-linkbutton">保存</a>
            </td>
        </tr>
    </table>
</div>	