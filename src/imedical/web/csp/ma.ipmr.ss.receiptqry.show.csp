<div id="main" class="hisui-layout" data-options="fit:true">
	<div data-options="region:'center',border:false,collapsible:false">
		<table id="gridReceipt" data-options="toolbar:'#QueryToolBar',border:true" ></table>
	</div>
</div>
<div id="QueryToolBar" style="display: none;" class="hisui-toolbar">
	<div data-options="" style="">
		<table class="search-table">
			<tr>
			    <td class="r-label"><label>#(..Get("医院"))#</label></td>
				<td><input class="hisui-combobox textbox" id="cboHospital" style="width:147px;" /></td>
				<td class="r-label"><label>#(..Get("就诊类型"))#</label></td>
				<td><input class="hisui-combobox textbox" id="cboAdmType" style="width:147px;" /></td>
				<td class="r-label"><label>#(..Get("登记日期"))#</label></td>
				<td><input class="hisui-datebox textbox" id="dfDateFrom" style="width:147px;" /></td>
				<td class="r-label"><label>#(..Get("结束日期"))#</label></td>
				<td><input class="hisui-datebox textbox" id="dfDateTo" style="width:147px;" /></td>
				<td class="r-label"><a id="btnReceiptQry" href="#" class="hisui-linkbutton" data-options="iconCls:'icon-w-find'">查询</a></td>
				<td class="r-label" style="padding-left: 0px;"><a id="btnNotReceiptQry" href="#" class="hisui-linkbutton" data-options="iconCls:'icon-w-unrecipt'">漏诊查询</a></td>
				<td class="r-label" style="padding-left: 0px;"><a id="btnExport" href="#" class="hisui-linkbutton" data-options="iconCls:'icon-w-export'">导出</a></td>
			</tr>
			<tr>
				<td class="r-label"><label>#(..Get("入院科室"))#</label></td>
				<td><input class="hisui-combobox textbox" id="cboLoc" style="width:147px;" /></td>
				<td class="r-label"><label>#(..Get("病案号"))#</label></td>
				<td><input class="hisui-textbox textbox" id="txtMrNo" style="width:140px;" /></td>
				<td class="r-label"><label>#(..Get("登记号"))#</label></td>
				<td><input class="hisui-textbox textbox" id="txtRegNo" style="width:140px;" /></td>
			</tr>
		</table>
	</div>
</div>


