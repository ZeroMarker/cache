 * Description: 获取刷卡卡号，用于条码卡的卡支付验证
-->
<!DOCTYPE html>
<html>
<head>
	<TITLE><EXTHEALTH:TRANSLATE id=title>##(%session.Get("TITLE"))##</EXTHEALTH:TRANSLATE></TITLE>
	<EXTHEALTH:HEAD></EXTHEALTH:HEAD>
	<HISUI/>
	<style>
	.search-table {
		border-collapse: separate;
		border-spacing: 0 10px;
	}
	.r-label {
		padding: 0 10px;
	}
	</style>
</head>

<body style="background-color:#FFFFFF;padding:10px;">
	<div class="hisui-layout" data-options="fit:true">
		<div data-options="region:'center',border:false,collapsible:false" >
			<div class="hisui-panel" data-options="title:'刷卡',fit:true,headerCls:'panel-header-gray',iconCls:'icon-read-card'">
				<table class="search-table">
					<tr>
						<td class="r-label">卡号</td>
						<td>
							<input id="cardNo" class="hisui-validatebox textbox" placeholder="请刷卡：" style="width:230px;">
						</td>
					</tr>
				</table>
			</div>
		</div>
	</div>
	<script type="text/javascript">
		setTimeout(function() {
			$("#cardNo").focus();
		}, 100);
		$("#cardNo").keydown(function (e) {
			var cardNo = $("#cardNo").val();
			var count = cardNo.length;
			if(count == 0) {
				var start = new Date().getTime();
				charA = start;
			}
			if(count > 0) {
				charB = new Date().getTime();
				if((charB - charA) > 300){
					$("#cardNo").val("");
					return false;
				}
			}
			var key = websys_getKey(e);
			if (key == 13) {
				var myCardNo = $("#cardNo").val();
	    		var mySecurityNo = "";
				setTimeout(function() {
					window.returnValue = 0 + "^" + myCardNo + "^" + mySecurityNo;
					window.close();
				}, 300);
			}
		});
	</script>
</body>
</html>