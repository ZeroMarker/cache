<!DOCTYPE html>
<!--配液流程定制
	csp:dhcpha.pivas.parastate.csp
	js: scripts/pharmacy/pivas/parastate.js
-->
<HTML XMLNS=TRAK>

<HEAD>
	<title>
		<TRAK:TRANSLATE id=title>##(%session.Get("TITLE"))##</TRAK:TRANSLATE>
	</title>
	<TRAK:HEAD></TRAK:HEAD>
	<HISUI />
	<link rel="stylesheet" type="text/css" href="../scripts/pharmacy/common/css/dhcpha.hisui.css">
	</link>
</HEAD>
<style>
	.pha-row {
		margin-top: 10px;
		margin-bottom: 10px;
	}

	.pha-col:first-child {
		margin-left: -1px;
	}

	/* inline-block 有间隙,大概4px */
	.pha-col {
		display: inline-block;
		padding-left: 10px;
		margin-left: -4px;
	}
</style>

<body>
	<div class="hisui-layout" fit="true">
		<div data-options="region:'center',split:true,headerCls:'panel-header-gray'" class="dhcpha-hisui-container">
			<div class="hisui-layout" fit="true">
				<div data-options="region:'center',headerCls:'panel-header-gray',title:'',iconCls:'icon-setting'"
					class="dhcpha-hisui-border" style="border-radius: 4px;">
					<table id="gridParaState"></table>
				</div>
			</div>
		</div>
	</div>
	<div id="gridParaStateBar">
		<table>
			<tr>
				<td>
					<input id="cmbPivaLoc"></input>
				</td>
				<td>
					<div class="datagrid-btn-separator"></div>
				</td>
				<td>
					<a class="hisui-linkbutton" plain='true' iconCls="icon-add" id="btnAdd">新增</a>
				</td>
				<td>
					<a class="hisui-linkbutton" plain='true' iconCls="icon-edit" id="btnUpdate">修改</a>
				</td>
				<td>
					<a class="hisui-linkbutton" plain='true' iconCls="icon-remove" id="btnDelete">删除</a>
				</td>
			</tr>
		</table>
	</div>
	<div id="gridParaStateWin" class="hisui-dialog" title="配液流程定制" closed="true" style="width:320px;height:400px;"
		data-options="iconCls:'',modal:true,
	buttons:[{
		text:'确定',
		handler:function(){
			SaveParaState();
		}
	},{
		text:'取消',
		handler:function(){
			$('#gridParaStateWin').window('close');
		}
	}]">
		<div class="hisui-layout" fit="true">
			<div data-options="region:'center'" class="dhcpha-hisui-container" style="padding:0px">
				<div class="hisui-layout" data-options="fit:true">
					<div data-options="region:'center'" border="false">
						<div style="padding-top:10px;padding-left:20px">
							<div class="pha-row">
								<div class="pha-col">
									<label for="cmbIOType">流程类型</label>
								</div>
								<div class="pha-col">
									<input id="cmbIOType" />
								</div>
							</div>
							<div class="pha-row">
								<div class="pha-col">
									<label for="cmbPsName">流程名称</label>
								</div>
								<div class="pha-col">
									<input id="cmbPsName" />
								</div>
							</div>
							<div class="pha-row">
								<div class="pha-col">
									<label for="chkSystem">系统流程</label>
								</div>
								<div class="pha-col">
									<input id="chkSystem" type="checkbox">
								</div>
							</div>
							<div class="pha-row">
								<div class="pha-col">
									<label for="chkUse">使用标识</label>
								</div>
								<div class="pha-col">
									<input id="chkUse" type="checkbox">
								</div>
							</div>
							<div class="pha-row">
								<div class="pha-col">
									<label for="chkSingle">单独执行</label>
								</div>
								<div class="pha-col">
									<input id="chkSingle" type="checkbox">
								</div>
							</div>
							<div class="pha-row">
								<div class="pha-col">
									<label for="chkDisp">配液减库</label>
								</div>
								<div class="pha-col">
									<input id="chkDisp" type="checkbox">
								</div>
							</div>
							<div class="pha-row">
								<div class="pha-col">
									<label for="chkPackDisp">打包减库</label>
								</div>
								<div class="pha-col">
									<input id="chkPackDisp" type="checkbox">
								</div>
							</div>
							<div class="pha-row">
								<div class="pha-col">
									<label for="chkPackIgnore">打包忽略</label>
								</div>
								<div class="pha-col">
									<input id="chkPackIgnore" type="checkbox">
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<script type="text/javascript" src="../scripts/pharmacy/common/js/dhcpha.hisui.extend.js"></script>
	<script type="text/javascript" src="../scripts/pharmacy/common/js/dhcpha.hisui.com.js"></script>
	<script type="text/javascript" src="../scripts/pharmacy/pivas/common.js"></script>
	<script type="text/javascript" src="../scripts/pharmacy/pivas/parastate.js"></script>
</body>

</HTML>