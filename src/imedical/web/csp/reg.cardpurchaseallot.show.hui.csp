<div class="hisui-layout" fit="true">
	<div data-options="region:'north',border:false,collapsible:false" style="padding:10px 10px 0 0px;">
		<div class="hisui-panel" fit="true" data-options="title:'',headerCls:'panel-header-gray',iconCls:'icon-apply-check'" style="border:0px solid #ccc;border-bottom:1px solid #ccc;border-radius:0;">
			
			<table class="search-table">
				
					<td class="FindLabel">
						<label for="StartDate">开始日期</label>
					</td>
					<td>
						<input class="hisui-datebox textbox" id="StartDate"/>
					</td>
					<td class="FindLabel">
						<label for="EndDate">结束日期</label>
					</td>
					<td>
						<input class="hisui-datebox textbox" id="EndDate"/>
					</td>
					<td class="FindLabel">
						<label for="SearchCardNo">卡号所属</label>
					</td>
					<td>
						<input class="textbox" id="SearchCardNo"/>
					</td>
					<td class="FindLabel">
						<label for="SearchBuyer">购入人员</label>
					</td>
					<td>
						<input class="textbox" id="SearchBuyer"/>
					</td>
					<td class="FindLabel">
						<a id="BFind" href="#" class="hisui-linkbutton" data-options="iconCls:'icon-w-find'">查询</a>
					</td>
				</tr>
				
				
			</table>
			
		</div>
	</div>
	<div data-options="region:'center',title:'',border:false" style="height:80%;padding:0 10px 0px 0px;;border:0;">
		<div class="hisui-panel" fit="true" style="height:100%;border:0px solid #ccc;border-top:0;border-radius:0 0 4px 4px;">

			<table id="CardAllotList"></table>
		</div>
	</div>
</div>
<div id="AllotWin" class="hisui-dialog" title="卡购入"  style="width:530px;height:250px;top:50px;left:50px;padding:10px;" data-options="iconCls:'icon-w-save',resizable:true,modal:true,closed:true">   
	<div class="hisui-panel"  data-options="title:'',headerCls:'panel-header-gray',iconCls:'icon-apply-check'" style="border:0px solid #ccc;border-radius:0;">
			<table class="search-table">
				<tr>
					<td class="FindLabel">
						<label for="StartNum">起始卡号</label>
					</td>
					<td>
						<input class="textbox" id="StartNum"/>
					</td>
					<td class="FindLabel">
						<label for="Amount">卡片数量</label>
					</td>
					<td>
						<input class="textbox" id="Amount"/>
					</td>
					
				</tr>
				<tr>
					<td class="FindLabel">
						<label for="EndNum">结束卡号</label>
					</td>
					<td>
					<input class="textbox" id="EndNum"/>
					</td>
					
					
					<td class="FindLabel">
						<label for="Buyer">分配人员</label>
					</td>
					<td>
						<input class="textbox" id="Buyer"/>
					</td>
					
				</tr>
				
				<tr>
					<td class="FindLabel">
						<label for="Note">备注信息</label>
					</td>
					<td colspan="3">
						<input class="textbox" style="width:410px;" id="Note"/>
					</td>
					
				</tr>
				
			</table>
		</div>
		<div style="margin-top:10px;text-align:center;">
				
					<a href="#" id="Save" class="hisui-linkbutton" data-options="" style="width:100px;">保存</a>
					
				<!--a href="#" id="OrderLink" class="hisui-linkbutton" data-options="iconCls:'icon-w-edit'">医嘱录入</a-->
			</div>
</div>





