					<td class="r-label">
						<label>医嘱医生</label>
					</td>
					<td>
						<input id="DocName" class="hisui-combobox textbox">
					</td>
					<td class="r-label" style="text-align:left;">
						<input class='hisui-checkbox' type="checkbox" label="药品" id="Drug" data-options="checked:false">
					</td>
					<td class="r-label">
						<a href="#" id="BFindOrd" class="hisui-linkbutton" data-options="iconCls:'icon-w-find'">查询</a>
