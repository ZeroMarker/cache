<!--主页面-->
<div class="hisui-layout" data-options="fit:true,border:false" >
	<div data-options="region:'center',border:false">
		<table id="gridConfig" class="hisui-datagrid"  data-options="fit:true,border:true" toolbar="#custtb"></table>
		<div id="custtb">
			<table class="search-table">
				<tr>
				    <td class="r-label"><label>#(..Get("关键字"))#</label></td>
					<td><input type="text" id="search" class="textbox"></td>
					<td class="r-label"><a class="hisui-linkbutton" style="width:90px" data-options="iconCls:'icon-w-find'" id="c-search">查询</a></td>
				</tr>
			</table>
			<div class="tool-bar-line" style="border-bottom-color:#cccccc; border-bottom-width: 1px; border-bottom-style: dashed;">	</div>
			<table cellspacing="0" cellpadding="0" style="padding-bottom: 7px;padding-top: 7px;">
				<tr>
			      	<td class=""><a href="#" class="hisui-linkbutton" plain="true" iconCls="icon-add" id="c-add">新增</a></td>
					<td class=""><a href="#" class="hisui-linkbutton" plain="true" iconCls="icon-edit" id="c-edit">修改</a></td>
					<td class=""><a href="#" class="hisui-linkbutton" plain="true" iconCls="icon-cancel" id="c-delete">删除</a></td>
				</tr>
			</table>
		</div>
	</div>
</div>

<!--编辑框-->
<div id="ConfigDialog" style="width:400px;height:auto;padding:10px 10px 0px 10px;display:none;">
	<input class="textbox" id="txtId" type="hidden" ></input>
    <table class="form-table">
		<tr>
			<td class="form-r-label">
				<label for="txtCode">#(..Get("代码"))#</label>
			</td>
			<td>
				<input class="hisui-textbox textbox" id="txtCode" style="width:300px;"></input>
			</td>
		</tr>	
		<tr>
			<td class="form-r-label">
				<label for="txtDesc">#(..Get("名称"))#</label>
			</td>
			<td>
				<input class="hisui-textbox textbox" id="txtDesc" style="width:300px;"></input>
			</td>
		</tr>
		<tr>
			<td class="form-r-label">
				<label for="txtVal">#(..Get("值"))#</label>
			</td>
			<td>
				<input class="hisui-textbox textbox" id="txtVal" style="width:300px;"></input>
			</td>
		</tr>
		<tr>
			<td class="form-r-label">
				<label for="txtValDesc">#(..Get("值说明"))#</label>
			</td>
			<td>
				<input class="hisui-textbox textbox" id="txtValDesc" style="width:300px;"></input>
			</td>
		</tr>
		<tr style="display:none">
			<td class="form-r-label">
				<label for="cboHosp">#(..Get("医院"))#</label>
			</td>
			<td>
				<input class="hisui-combobox textbox" id="cboHosp" style="width:307px;"></input>
			</td>
		</tr>
		<tr>
			<td class="form-r-label">
				<label for="txtResume">#(..Get("备注"))#</label>
			</td>
			<td>
				<input class="hisui-textbox textbox" id="txtResume" style="width:300px;"></input>
			</td>
		</tr>
	</table>
</div>

