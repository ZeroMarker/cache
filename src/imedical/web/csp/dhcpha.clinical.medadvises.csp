<html>
<head>
<meta http-equiv="Content-Type" content="text/html;">
<EASYUI:CLINICAL/>	
	<script type="text/javascript" src="../scripts/dhcpha/jQuery/datagrid-detailview.js"></script>
	<script type="text/javascript" src="../scripts/dhcpha/jQuery/easyui-lang-zh_CN.js" charset="utf-8"></script>
	
	    
	<style type="text/css">
	.patInfo{
		position: relative;
		height:20px;
		line-height:20px;
		width:100%;	 
		margin: 0px;
		padding:0px;
		border: 0px;	
		text-align: left;
		filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#F0F5FA', endColorstr='#C8E0FB', GradientType='0');
		white-space:nowrap;
		display:none;
		text-overflow: ellipsis;
		overflow: hidden;
	}
	.spancolor{
		color: black; 
		font-weight:bold;
	}
	.spancolorleft{
		color: #666;
	}
	.datagrid-row-selected {
  		background: #ADFAFC;
	}
   </style>

	<script Language="Javascript">
	   var LgGroupID="#(%session.Get("LOGON.GROUPID"))#";      //安全组ID
	   var LgGroupDesc="#(%session.Get("LOGON.GROUPDESC"))#";  //安全组
	   var LgUserID="#(%session.Get("LOGON.USERID"))#";        //用户ID
	   var LgUserCode="#(%session.Get("LOGON.USERCODE"))#";    //用户工号
	   var LgUserName="#(%session.Get("LOGON.USERNAME"))#";    //用户姓名
	   var LgCtLocID="#(%session.Get("LOGON.CTLOCID"))#";      //科室ID
	   var LgHospID="#(%session.Get("LOGON.HOSPID"))#";        //医院ID
   </script>
	<script type="text/javascript" src="../scripts/dhcpha/clinical/createLabDetailView.js"></script>
	<script type="text/javascript" src="../scripts/dhcpha/clinical/medicaltionadvises.js"></script>
</head> 
<body>
	<div id="mainpanel" class="easyui-layout" fit="true">
		<!--病人基本信息-->
		<div data-options="region:'north'" style="height:22px">
			<div id="patInfo" class="patInfo"></div>
		</div>
		<!--用药信息-->
		<div data-options="region:'center',title:'医嘱列表'" >
			<div id="medInfo" toolbar="#tb"></div>
		</div>
		<!--建议填写-->
		<div data-options="region:'east',title:'建议信息'" style="width:870px;">
			<div id="mainpanel" class="easyui-layout" fit="true">
				<div data-options="region:'north',title:''" style="height:350px; margin-top:10px;">
					<div id="Adivises"></div>
				</div>
				<div data-options="region:'center'" style="background:E8F1FF;border: 2px solid #95B8E7;">
					<div>
							<div id="bt" style="margin-left:5px;margin-top:15px;background:E8F1FF;">
							<a href="#" id="Main" class="easyui-linkbutton" iconCls="icon-ok">模板维护</a>
							<a href="#" id="Btn_Lab" class="easyui-linkbutton" iconCls="icon-ok">引用检验</a>
							<a href="#" id="Quote" class="easyui-linkbutton" iconCls="icon-ok">引用建议</a>
							<a href="#" id="Sure" class="easyui-linkbutton" iconCls="icon-ok">提交建议</a>
							<a href="#" id="Del" class="easyui-linkbutton" iconCls="icon-cancel">删除建议</a>
						</div>
					</div>
					<textarea id="textarea" style="width:810px;height:100px;font-size:14px;margin-left:5px;margin-top:10px;border: 1px solid #95B8E7;">请输入建议信息...</textarea>
					<span id="ordstr" style="display:none"></span>
					<span id="AdvID" style="display:none"></span>
				</div>
			</div>
		</div>
	</div>
	<div id="medAdvWin" style="display:none">  <!-- 默认隐藏  qunianpeng  2018/3/21-->
		<div id="medAdvdg"></div>
	</div>
	<!--用药建议模板维护-->
	<div id="medAdvTempWin"></div>
	<!--药品列表按钮-->
	<div id="tb" style="padding:5px;height:auto">
		<a href="#" class="easyui-linkbutton" iconCls="icon-ok" plain="true" onclick="javascript:addOrdInfo()">添加药品</a>
		<!-- <a href="#" class="easyui-linkbutton" iconCls="icon-add" plain="true" onclick="javascript:LoadPatMedInfo('S','')">长期医嘱</a>
		<a href="#" class="easyui-linkbutton" iconCls="icon-add" plain="true" onclick="javascript:LoadPatMedInfo('NORM','')">临时医嘱</a>
		<a href="#" class="easyui-linkbutton" iconCls="icon-add" plain="true" onclick="javascript:LoadPatMedInfo('OUT','')">出院带药</a>
		<a href="#" class="easyui-linkbutton" iconCls="icon-add" plain="true" onclick="javascript:LoadPatMedInfo('OTHER','')">其他</a> -->
		<a href="#" class="easyui-linkbutton" iconCls="icon-add" plain="true" onclick="javascript:LoadPatMedInfo('','AppType')" style= "display:none">模块筛选</a>
		<input name="ordFiter" type="radio" id="chk-a" onclick="javascript:LoadPatMedInfo('','')" value=""/><lable for="chk-a">全部</lable>
		<input name="ordFiter" type="radio" id="chk-s" onclick="javascript:LoadPatMedInfo('','')" value="S"/><lable for="chk-s">长期医嘱</lable>
		<input name="ordFiter" type="radio" id="chk-norm" onclick="javascript:LoadPatMedInfo('','')" value="NORM"/><lable for="chk-norm">临时医嘱</lable>
		<input name="ordFiter" type="radio" id="chk-out" onclick="javascript:LoadPatMedInfo('','')" value="OUT"/><lable for="chk-out">出院带药</lable>
		<input name="ordFiter" type="radio" id="chk-ather" onclick="javascript:LoadPatMedInfo('','')" value="OTHER"/><lable for="chk-ather">其他</lable>
		<input type="checkbox" id="chk-all" onclick="javascript:LoadPatMedInfo('','')"/><lable for="chk-all">包含已停</lable>
	</div>
</body>
</html>
