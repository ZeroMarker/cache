<!--主页面-->
<div class="hisui-layout" data-options="fit:true,border:false" >
	<div data-options="region:'center',border:false" style="">
		<div  class="hisui-panel" fit="true" style="border:0px;">
			<table id="gridGlossary" data-options="toolbar:'#GlossaryBar'"></table>
		</div>
	</div>
	<div data-options="region:'west',border:false" style="width:600px;">
		<div class="hisui-layout" data-options="fit:true,border:false" >
			<div class="ipmr-panel" data-options="region:'north',border:false" style="height:500px;padding:0px 10px 0px 0px;">
				<table id="gridDataItem" data-options="toolbar:'#dataItemBar'"></table>
			</div>
			<div data-options="region:'center',border:false" style="">
				<div  class="hisui-panel ipmr-panel" fit="true" style="border:0px;padding:10px 10px 0px 0px;">
					<table id="gridMap" data-options="toolbar:'#custtb'"></table>
				</div>
			</div>
		</div>
	</div>
</div>


<div id="dataItemBar" style="display:none;">
	<table class="search-table">
		<tr>
			<td class="r-label"><label>#(..Get("首页类型"))#</label></td>
			<td><input class="hisui-combobox textbox" id="cboDFrontPageType" style="width:107px;" /></td>
			<td class="r-label"><label>#(..Get("关键字"))#</label></td>
			<td><input class="textbox" id="txtDataItemAlias" style="width:100px;" /></td>
			<td class="r-label"><a href="#" class="hisui-linkbutton" data-options="iconCls:'icon-w-find',stopAllEventOnDisabled:true" id="DataItemSearch">查询</a></td>
			<td class="r-label" style="padding-left: 0px;text-align:left;"><input class="hisui-checkbox" type="checkbox" data-options="boxPosition:'left'" label="#(..Get("未对照"))#" id="chkDataItemNoMapped">
			</td>
		</tr>
	</table>
</div>

<div id="GlossaryBar" style="display:none;">
	<table class="search-table">
		<tr>
			<td class="r-label"><label>#(..Get("首页类型"))#</label></td>
			<td><input class="hisui-combobox textbox" id="cboGFrontPageType" style="width:107px;" /></td>
			<td class="r-label"><label>#(..Get("关键字"))#</label></td>
			<td><input class="textbox" id="txtGlossaryAlias" style="width:100px;" /></td>
			<td class="r-label"><a href="#" class="hisui-linkbutton" data-options="iconCls:'icon-w-find',stopAllEventOnDisabled:true" id="GlossarySearch">查询</a></td>
			<td class="r-label" style="padding-left: 0px;text-align:left;"><a href="#" class="hisui-linkbutton" data-options="iconCls:'icon-w-ok',stopAllEventOnDisabled:true" id="AutoContrast">自动对照</a></td>
		</tr>
	</table>
</div>

