<!-- 
	毒麻药品统计条件
	pha.in.v1.narccondition.csp
	pha/in/v1/narccondition.js
-->
<div class="hisui-layout" fit="true">
	<div data-options="region:'center',border:false,split:false" resizeWidth='true'>
        <table id="div-conditions" class="pha-con-table">
			<tr>
			    <td class="r-label">
			        <label for="startDate"><span style="color:red">*</span>#(..Get("开始日期"))#</label>
			    </td>
			    <td>
			        <input id="startDate" class="hisui-datebox" data-pha='class:"hisui-datebox",requied:true,query:true' data-options="width:160"/>
			    </td>
			</tr>
			<tr>
			    <td class="r-label">
			        <label for="endDate"><span style="color:red">*</span>#(..Get("截止日期"))#</label>
			    </td>
			    <td>
			        <input id="endDate" class="hisui-datebox" data-pha='class:"hisui-datebox",requied:true,query:true' data-options="width:160" />
			    </td>
			</tr>
			<tr>
			    <td class="r-label">
			        <label for="dateType"><span style="color:red">*</span>#(..Get("日期类型"))#</label>
			    </td>
			    <td>
			        <input id="dateType" class="hisui-combobox" data-pha='class:"hisui-combobox",requied:true,query:true' />
			    </td>
			</tr>
			<tr>
			    <td class="r-label">
			        <label for="poisonIdStr"><span style="color:red">*</span>#(..Get("管制分类"))#</label>
			    </td>
			    <td>
			        <input id="poisonIdStr" class="hisui-combobox" data-pha='class:"hisui-combobox",requied:true,query:true,clear:true' />
			    </td>
			</tr>
			<tr>
			    <td class="r-label">
			        <label for="patNo">#(..Get("登记号"))#</label>
			    </td>
			    <td>
			        <input id="patNo" class="hisui-validatebox" data-pha='class:"hisui-validatebox",query:true,clear:true' style="width:153px;"/>
			    </td>
			</tr>
			<tr>
			    <td class="r-label">
			        <label for="regLocId">#(..Get("登记科室"))#</label>
			    </td>
			    <td>
			        <input id="regLocId" class="hisui-combobox" data-pha='class:"hisui-combobox",query:true,clear:true' />
			    </td>
			</tr>
			<tr>
			    <td class="r-label">
			        <label for="recLocId">#(..Get("回收科室"))#</label>
			    </td>
			    <td>
			        <input id="recLocId" class="hisui-combobox" data-pha='class:"hisui-combobox",query:true,clear:true' />
			    </td>
			</tr>
			<tr>
			    <td class="r-label">
			        <label for="phLocId">#(..Get("发药科室"))#</label>
			    </td>
			    <td>
			        <input id="phLocId" class="hisui-combobox" data-pha='class:"hisui-combobox",query:true,clear:true' />
			    </td>
			</tr>
			<tr>
			    <td class="r-label">
			        <label for="docLocId">#(..Get("开单科室"))#</label>
			    </td>
			    <td>
			        <input id="docLocId" class="hisui-combobox" data-pha='class:"hisui-combobox",query:true,clear:true' />
			    </td>
			</tr>
			<tr>
			    <td class="r-label">
			        <label for="wardLocId">#(..Get("病区"))#</label>
			    </td>
			    <td>
			        <input id="wardLocId" class="hisui-combogrid" data-pha='class:"hisui-combobox",query:true,clear:true' />
			    </td>
			</tr>
			<tr>
			    <td class="r-label">
			        <label for="inci">#(..Get("药品"))#</label>
			    </td>
			    <td>
			        <input id="inci" class="hisui-combogrid" data-pha='class:"hisui-combogrid",query:true,clear:true' />
			    </td>
			</tr>
			<tr>
			    <td class="r-label">
			        <label for="dspState"><span style="visibility:hidden;">*</span>#(..Get("发药状态"))#</label>
			    </td>
			    <td>
			        <input id="dspState" class="hisui-combobox" data-pha='class:"hisui-combobox",query:true,clear:true' />
			    </td>
			</tr>
			<tr>
			    <td class="r-label">
			        <label for="admType">#(..Get("就诊类型"))#</label>
			    </td>
			    <td>
			        <input id="admType" class="hisui-combobox" data-pha='class:"hisui-combobox",query:true,clear:true' />
			    </td>
			</tr>
			<tr>
				<td colspan=2 style="margin-top:20px;text-align:center;">
					<a class="hisui-linkbutton" plain='false' iconCls="icon-w-find" id="btnFind">查询</a>
					<a class="hisui-linkbutton" plain='false' iconCls="icon-w-clean" id="btnClear">清屏</a>
				</td>
			</tr>
		</table>
	</div>
</div>

<!-- js -->
<script type="text/javascript" src="../scripts/pha/in/v1/narccondition.js"></script>