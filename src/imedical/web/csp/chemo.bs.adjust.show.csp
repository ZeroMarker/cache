<div class="hisui-layout" data-options="fit:true">
	<div data-options="region:'north',border:false" style="height:295px;overflow:hidden;padding:10px;">
		<div class="hisui-panel" title="Dose Values" data-options="closable:false,headerCls:'panel-header-gray'">
          <table class="search-table" style="width:98%;padding:0px 0px 0px 6px;">
            <tr>
              <td class="c-w-133"><label class="c-span" id="Target">Target dose</label></td>
              <td class="c-align-l"><input id="BSAUnitSTD" type="text" class="textbox fill" /></td>
              <td class="c-align-l"><label class="c-span dose c-ml-10">mg/m2</label></td>
              <td></td>
            </tr>
            <tr>
              <td><label class="c-span">Calculated dose</label></td>
              <td class="c-align-l"><input id="STDDose" type="text" class="textbox fill" disabled="disabled" /></td>
              <td class="c-align-l"><label class="c-span c-ml-10">mg</label></td>
              <td></td>
            </tr>
            <tr>
              <td><label class="c-span">Dose Adjustment</label></td>
              <td class="c-align-l"><input id="AdjDose" type="text" class="textbox fill" disabled="disabled"/></td>
              <td class="c-align-l"><label class="c-span c-ml-10">mg</label></td>
              <td><input id="Percent" class="hisui-numberspinner textbox" value="100"></td>
              <td class="c-align-l"><label class="c-ml-10 c-span">%</label></td>
            </tr>

            <tr>
              <td><label class="c-span">Final dose</label></td>
              <td class="c-align-l"><input id="FinalDose" type="text" class="textbox fill"  /></td>
              <td class="c-align-l"><label class="c-span c-ml-10">mg</label></td>
              <td><input id="BSAUnit" type="text" class="textbox fill" disabled="disabled" /></td>
              <td class="c-align-l"><label class="c-ml-10 c-span dose">mg/m2</label></td>
            </tr>
            <tr>
              <td><label class="c-span">#(..Get("计算公式"))#</label></td>
              <td class="c-align-l"><input id="Formula" type="text" class="textbox fill"  /></td>
              <td></td>
              <td></td>
            </tr>
            <tr>
              <td><label class="c-span">#(..Get("调整原因"))#</label></td>
              <td class="c-align-l" colspan=4><input id="Reason" type="text" class="textbox fill" style="width:99%;"/></td>
            </tr>
          </table>
      </div>
	</div>
	<div data-options="region:'center',border:false"  style="overflow:hidden;padding:10px;">
	    <div class="hisui-panel" title="Reference Data" data-options="closable:false,headerCls:'panel-header-gray'">
	      
	      <table class="search-table" style="width:100%;">
	        <tr>
	            <td class="c-w-90"><label class="c-span">#(..Get("身高"))#</label></td>
	            <td class="c-w-160 c-align-l"><input id="Height" type="text" class="textbox fill" disabled="disabled"/></td>
	            <td class="c-align-l"><label class="c-span c-ml-10">cm</label></td>
	        </tr>
	        <tr>
	            <td><label class="c-span">#(..Get("体重"))#</label></td>
	            <td class="c-align-l"><input id="Weight" type="text" class="textbox fill" disabled="disabled"/></td>
	            <td class="c-align-l"><label class="c-span c-ml-10">kg</label></td>
	        </tr>
	        <tr>
	            <td><label class="c-span">#(..Get("血清肌酸酐"))#</label></td>
	            <td class="c-align-l"><input id="SC" type="text" class="textbox fill"  disabled="disabled"/></td>
	            <td class="c-align-l"><label class="c-span c-ml-10">umol/L</label></td>
	        </tr>
	        
	        <tr>
	          <td><label class="c-span">GFR</label></td>
	          <td class="c-align-l"><input id="GFR" type="text" class="textbox fill" disabled="disabled" /></td>
	          <td><label class="c-span"></label></td>
	        </tr>
	      
	        <tr>
	            <td><label class="c-span">BSA</label></td>
	            <td class="c-align-l"><input id="BSA" type="text" class="textbox fill" disabled="disabled" /></td>
	            <td class="c-align-l"><label class="c-span c-ml-10">m2</label></td>
	        </tr>
	        
	        <tr>
	            <td><label class="c-span">#(..Get("理想体重"))#</label></td>
	            <td class="c-align-l"><input id="IBW" type="text" class="textbox fill" disabled="disabled" /></td>
	            <td class="c-align-l"><label class="c-span c-ml-10">kg</label></td>
	        </tr>

	      </table>
	    </div>

	
	</div> 
	
	<div data-options="region:'south',border:false" style="height:52px;padding:10px;overflow:hidden;">
		<div class="c-align-c">
			<a id="Save" class="hisui-linkbutton green">保存</a>
		</div>
	</div>
</div>
