<!-- 主页面-->
<div class="hisui-layout" data-options="fit:true">
	<div data-options="region:'center',border:false,collapsible:false" class="ma-panel" style="padding:10px;">
		<table id="gridPACWard"  data-options="toolbar:'#ToolBar'"></table>
        <div id="ToolBar" style="padding:3px;display:none;" >
        	<div style="padding: 7px 0 7px 7px;"> 
				<input class="hisui-searchbox" id="searchbox" style="width:260px;" data-options="prompt:'搜索'" />			 
			</div>
			<span class="line" style="display: block;border-bottom: 1px dashed rgb(204, 204, 204);margin: 3px 0px;clear: both; padding-bottom: 1px; "></span>		 
			<a class="hisui-linkbutton" id="btnEdit" data-options="iconCls:'icon-write-order',plain:true,stopAllEventOnDisabled:true"> 修改 </a>
			<a class="hisui-linkbutton" id="btnDelete"  data-options="iconCls:'icon-reset',plain:true,stopAllEventOnDisabled:true" >重置 </a>
        	<a class="hisui-linkbutton" id="btnWardSubNo"  data-options="iconCls:'icon-add',plain:true,stopAllEventOnDisabled:true"> 分区 </a>	
	
		</div>
	</div>
</div>

<div id="PACWardEdit" style="border:none;overflow:hidden;padding-right:10px;display:none;">  
	<table class="search-table" >
		<tr>
			<td class="r-label">
				<label for="WardBuilding">病房大楼</label>
			</td>
			<td>
				<input class="hisui-combobox hisui-validatebox" id="WardBuilding" style="width:277px" data-options="required:true"/>
			</td>
		</tr>	
		<tr>
			<td class="r-label">
				<label for="txtFloor">楼层</label>
			</td>
			<td>
				<input class="hisui-validatebox textbox" id="txtFloor" style="width:270px"/> 
			</td>
		</tr>
		<tr>
			<td class="r-label">
				<label for="txtArea">区域</label>
			</td>
			<td>
				<input class="hisui-validatebox textbox" id="txtArea" style="width:270px"/> 
			</td>
		</tr>
			<tr>
			<td class="r-label">
				<label for="txtSubNo">分区号</label>
			</td>
			<td>
				<input class="hisui-validatebox textbox" id="txtSubNo" style="width:270px"/> 
			</td>
		</tr>
			<tr>
			<td class="r-label">
				<label for="txtAreaColor">背景色</label>
			</td>
			<td>
				<input class="hisui-validatebox textbox" id="txtAreaColor" style="width:270px"/> 
			</td>
		</tr>
		<tr >
			<td colspan="2" Style="text-align:center;padding-left:10px;">
				<a id="btnSave" class="hisui-linkbutton" style="margin-right:10px;">保存</a>
				<a id="btnClose" class="hisui-linkbutton">关闭</a>
			</td>
		</tr>
	</table>
</div>	