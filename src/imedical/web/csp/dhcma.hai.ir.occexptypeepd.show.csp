<!-- 主页面-->
<div class="hisui-layout" data-options="fit:true">
    <!--暴露感染筛查规则-->
	<div data-options="region:'center',border:false,collapsible:false" style="padding:10px;">
        <table id="gridOccExpTypeEpd" data-options="toolbar:'#custtb'"></table>
		<div id="custtb" style="padding:3px" > 
	        <a class="hisui-linkbutton" id="btnAdd" data-options="iconCls:'icon-add',plain:true,stopAllEventOnDisabled:true">
	            新增
			</a>
		    <a class="hisui-linkbutton" id="btnEdit" data-options="iconCls:'icon-write-order',plain:true,stopAllEventOnDisabled:true">
				修改
			</a>
			<a class="hisui-linkbutton" id="btnDelete" data-options="iconCls:'icon-cancel',plain:true,stopAllEventOnDisabled:true">
				删除
			</a>	    
	    </div>          
	</div>
    <!--职业暴露项目定义修改 -->
    <div id="LayerEdit" style="overflow: hidden; padding-right: 10px; display: none; ">
        <table class="search-table">
            <tr>
                <td class="r-label">
                    <label for="cboEpdType">感染类型</label>
                </td>
                <td>
                    <input class="hisui-combobox" id="cboEpdType" style="width:357px" />
                </td>
            </tr>
            <tr>
                <td class="r-label">
                    <label for="txtDesc">规则说明</label>
                </td>
                <td>
                    <input class="textbox" id="txtDesc" style="width: 350px" />
                </td>
            </tr>
            <tr>
                <td class="r-label">
                    <label for="cboLabItem">检验项目</label>
                </td>
                <td>
                    <input class="hisui-combobox" id="cboLabItem" style="width:357px" />
                </td>
            </tr>
            <tr>
                <td class="r-label">
                    <label for="txtLabItemRst">阳性结果</label>
                </td>
                <td>
                    <input class="hisui-combobox" id="cboLabOperator" style="width:120px" />
                    <input class="textbox" id="txtLabItemRst" style="width: 225px" />
                </td>
            </tr>
            <tr>
                <td class="r-label">
                    <label for="cboLabItem2">检验项目</label>
                </td>
                <td>
                    <input class="hisui-combobox" id="cboLabItem2" style="width:357px" />
                </td>
            </tr>
            <tr>
                <td class="r-label">
                    <label for="txtLabItemRst2">阳性结果</label>
                </td>
                <td>
                    <input class="hisui-combobox" id="cboLabOperator2" style="width:120px" />
                    <input class="textbox" id="txtLabItemRst2" style="width: 225px" />
                </td>
            </tr>
            <tr>
                <td class="r-label">是否有效</td>
                <td>
                    <input class='hisui-checkbox' type="checkbox" id="chkIsActive">
                </td>
            </tr>
            <tr>
                <td class="r-label">
                    <label for="txtNote">描述</label>
                </td>
                <td>
                    <input class="textbox" id="txtNote" style="width: 350px" />
                </td>
            </tr>
            <tr>
                <td colspan="2" class="search-btnlist">
                    <a id="btnSave" class="hisui-linkbutton">保存</a>
                    <a id="btnClose" class="hisui-linkbutton">关闭</a>
                </td>
            </tr>
        </table>
    </div>
</div>
