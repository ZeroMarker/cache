<!DOCTYPE html>
<!--配液大类维护
	csp:dhcpha.pivas.orderlink.csp
	js: scripts/pharmacy/pivas/orderlink.js
-->
<HTML XMLNS=TRAK>

<HEAD>
    <title>
        <TRAK:TRANSLATE id=title>##(%session.Get("TITLE"))##</TRAK:TRANSLATE>
    </title>
    <TRAK:HEAD></TRAK:HEAD>
    <HISUI />
    <link rel="stylesheet" type="text/css" href="../scripts/pharmacy/common/css/dhcpha.hisui.css">
    <link rel="stylesheet" type="text/css" href="../scripts/pharmacy/pivas/css/ui.css">
</HEAD>

<body style="background:white">
    <div class="dhcpha-win-mask">
        <img src="../scripts/pharmacy/common/image/page-loading.gif"></img>
    </div>
    <div class="hisui-layout" fit="true" border="false">
        <div data-options="region:'center'" class="dhcpha-hisui-container">
            <div class="hisui-layout" fit="true">
                <div data-options="region:'west',width:350,title:'配液大类维护',headerCls:'panel-header-gray',iconCls:'icon-panel-orderlink',split:true,collapsible:false">
                    <table id="gridOrderLink"></table>
                </div>
                <div data-options="region:'center',title:'配液大类规则',headerCls:'panel-header-gray',iconCls:'icon-panel-orderlink-fx'">
                    <div class="hisui-layout" fit="true" border="false">
                        <div data-options="region:'west',width:250,border:false,split:true" style="border-right:1px solid #ccc">
                            <table id="gridPivasCat"></table>
                        </div>
                        <div data-options="region:'center',border:false" style="border-right:1px solid #ccc;border-left:1px solid #ccc;">
                            <table id="gridInstruct"></table>
                        </div>
                        <div data-options="region:'east',width:300,border:false,split:true" style="border-left:1px solid #ccc;">
                            <table id="gridLiquid">
                                <tr>
                                    <td>
                                        最小下限量<input id="txtPolMinVol" type="text" class="hisui-validatebox" style="width:160px;margin-left:10px" />
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        最大上限量<input id="txtPolMaxVol" type="text" class="hisui-validatebox" style="width:160px;margin-left:10px" />
                                    </td>
                                </tr>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="gridOrderLinkBar">
        <table cellspacing=0 cellpadding=0>
            <tr>
                <td>
                    <a class="hisui-linkbutton" plain='true' iconCls="icon-add" id="btnAdd">增加</a>
                </td>
                <td>
                    <a class="hisui-linkbutton" plain='true' iconCls="icon-save" id="btnSave">保存</a>
                </td>
                <td>
                    <a class="hisui-linkbutton" plain='true' iconCls="icon-remove" id="btnDelete">删除</a>
                </td>
            </tr>
        </table>
    </div>
    <div id="gridPivasCatBar">
        <table cellspacing=0 cellpadding=0>
            <tr>
                <td>
                    <a class="hisui-linkbutton" plain='true' iconCls="icon-add" id="btnAddPoli">增加</a>
                </td>
                <td>
                    <a class="hisui-linkbutton" plain='true' iconCls="icon-save" id="btnSavePoli">保存</a>
                </td>
                <td>
                    <a class="hisui-linkbutton" plain='true' iconCls="icon-remove" id="btnDelPoli">删除</a>
                </td>
            </tr>
        </table>
    </div>
    <div id="gridInstructBar">
        <table cellspacing=0 cellpadding=0>
            <tr>
                <td>
                    <a class="hisui-linkbutton" plain='true' iconCls="icon-add" id="btnAddPols">增加</a>
                </td>
                <td>
                    <a class="hisui-linkbutton" plain='true' iconCls="icon-save" id="btnSavePols">保存</a>
                </td>
                <td>
                    <a class="hisui-linkbutton" plain='true' iconCls="icon-remove" id="btnDelPols">删除</a>
                </td>
            </tr>
        </table>
    </div>

    <div id="gridLiquidBar">
        <table cellspacing=0 cellpadding=0>
            <tr>
                <td>
                    <a class="hisui-linkbutton" plain='true' iconCls="icon-save" id="btnSaveLiquid">保存</a>
                </td>
            </tr>
        </table>
        </span>
    </div>
    <script type="text/javascript" src="../scripts/pharmacy/common/js/dhcpha.hisui.extend.js"></script>
    <script type="text/javascript" src="../scripts/pharmacy/common/js/dhcpha.hisui.com.js"></script>
    <script type="text/javascript" src="../scripts/pharmacy/pivas/common.js"></script>
    <script type="text/javascript" src="../scripts/hisui/websys.comm.js"></script>
    <script type="text/javascript" src="../scripts/pharmacy/pivas/orderlink.js"></script>
</body>

</HTML>