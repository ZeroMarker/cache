<div class="hisui-layout" id="divScreen" data-options="fit:true">
	<div data-options="region:'west',border:false,collapsible:false," style="padding:10px;width:550px;">
		<table id="gridPatList" data-options="toolbar:'#ToolBarInf'" ></table>
		<div id="ToolBarInf" style="padding:5px;">
			<input class="hisui-combobox" id="cboHospital" style="width:200px" />	
			<span style="margin-left:5px;"></span>
			<span>日期</span>
			<span style="margin-left:5px;"></span>
			<a id="DateTip">				    
				<input id="aDateFrom" class="hisui-datebox textbox" style="width:120px;"/>
				<span>~</span>
				<input id="aDateTo" class="hisui-datebox textbox" style="width:120px;"/>
			</a>
		</div>		
	</div>
	<div id="divCenter" data-options="region:'center',border:false,collapsible:false" style="width:100%;padding:10px 10px 10px 0px;">
		<div id="Message" class="hisui-layout"  data-options="fit:true," style="display:none;">
			<div data-options="region:'north',border:false" id="divNorth" style="height:200px;margin-bottom:10px;">
				<table id="gridRepList" data-options="border:false"></table>
			</div>
			<div data-options="region:'center',border:false" style="display: block; border-top: 1px solid #ccc;">	
				<div id="divMessage" style="padding:10px;"></div>
			</div>
			<div data-options="region:'south',border:false" id="divSouth"  style="height:145px;margin-bottom:10px;">
			   <div id="divSendMess" style="display: block; border-top: 1px solid #ccc;padding:10px;">		
					<textarea class="textbox"  id="txtMessage" style="width:99%;height:80px;border:none;outline:none;background-color:#fff;" placeholder="请输入..."></textarea> 
					<div style="padding-top:10px;text-align:right">
						<a id="btnRead"  class="hisui-linkbutton" style="margin-right:10px;">阅读</a>
						<a id="btnSend"  class="hisui-linkbutton">发送</a>
						<span style="margin-left:-7px;font-size:12px;color: #fff;">|</span>
						<a id="btnMSend"  class="hisui-linkbutton"  data-options="iconCls:'icon-w-arrow-down',plain:true" style="margin-left:-5px;margin-right:10px;background-color:#40A2DE"></a>
					</div>
				</div>
			</div>
		</div>
		<div id ="divNoResult" class="no-result"></div>
	</div>	
</div>
