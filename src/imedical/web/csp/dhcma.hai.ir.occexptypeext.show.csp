<!-- 主页面-->
<div class="hisui-layout" data-options="fit:true">
    <!--职业暴露类型-->
	<div data-options="region:'center',border:false,collapsible:false" style="padding:10px;">
        <table id="gridOccExpTypeExt" data-options="toolbar:'#custtb'"></table>
		<div id="custtb" style="padding:3px" > 
	        <a class="hisui-linkbutton" id="btnAdd" data-options="iconCls:'icon-add',plain:true,stopAllEventOnDisabled:true">
	            新增
			</a>
		    <a class="hisui-linkbutton" id="btnEdit" data-options="iconCls:'icon-write-order',plain:true,stopAllEventOnDisabled:true">
				修改
			</a>
			<a class="hisui-linkbutton" id="btnDelete" data-options="iconCls:'icon-cancel',plain:true,stopAllEventOnDisabled:true">
				删除
			</a>	    
	    </div>          
	</div>
    <!--职业暴露项目修改 -->
    <div id="LayerEdit" style="overflow: hidden; padding-right: 10px; display: none; ">
        <table class="search-table">
            <tr>
                <td class="r-label">
                    <label for="txtCode">代码</label>
                </td>
                <td>
                    <input class="textbox" id="txtCode" style="width: 350px" />
                </td>
            </tr>
            <tr>
                <td class="r-label">
                    <label for="txtDesc">描述</label>
                </td>
                <td>
                    <input class="textbox" id="txtDesc" style="width: 350px" />
                </td>
            </tr>
            <tr>
                <td class="r-label">
                    <label for="cboExtType">项目分类</label>
                </td>
                <td>
                    <input class="hisui-combobox" id="cboExtType" style="width:357px" />
                </td>
            </tr>
            <tr>
                <td class="r-label">
                    <label for="cboDatType">数据格式</label>
                </td>
                <td>
                    <input class="hisui-combobox" id="cboDatType" style="width:357px" />
                </td>
            </tr>
            <tr>
                <td class="r-label">
                    <label for="cboDicType">关联字典</label>
                </td>
                <td>
                    <input class="hisui-combobox" id="cboDicType" style="width:357px" />
                </td>
            </tr>
            <tr>
                <td class="r-label"></td>
                <td>
                    <input class='hisui-checkbox' type="checkbox" label='是否必填' id="chkIsActive">
                </td>
            </tr>
            <tr>
                <td colspan="2" class="search-btnlist">
                    <a id="btnSave" class="hisui-linkbutton">保存</a>
                    <a id="btnClose" class="hisui-linkbutton">关闭</a>
                </td>
            </tr>
        </table>
    </div>
</div>
