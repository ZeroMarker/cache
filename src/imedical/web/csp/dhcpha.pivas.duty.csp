<!DOCTYPE html>
<!--排班管理-岗位维护
	csp:dhcpha.pivas.duty.csp
	js: scripts/pharmacy/pivas/duty.js
-->
<HTML XMLNS=TRAK>

<HEAD>
    <title>
        <TRAK:TRANSLATE id=title>##(%session.Get("TITLE"))##</TRAK:TRANSLATE>
    </title>
    <TRAK:HEAD>
    </TRAK:HEAD>
    <HISUI/>
    <link rel="stylesheet" type="text/css" href="../scripts/pharmacy/common/css/dhcpha.hisui.css"></link>
</HEAD>

<body>
    <div class="hisui-layout"  fit="true" border="false">
        <div data-options="region:'center'" class="dhcpha-hisui-container">
		    <div class="hisui-layout" fit="true">
		        <div data-options="region:'center',title:'岗位维护',headerCls:'panel-header-gray',iconCls:'icon-panel-work'" class="dhcpha-hisui-border" style="border-top:none">
		            <div id="gridDuty" data-options="fit:true" border="false">
		            </div>
		        </div>
		        <div data-options="region:'east',title:'关联人员',headerCls:'panel-header-gray',iconCls:'icon-panel-work-fx',width:300,split:true" class="dhcpha-hisui-border" style="border-top:none">
		            <div id="gridDutyUser" data-options="fit:true" border="false">
		            </div>
		        </div>
		    </div>
	    </div>
    </div>
    <div id="gridDutyBar">
    	<table>
    		<tr>
                <td>
                    <input id="cmbPivaLoc" />
                </td>
		        <td>
		        	<div class="datagrid-btn-separator"></div>
				</td>
	    		<td>
		        	<a class="hisui-linkbutton" plain='true' iconCls="icon-add" id="btnAdd">增加</a>
		        </td>
		        <td>
		        	<div class="datagrid-btn-separator"></div>
				</td>
				<td>
		        	<a class="hisui-linkbutton" plain='true' iconCls="icon-save" id="btnSave">保存</a>
		        </td>
		        <td>
		        	<div class="datagrid-btn-separator"></div>
				</td>
		        <td>
		        	<a class="hisui-linkbutton" plain='true' iconCls="icon-remove" id="btnDelete">删除</a>
		        </td>
		    </tr>
		</table>	   
    </div>
    <div id="gridDutyUserBar">
    	<table style="width:100%">
    		<tr>
                <td>
                    <input id="txtAlias" class="hisui-validatebox" placeholder="检索条件..."/>
                </td>
                <td >
                    <div style="border:1px solid #fec0c0;background:#ffe3e3;color:#ff3d2c;height: 27px;
    line-height: 27px;border-radius: 3px;">
                    	<img src="../scripts_lib/hisui-0.1.0/dist/css/icons/tip.png" style="position: relative;left:10px;top:2px;"></img>
                    	 　双击关联
                    </div>
                </td>
		    </tr>
		</table>	   
    </div>
    <script type="text/javascript" src="../scripts/pharmacy/common/js/dhcpha.hisui.extend.js"></script>
    <script type="text/javascript" src="../scripts/pharmacy/common/js/dhcpha.hisui.com.js"></script>
    <script type="text/javascript" src="../scripts/pharmacy/pivas/common.js"></script>
    <script type="text/javascript" src="../scripts/pharmacy/pivas/duty.js"></script>
</body>

</HTML>