<div class="hisui-layout" data-options="fit:true" style="border:none;">
	<div data-options="region:'west'" style="width:976px;border:none;">
		<div  class="hisui-panel" fit="true"  style="border:none;border-right:0px;padding:10px 5px 10px 10px;">
			<table id="gridLocRelev" data-options="toolbar:'#Toolbar'"></table>
			<div id="Toolbar" style="padding:3px;display:none" >
				<a class="hisui-linkbutton" id="btnAdd"  data-options="iconCls:'icon-add',plain:true,stopAllEventOnDisabled:true"> 新增 </a>
				<a class="hisui-linkbutton" id="btnEdit" data-options="iconCls:'icon-edit',plain:true,stopAllEventOnDisabled:true"> 修改 </a>
				<a class="hisui-linkbutton" id="btnDelete"  data-options="iconCls:'	icon-cancel',plain:true,stopAllEventOnDisabled:true" > 删除 </a>
				<div style="float:right;padding-right:10px;">
					<input class="hisui-combobox" style="width:220px" id="cboCat"/>
					<input class="hisui-searchbox" id="searchbox" style="width:260px;" data-options="prompt:'检索'" />			 
				</div>
			</div>
		</div>
	</div>	
		
	<div data-options="region:'center',border:false,collapsible:false" style="padding:10px;">
		<table id="gridLoc" data-options="toolbar:'#custtb'" ></table>
		<div id="custtb" style="display:none;">
			<table class="search-table">
				<div style="padding-right:10px">
					<input class="hisui-searchbox" id="searchbox2" style="width:260px;" data-options="prompt:'检索'" />		
				</div>
			</table>
		</div>          
	</div>
</div>
	<!-- 常用短语编辑页面 -->
	<div id="layer" style="border:none;overflow:hidden;padding-right:10px;display:none;">    
		<table class="search-table">
		    <tr>
				<td class="r-label">
					<label for="txtName">名称</label>
				</td>
				<td>
					<input class="textbox" id="txtName" style="width:260px" type="text" placeholder="名称..." />
				</td>
			</tr>
			<tr>
				<td class="r-label">
					<label for="chkActive">是否有效</label>
				</td>
				<td>
					<input class='hisui-checkbox' type="checkbox" id="chkActive" checked/>
				</td>
			</tr>
			
		</table>
	</div>
