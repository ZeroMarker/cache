<!--主页面-->
<div class="hisui-layout" data-options="fit:true,border:false" >
	<div data-options="region:'center',border:false" style="">
		<div  class="hisui-panel" fit="true" style="border:0px;padding:0px;">
			<table id="gridmenus" data-options="toolbar:'#custtb',border:false"></table>
		</div>
	</div>
</div>

<!--编辑框-->
<div id="MenusDialog" style="width:420px;height:auto;padding:10px 10px 0px 10px;display:none;">
	<input class="textbox" id="txtId" type="hidden" ></input>
    <table class="form-table">
    	<tr>
			<td class="form-r-label">
				<label for="cboParentMenu">父菜单</label>
			</td>
			<td>
				<input class="hisui-combobox textbox" id="cboParentMenu" style="width:277px;"></input>
			</td>
		</tr>
		<tr>
			<td class="form-r-label">
				<label for="txtCode">代码</label>
			</td>
			<td>
				<input class="hisui-textbox textbox" id="txtCode" style="width:270px;"></input>
			</td>
		</tr>	
		<tr>
			<td class="form-r-label">
				<label for="txtDesc">名称</label>
			</td>
			<td>
				<input class="hisui-textbox textbox" id="txtDesc" style="width:270px;"></input>
			</td>
		</tr>
		<tr>
			<td class="form-r-label">
				<label for="txtLinkUrl">目标地址</label>
			</td>
			<td>
				<input class="hisui-textbox textbox" id="txtLinkUrl" style="width:270px;"></input>
			</td>
		</tr>
		<tr>
			<td class="form-r-label">
				<label for="txtExpression">表达式</label>
			</td>
			<td>
				<input class="hisui-textbox textbox" id="txtExpression" style="width:270px;"></input>
			</td>
		</tr>
		
		<tr>
			<td class="form-r-label">
				<label for="txtIconClass">图标样式</label>
			</td>
			<td>
				<input class="hisui-textbox textbox" id="txtIconClass" style="width:270px;"></input>
			</td>
		</tr>
		<tr>
			<td class="form-r-label">
				<label for="txtShowOrder">显示顺序</label>
			</td>
			<td>
				<input class="hisui-textbox textbox" id="txtShowOrder" style="width:270px;"></input>
			</td>
		</tr>
	</table>
</div>

<!--别名维护-->
<div id="OperDialog" class="hisui-window" data-options="closed:true" style="padding:10px 10px 0px 10px;">
	<div id="editOper" class="hisui-layout" data-options="fit:true"> 
		<input class="textbox" id="txtOperID" type="hidden" value="" ></input>
		<div style="border:none;" data-options="region:'center'" >
			<table id="gridMenuOper" data-options="fit:true,singleSelect:true" style="text-align:right; width:100%">
			</table>
		</div>
		<div style="height:120px" data-options="region:'south',border:false" style="height:50px;">
			<table style="text-align:right; width:100%;padding-top: 10px;">
			<tr>
				<td style="padding-left:10px;">代码</td>
				<td style="padding:0 10px ; text-align:left;">
					<input id="txtOperCode" class="textbox" style="width:180px;"/>
				</td>
				<td style="padding-left:10px;">名称</td>
				<td style="padding:0 10px ; text-align:left;">
					<input id="txtOperName" class="textbox" style="width:180px;"/>
				</td>
			</tr>
			</table>
		</div>
	</div>
</div>