<!DOCTYPE html>
<!--药房药库-处方点评-点评原因维护
	csp:pha.prc.v2.config.reason.csp
	js: pha/prc/v2/config.reason.js
-->
<html>
<!-- 验证session过期 -->
<csp:method name=OnPreHTTP arguments="" returntype=%Boolean>
    d ##Class(websys.SessionEvents).SessionExpired() q 1
</csp:method>

<head>
    <!-- iMedical版本标题 -->
    <title>
        <TRAK:TRANSLATE id=title>##(%session.Get("TITLE"))##</TRAK:TRANSLATE>
    </title>
    <TRAK:HEAD>
    </TRAK:HEAD>
    <HISUI />
    <PHALIBV1 />
    <style>
    .pha-col{
	            display: inline-block;
            padding-left: 10px;
            margin-left: -4px;
            font-size: 14px;
       
	   
	   }
    </style>
</head>

<body>
    <div class="hisui-layout" fit="true">
        <div data-options="region:'center',border:false" class="pha-body">
            <div class="hisui-layout" fit="true">
                <div data-options="region:'west',border:false,split:true,width:500">
                    <div class="hisui-panel" title="不合格原因维护"
                        data-options="headerCls:'panel-header-gray',iconCls:'icon-paper-ques',fit:true,bodyCls:''">
                        <div class="pha-row">
				            <div class="pha-col">
				                 方式
				            </div>
				            <div class="pha-col">
				                <input id="conWay" data-pha='class:"hisui-combobox",requied:true'>
				            </div>
				        </div>
				        <div class="pha-line"></div>
						<table id="treeGridReason"></table> 
                    </div>
                </div>
                <div data-options="region:'center',border:false">
                    <div class="hisui-panel" title="不合格原因明细列表"
                        data-options="headerCls:'panel-header-gray',iconCls:'icon-paper-ques',fit:true,bodyCls:''">
                        <table id="gridReason"></table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- 表格工具栏 -->
    <div id="gridReasonBar">
        <div class="pha-row" style="font-size:0">
            <div class="pha-col">
                 代码
            </div>
            <div class="pha-col">
                <input id="conCode" class='hisui-validatebox textbox' style="width:100px"/>
            </div>
            <div class="pha-col">
                 <label>描述</label>
            </div>
            <div class="pha-col">
                <input id="conDesc" class='hisui-validatebox textbox' style="width:200px;"/>
            </div>
			<div class="pha-col">
                <input id="conLevel" class='hisui-validatebox' hidden='true' data-pha='class:"hisui-validatebox"'>
            </div>
            <div class="pha-col">
                <a class="hisui-linkbutton" data-options="iconCls:'icon-w-add'" id="btnAdd">新增</a>
            </div>
            <div class="pha-col">
            	<a class="hisui-linkbutton" data-options="iconCls:'icon-w-edit'" id="btnEdit">修改</a>
            </div>
            <div class="pha-col">
            	<a class="hisui-linkbutton" data-options="iconCls:'icon-w-cancel'" id="btnDel">删除</a>
            </div>
        </div>
    </div>

    <!-- 本页面js -->
    <script type="text/javascript" src="../scripts/pha/prc/com/v2/js/store.js"></script>
    <script type="text/javascript" src="../scripts/pha/prc/v2/config.reason.js"></script>
</body>

</html>