<!-- 
 * FileName: dhcbill.ipbill.patordfee.csp
 * Anchor: ZhYW
 * Date: 2018-06-21
 * Description: 医嘱费用查询
-->
<!DOCTYPE html>
<csp:method name=OnPreHTTP arguments="" returntype=%Boolean>
 if ##class(websys.SessionEvents).SessionExpired() quit 1
 quit 1
</csp:method>
<html>
<head>
	<TITLE><EXTHEALTH:TRANSLATE id=title>##(%session.Get("TITLE"))##</EXTHEALTH:TRANSLATE></TITLE>
	<EXTHEALTH:HEAD></EXTHEALTH:HEAD>
	<HISUI/>
	<DHCBILL/>
	<ADDINS/>
	<link rel='stylesheet' type='text/css' href='../scripts/dhcbill/themes/default/dhcbill.ipbill.patordfee.css'/>
	<script type='text/javascript' src='../scripts/DHCWeb.OPCommonManageCard.js'></script>
	<script type='text/javascript' src='../scripts/DHCInsuPort.js'></script>
	<server>
		do ##class(web.UDHCCardCommLinkRegister).GetCardHardJSFunction()
		w "<input id='ReadAccExpEncrypt' type='hidden' value='"_##class(%CSP.Page).Encrypt($lb("web.UDHCAccManageCLSIF.getaccinfofromcardno"))_"'>",$c(13,10)
	</server>
</head>

<body class="hisui-layout">
	<div data-options="region:'north',border:false" style="height:36px;overflow:hidden;">
		<csp:Include Page="dhcbill.inpatient.banner.csp">
	</div>
	<div data-options="region:'center',border:false" style="padding:0 10px 10px 10px;">
		<div class="hisui-layout" data-options="fit:true">
			<div data-options="region:'center',border:false">
				<div class="hisui-layout" id="head-menu" data-options="fit:true">
					<div data-options="region:'north',border:false" style="padding:0 10px 10px 0;height:135px;overflow:hidden;">
						<div class="hisui-panel" data-options="title:'医嘱费用查询',fit:true,tools:'#search-panel-tools',headerCls:'panel-header-gray',iconCls:'icon-apply-check'">
							<table class="search-table" style="width:100%">
								<tr>
									<td class="r-label td-first-col"><label>卡类型</label></td>
									<td><input id="cardType" class="textbox tb130"/></td>
									<td class="r-label"><label>卡号</label></td>
									<td><input id="cardNo" class="textbox tb130"/></td>
									<td class="r-label"><label>登记号</label></td>
									<td><input id="patientNo" class="textbox tb130"/></td>
									<td><a href="javascript:;" class="hisui-linkbutton query-panel-btn" id="btn-readCard" data-options="iconCls:'icon-w-card'">读卡</a></td>
									<td><a href="javascript:;" class="hisui-linkbutton query-panel-btn" id="btn-find" data-options="iconCls:'icon-w-find'">查询</a></td>
								</tr>
								<tr>
									<td class="r-label td-first-col"><label>住院号</label></td>
									<td><input id="medicareNo" class="textbox tb130"/></td>
									<td class="r-label"><label>就诊号</label></td>
									<td><input id="episodeId" class="textbox tb130"/></td>
									<td class="r-label"><label>接收科室</label></td>
									<td><input id="ordRecDept" class="textbox tb130"/></td>
									<td><a href="javascript:;" class="hisui-linkbutton query-panel-btn" id="btn-bill">账单</a></td>
									<td><a href="javascript:;" class="hisui-linkbutton query-panel-btn" id="btn-feeDtl">费用明细</a></td>
								</tr>
								<tr class="display-more-tr">
									<td class="r-label td-first-display-col"><label>医嘱大类</label></td>
									<td><input id="ordCate" class="textbox tb130"/></td>
									<td class="r-label"><label>医嘱项</label></td>
									<td><input id="arcItm" class="textbox tb130"/></td>
									<td class="r-label"><label>开单科室</label></td>
									<td><input id="userDept" class="textbox tb130"/></td>
									<td><a href="javascript:;" class="hisui-linkbutton query-panel-btn" id="btn-depDtl">押金明细</a></td>
									<td><a href="javascript:;" class="hisui-linkbutton query-panel-btn" id="btn-checkfee">费用核对</a></td>
								</tr>
								<tr class="display-more-tr">
									<td class="r-label td-first-display-col"><label>账单状态</label></td>
									<td><input id="billStatus" class="textbox tb130"/></td>
									<td class="r-label"><label>开始日期</label></td>
									<td><input id="stDate" class="hisui-datebox textbox tb130"/></td>
									<td class="r-label"><label>结束日期</label></td>
									<td><input id="endDate" class="hisui-datebox textbox tb130"/></td>
									<td><a href="javascript:;" class="hisui-linkbutton query-panel-btn" id="btn-preInsuCharge">医保预结</a></td>
								</tr>
							</table>
						</div>
						<div id="search-panel-tools">
							<span id="more-container" class="menu-container">
								<span class="spread-b-down"></span>
								<span class="arrows-b-text">更多</span>
							</span>
						</div>
        			</div>
        			<div data-options="region:'center',border:false" style="padding-right:10px;">
        				<table class="hisui-datagrid" title="医嘱明细" id="ordItmList"></table>
        			</div>
				</div>
			</div>
        	<div data-options="region:'east',border:false" style="width:450px;">
				<div class="hisui-layout" data-options="fit:true">
    				<div data-options="region:'center',border:false" style="padding-bottom:10px;">
						<table class="hisui-datagrid" title="医嘱相关执行记录" id="oeItmList"></table>
        			</div>
        			<div data-options="region:'south',border:false" style="height:230px;">
						<table class="hisui-datagrid" title="收费项" id="tarItmList"></table>
        			</div>
    			</div>
			</div>
			<div id="oeItmToolBar">
				<div style="padding:5px 0;">
					<span style="padding-left:5px;padding-right:5px;">日期</span>
					<input id="execStDate" class="hisui-datebox textbox tb130">
					<span style="margin-left:2px;margin-right:2px;">至</span>
					<input id="execEndDate" class="hisui-datebox textbox tb130">
					<a href="javascript:;" class="hisui-linkbutton" id="btn-execFind" style="margin-left:10px;">查询</a>
				</div>
			</div>
        </div>
	</div>
	<script type="text/javascript" src="../scripts/dhcbill/dhcipbill/dhcbill.ipbill.patordfee.js"></script>
</body>
</html>