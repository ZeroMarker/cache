	//2 表示属于唯一打印病历
	
 	s currState = ##class(EPRinstance.EPRLogs).GetEPRStatus($Get(%request.Data("episodeID",1),""), $Get(%request.Data("printTemplateDocId",1),""), EPRNum)
 
