<style type="text/css">
    .pha-oe-label {
        float: left;
        width: 4.3em;
        text-align-last: justify;
    }

    .pha-oe-label:after {
        content: ' ：';
        position: absolute;
    }

    .pha-oe-val {
        font-weight: bold;
        font-size: 14px;
        float: left;
        width: 75px;
        padding-left: 10px;
    }

    .pha-oe-val-d {
        font-weight: bold;
        font-size: 14px;
        float: left;
    }

    .pha-oe-cell {
        float: left;
        line-height: 25px;

    }

    .pha-oe-row-line {
        border-top: 1px dashed #dddddd;
        clear: both;
        padding-top: 1px;
    }

    .pha-oe-row {}

    #lyWinCen .datagrid-header {
        display: none
    }

    #lyWinCen {
        border-top: none;
    }


    .panel-body-noheader {
        border-color: #cccccc;
    }

    .grid-oe-pass-ok {
        background: #b2efd0;
    }

    .grid-form-high {
        background: #ffe3e3;
        color:#ff3d2c;
    }

    .grid-form-low {
        background: #fff3dd;
        color:#ff7e00;
    }

    .grid-oe-pass-ok:hover,
    .grid-oe-pass-no:hover,
    .grid-form-high:hover,
    .grid-form-low:hover {
        background: #eaf2ff;
        color: #000000;
        cursor: default;
    }

    .grid-oe-pass-no {
        background: #FFC0CB;
    }

    .grid-oe-pass-back {
        background: #ffeecf;
    }

    .datagrid-row-selected {
        background: #ffe48d;
        color: #000000;
    }

    .grpViewBase div {
        float: left;
        padding-left: 10px;
    }

    .grpViewWard div,
    .grpViewPat div,
    .grpViewOrd div {
        float: left;
        padding-left: 10px;
        font-weight: bold;
    }

    .grpViewPat {
        padding-left: 30px;
        width: 400px;
    }

    .grpViewOrd {
        width: 250px;
        color: #13B694;
    }

    .grpViewWard {
        width: 170px;
        /* color: #0D82AA;  */
    }
    .datagrid-group{
        background-color:#f4f6f5;
    }
</style>

