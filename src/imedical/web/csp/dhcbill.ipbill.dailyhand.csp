<!-- 
 * FileName: dhcbill.ipbill.dailyhand.csp
 * Anchor: ZhYW
 * Date: 2018-03-16
 * Function: 
 * Description: 住院收费日结
-->
<!DOCTYPE html>
<csp:method name=OnPreHTTP arguments="" returntype=%Boolean>
 if ##class(websys.SessionEvents).SessionExpired() quit 1
 quit 1
</csp:method>
<html>
<head>
	<TITLE><EXTHEALTH:TRANSLATE id=title>##(%session.Get("TITLE"))##</EXTHEALTH:TRANSLATE></TITLE>
	<EXTHEALTH:HEAD></EXTHEALTH:HEAD>
	<HISUI/>
	<DHCBILL/>
	<link rel='stylesheet' type='text/css' href='../scripts/dhcbill/themes/default/dhcbill.dailyhand.css'/>
	<server>
		set hospId=$g(%session.Data("LOGON.HOSPID"))
		set editEndDate=##class(web.DHCBillPageConf).GetPageConfValue("dhcbill.ipbill.dailyhand.csp", "EDITENDDATE", "", hospId)
		w "<script type=""text/javascript"">",!
		w "	var GV = {",!
		w "		EditEndDate: """_editEndDate_"""",!
		w "	};",!
		w "</script>"
	</server>
</head>

<body style="padding:10px;">
	<div class="hisui-layout" data-options="fit:true,border:false">
		<div data-options="region:'center',border:false">
			<div class="hisui-layout" data-options="fit:true,border:false">
				<div data-options="region:'north',collapsible:false,title:'住院收费日结',headerCls:'panel-header-gray',iconCls:'icon-apply-check'" style="height:129px;border-radius:0;">
					<table class="search-table" style="margin:0 auto;">
						<tr>
							<td class="r-label"><label>开始日期</label></td>
							<td>
								<input id="stDateTime" class="hisui-datetimebox textbox tb170" data-options="showSeconds:true,disabled:true"/>
							</td>
							<td class="r-label-1">
								<input class="hisui-checkbox" type="checkbox" id="checkHand" label="结算历史"/>
							</td>
							<td class="r-label">
								<a href="javascript:;" class="hisui-linkbutton" id="btnCancel" data-options="iconCls:'icon-w-cancel'">取消</a>
							</td>
							<td>
								<csp:if condition='editEndDate="1"'>
									<a href="javascript:;" class="hisui-linkbutton" id="btnReset" data-options="iconCls:'icon-w-reset'">重置</a>
								</csp:if>
							</td>
						</tr>
						<tr>
							<td class="r-label"><label>结束日期</label></td>
							<td>
								<input id="endDateTime" class="hisui-datetimebox textbox tb170" data-options="showSeconds:true,disabled:#($case(editEndDate,"1":"false",:"true"))#"/>
							</td>
							<td class="r-label-1">
								<a href="javascript:;" class="hisui-linkbutton" id="btnFind" data-options="iconCls:'icon-w-find'">查询</a>
							</td>
							<td class="r-label">
								<a href="javascript:;" class="hisui-linkbutton" id="btnHandin" data-options="iconCls:'icon-w-paid'">结算</a>
							</td>
						</tr>
			    	</table>
				</div>
				<div data-options="region:'center',border:false" style="overflow:hidden;">
					<iframe id="tabMain" scrolling="auto" width="100%" height="100%" frameborder="0" src="dhcbill.dailymaintabs.csp?&businessType=IPD"></iframe>
				</div>
			</div>
		</div>
	</div>
	<form>
		<input id="guser" name="guser" type="hidden"/>
		<input id="footId" name="footId" type="hidden"/>
	</form>
	<script type="text/javascript" src="../scripts/dhcbill/dhcipbill/dhcbill.ipbill.dailyhand.js"></script>
</body>
</html>