<!DOCTYPE HTML>
<html style="overflow: hidden;">
<head>

    <meta http-equiv="Content-Type" content="text/html;charset=utf-8"/>
    <link rel="stylesheet" href="../scripts/DHCMA/css/base.css" type="text/css">
    <link href="../scripts/DHCMA/CPW/BT/DocEdit/themes/default/_css/umeditor.css" type="text/css" rel="stylesheet">
    <HISUI/>
    <!--<script type="text/javascript" src="../scripts/DHCMA/CPW/BT/DocEdit/third-party/jquery.min.js"></script>-->
    <script type="text/javascript" charset="utf-8" src="../scripts/DHCMA/CPW/BT/DocEdit/umeditor.config.js"></script>
    <script type="text/javascript" charset="utf-8" src="../scripts/DHCMA/CPW/BT/DocEdit/editor_api.js"></script>
    <script type="text/javascript" src="../scripts/DHCMA/CPW/BT/DocEdit/lang/zh-cn/zh-cn.js"></script>
    <style type="text/css">
        h1{
            font-family: "微软雅黑";
            font-weight: normal;
        }
        .edui-container{
        	border:none;
        	box-shadow:none;
        }
    </style>
</head>
<body style="padding:0px;">
	<script language="Cache" RUNAT="SERVER">		
		    Set FormID=$g(%request.Data("FormID",1))  //表单ID
	   </script>
    <!--style给定宽度可以影响编辑器的最终宽度-->
    <script type="text/plain" id="myEditor" style="width:578px;border: 1px solid #d4d4d4;">
        
    </script>
    <div style="text-align: center;"><a id="btnSaveDoc" class="hisui-linkbutton" data-options="iconCls:'icon-w-save'">保存</a></div>
    <script type="text/javascript">
        var um = UM.getEditor('myEditor',{
            //这里可以选择自己需要的工具按钮名称,此处仅选择如下七个
            //toolbar:['fullscreen source undo redo bold italic underline'],
			toolbar:[
				'source | undo redo | bold italic underline | forecolor backcolor | removeformat |',
				'insertorderedlist insertunorderedlist | cleardoc | ',
				'justifyleft justifycenter justifyright justifyjustify |',
				'horizontal'
			],
            //focus时自动清空初始化时的内容
            autoClearinitialContent:true,
            //关闭字数统计
            wordCount:false,
            //关闭elementPath
            elementPathEnabled:false,
            //默认的编辑区域高度
            initialFrameHeight:368
            //更多其他参数，请参考umeditor.config.js中的配置项
            
        });
        var FormID='#(FormID)#'
        var textDoc = $m({ClassName:"DHCMA.CPW.BTS.PathFormSrv",MethodName:"GetHelpDoc",
				"aFormID":FormID
			},false);
        UM.getEditor('myEditor').setContent(textDoc, false);
        
        $('#btnSaveDoc').on('click', function(){
			var ContentHtml=UM.getEditor('myEditor').getContent();
        	var ret = $m({ClassName:"DHCMA.CPW.BT.PathForm",MethodName:"UpdateDoc",
				"aId":FormID,
				"aDoc":ContentHtml
			},false);
			$.messager.alert("提示","保存成功");//BY wjf
		});
    </script>
	
</body>
</html>