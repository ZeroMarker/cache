<div class="layout" style="width: calc(100%); height:100%;"> 
   <div class="panel layout-panel layout-panel-north layout-split-north" style="left: 0px; top: 0px; width: calc(100%);">
    <div style="height: 195px; width: calc(100%);" class="panel-body panel-body-noheader panel-body-noborder layout-body panel-noscroll"> 
     <div class="layout" id="PatInfoTopLayOut" style="width: calc(100%); height: 195px;"> 
      <div class="panel layout-panel layout-panel-center layout-split-center" style="left: 0px; top: 0px; width: calc(100vw - 600px - 20px - 10px);"><!--20面板边框，10中间间距-->
       <div style="width: calc(100% - 2px); height: 193.008px;border-color: #ccc;overflow:hidden;" title="" class="panel-body panel-body-noheader layout-body"> 
        <!--病历数据---> 
        <csp:Include Page="ipdoc.patemrquality.show.csp">
       </div>
      </div> 
      <div class="panel layout-panel layout-panel-east " style="left: calc(100% - 600px); top: 0px; width: 600px;">
       <div class="panel-header panel-header-gray" style="width: calc(100% - 12px);">
        <div class="panel-title panel-with-icon">#(..Get("患者诊疗信息"))#</div>
        <div class="panel-icon icon-patient-info"></div>
        <div class="panel-tool">
         <a href="javascript:void(0)" class="layout-button-right" style="display: none;"></a>
        </div>
       </div>
       <div id="PatInfoTopLayOut" style="width: calc(100% - 2px); height: 156.004px;" title="" class="panel-body layout-body"> 
        <!--患者诊疗信息----->
