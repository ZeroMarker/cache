<html>
    <head>
        <title>    口腔科 常用文本 </title>
    </head>
    <body ondragstart="return false"  >
        <div class="easyui-layout" data-options="border:false,fit:true">
            <div class="easyui-panel" data-options="region:'north', border: false" style="height:30px;padding-top:5px;padding-left:5px">
                病种：<input class="easyui-combobox" id="cboDisease" style="width:280px" data-options="editable:false">
            </div>
            <div id="locutionPnl" data-options="region:'center', border: false, closable: false" style="">
                <table id="dgChapter" class="easyui-datagrid" data-options="fit:true,border:false, tools: '#textCollectTool', title: '   '" style="">
                </table>
            </div>
            <div id="textEditForm" class="easyui-dialog" title="" data-options="border:true,closed:true" style="width:360px;height:300px;padding:10px 20px">
                <div style="margin-bottom:5px">
                    <div>分类:</div>
                    <input id="textCate" class="easyui-textbox" type="text" data-options="required:true" style="width:100%;height:25px">
                </div>
                <div style="margin-bottom:5px">
                    <div>摘要:</div>
                    <input id="textSum" class="easyui-textbox" type="text" data-options="required:true" style="width:100%;height:25px">
                </div>
                <div style="margin-bottom:5px">
                    <div>常用文本:</div>
                    <textarea id="textContent" contentEditable="true" word-wrap="break-word" wrap="hard" style="width:100%;height:80px;overflow-y:auto;"></textarea>
                </div>
            </div>
            <div id="textCollectTool" style="">
                <!--
                <a id="textAdd" href="javascript:void(0)" class="icon-add"></a>
                <a id="textEdit" href="javascript:void(0)" class="icon-edit"></a>
                <a id="textDel" href="javascript:void(0)" class="icon-remove"></a>
                <a id="textReload" href="javascript:void(0)" class="icon-reload"></a>
                -->
            </div>
        </div>
        <script type="text/javascript" src="../scripts/emr/js/op.txtcollector.stomatology.js"></script>
    </body>
</html>