<div class="hisui-layout" fit="true">
	<div data-options="region:'north',border:false,collapsible:false,headerCls:'panel-header-gray',iconCls:'icon-reset'" style="height:141px;">
		<div class="hisui-panel" style="border:0;border-radius:0;border-bottom:1px dashed #ccc;">
			<table class="search-table">
				<tr>
					<td class="r-label">
						<label id="_HospUserListLabel" style='color:red;'>医院</label>
					</td>
				
					<td colspan="3">
						<input id="_HospUserList"/>
					</td>
				</tr>
				<tr>
					<td class="r-label">
						<label for="StartDate">开始日期</label>
					</td>
					<td>
						<input class="hisui-datebox textbox" id="StartDate" data-options="formatter:myformatter,parser:myparser"/>
					</td>
					<td class="r-label r-label-m">
						<label for="EndDate">结束日期</label>
					</td>
					<td>
						<input class="hisui-datebox textbox" id="EndDate" data-options="formatter:myformatter,parser:myparser"/>
					</td>
					<td class="r-label r-label-m">
						<label for="Reason">停诊原因</label>
					</td>
					<td>
						<input class="hisui-combobox textbox" id="Reason"/>
					</td>
					<td class="r-label-m">
						<a id="BFind" href="#" class="hisui-linkbutton" data-options="iconCls:'icon-w-find'">查询</a>
					</td>
				</tr>
				<tr>
					<td class="r-label">
						<label for="Loc">科室</label>
					</td>
					<td>
						<input class="hisui-combobox textbox" id="Loc"/>
					</td>
					<td class="r-label r-label-m">
						<label for="Doc">医生</label>
					</td>
					<td>
						<input class="hisui-combobox textbox" id="Doc"/>
					</td>
					<!--td class="r-label r-label-m">
						<label for="Hospital">医院</label>
					</td>
					<td>
						<input class="hisui-combobox textbox" id="Hospital"/>
					</td-->
					<td></td><td></td>
					<td class="r-label-m">
						<a id="BStop" href="#" class="hisui-linkbutton" data-options="iconCls:'icon-w-edit'">停诊</a>
					</td>
				</tr>
			</table>
		</div>
	</div>
	<div class="panel-center" data-options="region:'center',title:'',border:false">
		<table id="LongStopListTab"></table>
	</div>
</div>