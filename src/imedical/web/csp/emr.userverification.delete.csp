<html>
<head>
<title>验证用户</title>
<script type="text/javascript" src="../scripts/emr/lib/JQuery/jquery-1.8.0.min.js" charset="UTF-8"></script>
<style type="text/css">
*{
	margin:0px;
	padding:0px;
	font-family:"Microsoft Yahei";
}
.form{
	padding-left:25px;
	padding-top:5px;
	width:200px;	
}
.name{
	font-size:18;
	font-weight:bold;
	padding-top:20px;	
}
.password{
	margin-top:10px;	
}
.password input{
	width:200px;
	margin-top:10px;
}
.button{
	margin-top:15px; 
}
.button input{
	width:63px;
	margin-left:10px;
	height:25px;
}
</style>
 <script language="cache" runat="server">
	s userId = $Get(%request.Data("UserID",1),"")
	s userName = $Get(%request.Data("UserName",1),"")
</script>		
 <script language="javascript">
 	var userId = '#(userId)#';
 	var userName = '#(userName)#';
 	
 	$(function(){
	  $(".name").text("创建者："+userName);
	});
 	function confirm()
 	{
	 	window.returnValue = 0;
	 	var password = document.getElementById("password").value;
		window.returnValue = userVerification(userId,password);
	 	closeWindow();
	}
	
	function cancel()
	{
		window.returnValue = "";
		closeWindow();
	}
	//关闭窗口
	function closeWindow()
	{
		window.opener = null;
		window.open('','_self');
		window.close();	
	}
	///验证用户名
	function userVerification(userCode,password)
	{
		var result = "0";
		jQuery.ajax({
			type: "Post",
			dataType: "text",
			url: "../EMRservice.Ajax.common.cls",
			async: false,
			data: {
					"Class": "EMRservice.BL.BLPowerUser",
					"Method":"IsLogonValid",
					"OutputType":"String",
			        "p1": userCode,
			        "p2": password
			      },
			success: function(d) {
				result =  d;
			},
			error : function(d) { alert(" error");}
		});
		return result;
	}	
</script>
</head>
<body>
	<div class="form">
		<div>
			<div class="name"></div>
		</div>
		<div class="password">
			<div style="font-size:15px;">删除前，请输入创建者密码:</div>
			<input type="password" id="password" onkeydown= "if(event.keyCode==13)confirm()"/>
		</div>
		<div class="button">
			<input type="button" onclick="confirm()"  value="确认"/>
			<input type="button" onclick="cancel()" value="取消"/>
		</div>
	</div> 
</body>
</html>
