<style>
	 .PatImage{
		position: absolute;
		top: 3px;
		width:30px;
	 	height:30px;
	 	border-radius:30px;
	 	margin-left: 10px;
	 }
	 .PatInfoItem{
		position: absolute;
		top: 3px;
		/*left: 39px;*/
		margin-left:10px;
	 }
	 .PatInfoItem span{
		 color:black;
		 margin:0 5px;
	 }
	 .PatInfoItem img{
		 color:white;
		 margin:0 5px;
	 }
	 .PatInfoItem a img{
		 margin-top:4px;
	 }
	 /*.panel-tool a{*/
	 #win-min,#win-close{
		 opacity:1;
		 background-color:white;
		 border-radius:3px;
	 }
	 #win-min:hover,#win-close:hover{
		 background-color:red;
		 background-image:'';
	}
	 .man{
		 background:url(../images/man.png) no-repeat;
		 background-size:cover;
	 }
	 .woman{
		 background:url(../images/woman.png) no-repeat;
		 background-size:cover;
	 }
	 .i-btn-right{
	 	position: absolute;
	    right: 10px;
	    top: 3px;
 	}
 	 .baseIcon img{
	 margin-left:5px;
	 margin-right:5px;
 }
</style>
<div class="patientbar">
   <div class="PatInfoItem"></div>
   <csp:if condition=PatientListPage'="">
   <div class="i-btn-right">
   	   <div id="InpatListDiv" style="display:inline;">
			<a id="InPatListBtn" href="#" class="hisui-linkbutton" style="background:#21BA45;">病人列表</a>
			<div id="patlist" class="hisui-window" title="病人列表" 
				style="width:990px;height:560px;overflow:hidden;"  
				data-options="resizable:true,modal:true,closed:true,closable:true,minimizable:false,collapsible:false,maximizable:false,draggable:false,resizable:false,onOpen:onOpenPatListWin,onClose:onClosePatListWin,headerCls:'panel-header-gray',isTopZindex:true">  
			    <iframe src="about:blank" width="100%" min-height="350px" height="100%" frameborder="0"></iframe>
			</div>
		</div>
	</div>
	</csp:if>
</div>
<csp:if condition=PatientListPage'="">
<script type="text/javascript">

function showPatListWin(){
	//if ($("#InpatListDiv .panel").css('display')!=="none") return ;
	//$("#patlist").window("");
	if ($("#InpatListDiv").data("AutoOpen")==1){
		$("#patlist").window({closable:false,maximizable:false});
	}else{
		$("#patlist").window({closable:true,maximizable:true});
	}
	$("#patlist").window("open");
}
function hidePatListWin(){
	if ($("#InpatListDiv").data("AutoOpen")==1){
		// 未选病人时,不允许隐藏病人列表
	}else{
		$("#patlist").window("close");
	}
}
function onOpenPatListWin(){
	if ($("#patlist").find("iframe").get(0).src=="about:blank") {
		$("#patlist").find("iframe").get(0).src="undefined"==typeof patientListPage?"inpatientlist.csp":patientListPage;
	}
	//var opt = {'z-index':9085,'position':'fixed'};
	//var panelJObj = $("#InpatListDiv .panel");
	var patListJObj = $("#patlist");
	if ($("#InpatListDiv").data("AutoOpen")==1){
		// 未选中病人时,全屏显示病人列表
		//$('#InDiagTimeLineBtn,#InPatListBtn').hide();
		//panelJObj.css($.extend({},opt,{right:'0px',top:'0px'}));
		patListJObj.window('resize', {left:0,top:0, width:$(document.body).width(), height:$(document.body).height() } );
	}else{
		///panelJObj.css($.extend({},opt,{right:'10px',top:'38px'}));
		patListJObj.window('resize', {left:$(document.body).width()-1090-10,top:38, width:1090, height:$(document.body).height()-45 });
	}
	//$(".window-mask.alldom").show();
}
function onClosePatListWin(){
	$(".window-mask.alldom").hide();
}
$(function(){
	$("#InPatListBtn").click(showPatListWin);
	$(".window-mask.alldom").click(function(){ // 2019-11-21
		hidePatListWin();
	});
});
</script>
</csp:if>