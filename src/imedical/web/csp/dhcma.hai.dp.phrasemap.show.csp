<!-- 主页面-->
<div class="hisui-layout" data-options="fit:true">
	<div data-options="region:'west',border:false,collapsible:false" class="ma-panel" style="border-right:0px;width:300px;padding:10px;">
		<div class="hisui-panel" title="常用短语列表" style="padding-top:2px;" data-options="iconCls:'icon-resort',fit:true,headerCls:'panel-header-gray'">
			<div  title="" class="hisui-accordion accordion-gray" fit="true" data-options="border:false">
				<div id="ulPhraseType" style="border-right:0px;border-left:0px">
				</div>
			</div>
		</div>
	</div>
	<div data-options="region:'center',border:false" class="ma-panel" style="padding:10px 10px 10px 0px;">
		<div class="hisui-panel" title="常用短语对照" fit="true" data-options="headerCls:'panel-header-gray',iconCls:'icon-resort'">
			<table id="gridPhraseMap" data-options="border:false,toolbar:'#custtb'" fit="true" ></table>
			<div id="custtb" style="" >
				<a class="hisui-linkbutton" id="btnAdd" data-options="iconCls:'icon-add',plain:true,stopAllEventOnDisabled:true"> 新增 </a>
				<a class="hisui-linkbutton" id="btnEdit" data-options="iconCls:'icon-write-order',plain:true,stopAllEventOnDisabled:true"> 修改 </a>
				<a class="hisui-linkbutton" id="btnDelete" data-options="iconCls:'icon-cancel',plain:true,stopAllEventOnDisabled:true" > 删除 </a>
			</div>
		</div>
	</div>
	
	<div id="layer" style="border:none;overflow:hidden;padding-right:10px;margin-bottom: -10px;display:none;">
		<table class="search-table">
			<tr>
				<td class="r-label">
					<label for="txtCode">短语代码</label>
				</td>
				<td>
					<input class="textbox" id="txtCode" style="width:360px" type="text" />
				</td>
			</tr>
			<tr>
				<td class="r-label">
					<label for="txtDesc">短语名称</label>
				</td>
				<td>
					<input class="textbox" id="txtDesc" style="width:360px"/>	
				</td>
			</tr>
			<tr>
				<td class="r-label">
					<label for="cboMapDic">标准字典名称</label>
				</td>
				<td>
					<input class="hisui-combobox" id="cboMapDic" style="width:367px"/> 
				</td>
			</tr>
			<tr>
				<td class="r-label">
					<label for="txtSCode">子系统代码</label>
				</td>
				<td>
					<input class="textbox" id="txtSCode" style="width:360px"/>
				</td>
			</tr>
			<tr>
				<td class="r-label">
					<label for="chkActive">是否有效</label>
				</td>
				<td>
					<input class='hisui-checkbox' type="checkbox" id="chkActive" checked/>
				</td>
			</tr>
			
		</table>
	</div>
	
</div>
