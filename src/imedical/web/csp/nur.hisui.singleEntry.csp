<script type="text/javascript" src="../scripts/nurse/nis/config/index.js" charset='utf-8'></script>
<script type="text/javascript" src="../scripts/nurse/hisui/singleEntry.js" charset="gbk"></script>
<link rel="stylesheet" href="../scripts/nurse/hisui/css/singleEntry.css">
<!-- <div class="singleEntry"> -->
<div class="hisui-panel" data-options="fit:true" style="padding: 10px;display: flex;flex-flow: column;">
    <div>
        <!-- <span>时间</span> -->
        <span>#(..Get("时间"))#</span>
        <input id="logDate" class="hisui-datebox textbox" style="width:115px;" data-options="onSelect:findTempDataByDay"></input>
        <input id="logTime" class="hisui-timespinner" style="width:65px;border-radius: 2px;" data-options="onChange:findTempDataByDay">
        <a href="#" class="hisui-linkbutton" style="margin-left: 5px;" onclick="saveVitalSigns()">保存</a>
        <div class="helpInfo">
            <a href="#" class="helpFlag">
                <span class="icon icon-help">&nbsp;</span>
                <!-- <span>帮助</span> -->
                <span>#(..Get("帮助"))#</span>
            </a>
			<div class="helpDetail">
				<!-- <p><span>红色框：</span><span>非有效数据</span></p>
				<p><span>黄色框：</span><span>非正常数据</span></p> -->
                <table>
                  <tr>
                    <td>#(..Get("红色框："))#</td>
                    <td>#(..Get("非有效数据"))#</td>
                  </tr>
                  <tr>
                    <td>#(..Get("黄色框："))#</td>
                    <td>#(..Get("非正常数据"))#</td>
                  </tr>
                </table>
			</div>
        </div>
    </div>
    <div class="vitalTable">
        <table id="vitalSigns"></table>
    </div>
</div>
