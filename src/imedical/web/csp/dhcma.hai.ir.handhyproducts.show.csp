<!-- 主页面-->
<div class="hisui-layout" data-options="fit:true">
    <!--手卫生用品维护-->
	<div data-options="region:'center',border:false,collapsible:false" class="ma-panel" style="padding:10px;">
        <table id="gridHdProducts" data-options="toolbar:'#custtb'"></table>
		<div id="custtb" style="padding:3px" > 
	        <a class="hisui-linkbutton" id="btnAdd" data-options="iconCls:'icon-add',plain:true,stopAllEventOnDisabled:true">
	            新增
			</a>
		    <a class="hisui-linkbutton" id="btnEdit" data-options="iconCls:'icon-write-order',plain:true,stopAllEventOnDisabled:true">
				修改
			</a>
			<a class="hisui-linkbutton" id="btnDelete" data-options="iconCls:'icon-cancel',plain:true,stopAllEventOnDisabled:true">
				删除
			</a>	    
	    </div>          
	</div>
    <!--手卫生用品消耗量编辑 -->
    <div id="LayerEdit" style="overflow: hidden; padding-right: 10px; display: none; ">
        <table class="search-table">
            <tr>
                <td class="r-label">
                    <label for="txtCode">代码</label>
                </td>
                <td>
                    <input class="textbox" id="txtCode" style="width: 350px" />
                </td>
            </tr>
            <tr>
                <td class="r-label">
                    <label for="txtDesc">名称</label>
                </td>
                <td>
                    <input class="textbox" id="txtDesc" style="width: 350px" />
                </td>
            </tr>
            <tr>
                <td class="r-label">
                    <label for="txtPinyin">拼音码</label>
                </td>
                <td>
                    <input class="textbox" id="txtPinyin" style="width: 350px" />
                </td>
            </tr>
            <tr>
                <td class="r-label">
                    <label for="txtSpec">规格</label>
                </td>
                <td>
                    <input class="textbox" id="txtSpec" style="width: 350px" />
                </td>
            </tr>
            <tr>
                <td class="r-label">
                    <label for="cboUnit">单位</label>
                </td>
                <td>
                    <input class="hisui-combobox" id="cboUnit" style="width:357px" />
                </td>
            </tr>
            <tr>
                <td class="r-label">
                    <label for="txtAvgAmount">次均用量</label>
                </td>
                <td>
                    <input class="textbox" id="txtAvgAmount" style="width: 350px" />
                </td>
            </tr>
            <tr>
                <td class="r-label">
                    <label for="txtResume">备注</label>
                </td>
                <td>
                    <input id="txtResume" class="textbox" style="width: 350px;" />
                </td>
            </tr>
            <tr>
                <td class="r-label">
                <label for="txtResume">是否有效</label>
                </td>
                <td>
                    <input class='hisui-radio' type="radio" label='' id="chkIsActive" data-options="radioClass:'hischeckbox_square-blue',required:true">
                </td>
            </tr>
            <tr>
                <td colspan="2" class="search-btnlist">
                    <a id="btnSave" class="hisui-linkbutton">保存</a>
                    <a id="btnClose" class="hisui-linkbutton">关闭</a>
                </td>
            </tr>
        </table>
    </div>
</div>
