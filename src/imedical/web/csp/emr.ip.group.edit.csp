   <body>
   		<div id="main" class="hisui-layout" data-options="fit:true">
		   	<div id="west" data-options="region:'west',split:true,border:false" style="width:320px;">
				<div id="navtab" class="hisui-tabs tabs-gray" data-options="fit:true">  
