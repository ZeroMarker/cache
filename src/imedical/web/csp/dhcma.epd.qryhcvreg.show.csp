<!-- 主页面-->
<div class="hisui-layout" data-options="fit:true">
	<div data-options="region:'center',border:false,collapsible:false" style="padding:10px;">
		<table id="HcvQuery" data-options="toolbar:'#QueryToolBar'"></table>
        <div id="QueryToolBar" style="height:80px;" >			
			<table class="search-table">
				<tr>
					<td style="padding-left:20px">
						<label for="cboHospital">医院</label>
						<input class="hisui-combobox textbox" id="cboHospital" style="width:200px;"/>
					</td>
					<td style="padding-left:20px">
						<label for="cboDateType">日期类型</label>
						<input class="hisui-combobox textbox" id="cboDateType"/>
					</td>
					<td style="padding-left:20px">
						<label for="dtStaDate" >开始日期</label>
						<input class="hisui-datebox textbox" id="dtStaDate" style="width:120px"/>
					</td>
					<td style="padding-left:20px">
						<label for="dtEndDate">结束日期</label>
						<input class="hisui-datebox textbox" id="dtEndDate" style="width:120px"/>
					</td>
					<td style="padding-left:20px">
						<a id="btnQuery" class="hisui-linkbutton" data-options="iconCls:'icon-w-find'">查询</a>
					</td>
					<td style="padding-left:20px">
						<a id="btnExport" class="hisui-linkbutton" data-options="iconCls:'icon-w-export'" >导出</a>
					</td>
					<td style="padding-left:20px">
						<a id="btnExportAll" class="hisui-linkbutton" data-options="iconCls:'icon-w-export'" >全部导出</a>
					</td>
	      		</tr>
	      		<tr>
					<td style="padding-left:20px;" colspan="8">
						<label for="chkStatus">报告状态</label>
						<span>
							<input class="hisui-checkbox" type="checkbox" name="chkStatus" data-options="checked:true" label="待审" id="chkStatus-1" value=1>
						</span>
						<span style="margin-left:20px;">
							<input class="hisui-checkbox" type="checkbox" name="chkStatus" data-options="checked:true" label="已审" id="chkStatus-2" value=2>
						</span>
						<span style="margin-left:20px;">
							<input class="hisui-checkbox" type="checkbox" name="chkStatus" data-options="checked:false" label="退回" id="chkStatus-5" value=5>
						</span>
						<span style="margin-left:20px;">
							<input class="hisui-checkbox" type="checkbox" name="chkStatus" data-options="checked:false" label="草稿" id="chkStatus-6" value=6>
						</span>
						<span style="margin-left:20px;">
							<input class="hisui-checkbox" type="checkbox" name="chkStatus" data-options="checked:false" label="作废" id="chkStatus-7" value=7>		
						</span>
					</td>				
				</tr>
			</table>
		</div>
	</div>
</div>
