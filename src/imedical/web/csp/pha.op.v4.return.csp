<!DOCTYPE html>
<!--门诊药房hisui--退药
    csp:csp/pha.op.v4.return.csp
    js: scripts/pha/op/v4/return.js
-->
<!-- 验证session过期 -->
<csp:method name = OnPreHTTP arguments = "" returntype = %Boolean>
    d ##Class(websys.SessionEvents).SessionExpired() q 1
    
</csp:method>

<HEAD>
    <!-- iMedical版本标题 -->
    <title>
        <TRAK:TRANSLATE id = title>##(%session.Get("TITLE"))##</TRAK:TRANSLATE>
    </title>
    <TRAK:HEAD></TRAK:HEAD>
    <HISUI css="websys.menugroup.css"></HISUI>
    <ADDINS require="RWCard,WebsysTool" />
    <DOCCARD medStepCode="Return" ></DOCCARD>
    <PHALIBV1 />
    <PHAPRINTCOM />
    <PHAOPV4 />
    <script type="text/javascript" src='../scripts/DHCWeb.OPCommonManageCard.js'></script>
    
    <!-- 样式扩展 -->
    <style>
    </style>

</HEAD>
<body>
    
    <div class = "hisui-layout" fit = "true">
        <div data-options = "region:'center',border:false" class = "pha-op-body-big">
            <div class = "hisui-layout" fit = "true" id="layout-op―condition">
                <div id ="qcondPanel" class ="pha-op-header-big-one" data-options="region:'north',border:false,split:false"> 
                    <div>
                        <div class="row">
                            <div width="60%" class="pha-op-window-left">
                                <a class = "hisui-linkbutton big pha-op-btn-word4" plain = 'true' iconCls = "icon-big-drug-back" id = 'btnReturn'>退药</a>
                                <a class = "hisui-linkbutton big pha-op-btn-word4" plain = 'true' iconCls = "icon-big-drug-forbid" id = 'btnRefuse'>拒绝退药</a>
                                <a class = "hisui-linkbutton big pha-op-btn-word4" plain = 'true' iconCls = "icon-big-drug-back" id = 'btnCancelRefuse'>撤消拒绝</a>
                                <a class = "hisui-linkbutton big pha-op-btn-word4" plain = 'true' iconCls = "icon-big-print" id = 'btnPrintReturn'>打印</a>
                                <a class = "hisui-linkbutton big pha-op-btn-word4" plain = 'true' iconCls = "icon-big-clear" id = 'btnClean'>清屏</a>
                            </div>
                            <div width="40%" class="pha-op-window-right" style="border-left:0px">
                                <div id = "OP_PatInfo" ></div>                                       
                            </div>
                        </div>
                        <div style="clear:both"></div>
                        <div class = "pha-line"></div>
                        <div width="100%" >
                            <table id = "qCondition" class = "pha-con-table">
                                <tr>
                                    <td class = "r-label-2">
                                        <label for = "stDate">#(..Get("起止日期"))#</label>
                                    </td>
                                    <td>
                                        <input id = 'stDate' class = "hisui-datebox" data-pha = 'class:"hisui-datebox",clear:true,query:true,required:true'>
                                    </td>
                                    <td class = "r-label">
                                        <label for = "endDate">#(..Get("至"))#</label>
                                    </td>
                                    <td>
                                        <input id = 'endDate' class = "hisui-datebox"  data-pha = 'class:"hisui-datebox",clear:true,query:true,required:true'>
                                    </td>
                                    <td class = "r-label">
                                        <label for = "prescNo">#(..Get("处方号"))#</label>
                                    </td>
                                    <td>
                                        <input id = 'prescNo' class = "hisui-combobo" data-pha = 'class:"hisui-combobox",clear:true,query:true'>
                                    </td>
                                    <td class = "r-label">
                                        <label for = "patNo">#(..Get("登记号"))#</label>
                                    </td>
                                    <td>
                                        <input id = 'patNo' class = "hisui-validatebox" data-pha = 'class:"hisui-validatebox",clear:true,query:true'>
                                    </td>
                                    <td class = "r-label">
                                        <label for = "cardNo">#(..Get("卡号"))#</label>
                                    </td>
                                    <td>
                                        <input id = 'cardNo' class = "hisui-validatebox " data-pha = 'class:"hisui-validatebox",clear:true,query:true'>
                                    </td>
                                    <td>
                                        <a class = "hisui-linkbutton" style = "width:100%" data-options = "iconCls:'icon-w-card'" id = 'btnReadCard'>读卡</a>
                                    </td>
                                    <td id = "divFreeDrgFlag">
                                        <input id="freeDrgFlag" class='hisui-checkbox' type="checkbox" label="免费药" data-pha = 'class:"hisui-checkbox",clear:true,query:true' >
                                    </td>
                                    <td>
                                        <a class = "hisui-linkbutton" style = "width:100%" data-options = "iconCls:'icon-w-find'" id = 'btnFind'>查询</a>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div style="clear:both"></div>
                    </div>
                </div>              
                <div data-options = "region:'center',border:false,split:true">
                    <div class = "hisui-layout" fit = "true" id="layout-op―grid-return">
                        <div data-options="headerCls:'panel-header-gray',iconCls:'icon-paper',region:'west',height:200, split:true, title:'退药申请列表'" >
                            <table id="gridRequestList"></table>
                        </div>
                        <div data-options="headerCls:'panel-header-gray',iconCls:'icon-paper',region:'center', split:true,title:'待退药明细'">
                            <table id="gridReturnDetail"></table>
                        </div>
                    </div>
                </div>
            </div>      
        </div>      
    </div>
    <script type="text/javascript" src="../scripts/pha/op/v4/return.js"></script>
</body>
</html>