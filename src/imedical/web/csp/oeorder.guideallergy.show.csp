<div class="hisui-layout" data-options="fit:true,border:false">
	<csp:if condition='GuideAllergyType="Guide"'>
		<!--皮试引导窗口-->
		<div data-options="region:'center',title:'',border:false,collapsible:false" style="padding:10px 10px 10px 10px;">
			<div id="ItemIframeTemplate" class="hisui-panel" style="border:1px solid #ccc;border-radius:4px;" data-options="fit:true,border:false,footer:'#panel-footer'">
				<div id="PatAllergInfo" class="panel-title" style="height:auto;"></div>
				<div id="templtable-div"></div>
			</div>
		</div>
		<div data-options="region:'south',border:false,collapsible:false" style="width:200px;padding:0px 10px 10px 10px;">
			<div class="hisui-panel" fit="true" style="height:80px;border:1px solid #ccc;border-radius:4px;">
				<div id="panel-footer">
					<div class="search-div">
						<label class="r-label">请选择本次药品用途:</label>
						<a href="#" class="hisui-linkbutton" id="SkinTestBtn" data-options="iconCls:''" style="margin-left:80px;">皮试</a>
						<a href="#" class="hisui-linkbutton" id="TreatBtn" data-options="iconCls:''" style="margin-left:80px;">治疗</a>
						<input id="MSCheck" disabled="disabled" class='hisui-checkbox' type="checkbox" style="margin-left:15px;" label="免试">
						<a href="#" class="hisui-linkbutton" id="ExitBtn" data-options="iconCls:'icon-w-close'" style="margin-left:80px;">取消录入</a>
					</div>
					<div class="footer-div">
						
					</div>
				</div>
				
			</div>
		</div>
	<csp:else>
		<!--皮试附加医嘱选择窗口-->
		<div data-options="region:'center',title:'',border:false,collapsible:false" style="padding:10px 10px 10px 10px;">
			<div id="ItemIframeTemplate" class="hisui-panel" style="border:1px solid #ccc;border-radius:4px;" data-options="fit:true,border:false,footer:'#panel-footer'">
				<table id="AppendAllergyOrd" class="panel-title" style="height:auto;"></table>
			</div>
		</div>
		<div data-options="region:'south',border:false,collapsible:false" style="width:200px;padding:0px 10px 10px 10px;">
			<div class="hisui-panel" fit="true" style="height:50px;border:1px solid #ccc;border-radius:4px;">
				<div id="panel-footer">
					<div class="search-div">
						<a href="#" class="hisui-linkbutton" id="AppendOKBtn" data-options="iconCls:'icon-w-ok'" style="margin-left:200px;">确定</a>
						<a href="#" class="hisui-linkbutton" id="AppendCancelBtn" data-options="iconCls:'icon-w-cancel'" style="margin-left:120px;">取消</a>
					</div>
				</div>
			</div>
		</div>
	</csp:if>
</div>
