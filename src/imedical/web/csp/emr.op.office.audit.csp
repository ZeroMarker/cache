        <script type="text/javascript" src="../scripts/emr/js/tools.js"></script>
        
        <style type="text/css">
        * 
        .datagrid-cell{
            font-size: 16px;
            line-height: 35px;
            height: 30px;
            font-weight: 500;
        }
        .searchbox .searchbox-text{
            font-size: 16px;
            height: 16px;
        }
        .combo .combo-text{
            font-size: 16px;
            height: 16px;
        }
        button{
            cursor: pointer;
            margin-left: 5px;
            font-size: 18px;
            font-weight: 700;
        }
        button:hover{
            text-shadow: -1px -1px 0 rgba(0,0,0,0.3);
