<!-- 主页面-->
<div id="Message" class="hisui-layout" data-options="fit:true" style="width:100%;height:100%;">
	<div data-options="region:'center',border:false" id="divCenter">	
		 <div id="divMessage" style="padding:10px;">	
		 </div>
	</div>
	<div data-options="region:'south',border:false" id="divSouth"  style="height:141px;">
	   <div id="divSendMess" style="display: block; border-top: 1px solid #ccc;padding:10px;">		
			<textarea class="textbox"  id="txtMessage" style="width:99%;height:80px;border:none;outline:none;background-color:#fff;" placeholder="请输入..."></textarea> 
			<div style="padding-top:10px;text-align:right">
				<a id="btnRead"  class="hisui-linkbutton" style="margin-right:10px;">阅读</a>
				<a id="btnSend"  class="hisui-linkbutton">发送</a>
				<span style="margin-left:-7px;font-size:12px;color: #fff;">|</span>
				<a id="btnMSend"  class="hisui-linkbutton"  data-options="iconCls:'icon-w-arrow-down',plain:true" style="margin-left:-5px;margin-right:10px;background-color:#40A2DE"></a>
				<a id="btnClose"  class="hisui-linkbutton">关闭</a>			
			</div>
		</div>
	</div>
</div>