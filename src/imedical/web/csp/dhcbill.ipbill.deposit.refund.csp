<server>
	set BaseCfgStr=##class(web.DHCOPConfig).ReadOPSPConfig(HospId)
	set Dep2PreFlag=$p(BaseCfgStr,"^",47)
</server>
<div class="hisui-layout" data-options="fit:true">
	<div data-options="region:'north',border:false" style="height:'auto';">
		<table class="search-table">
			<tr>
				<td class="r-label td-first-col-58"><label>金额</label></td>
				<td><input id="refAmt" class="hisui-numberbox textbox" data-options="precision:2,disabled:true" style="color: #FF0000;font-weight: bold;"/></td>
				<td class="r-label r-label-1"><label>退款方式</label></td>
				<td><input id="refMode" class="hisui-combobox textbox"/></td>
				<td class="r-label r-label-1"><label>押金类型</label></td>
				<td><input id="refDepositType" class="hisui-combobox textbox"/></td>
			</tr>
			<tr>
				<td class="r-label"><label>当前票号</label></td>
				<td><input id="refRcptNo" class="textbox" style="font-weight: bold;" disabled/><a href="javascript:;" id="btn-refRcptTip" class="hisui-linkbutton" data-options="iconCls:'icon-tip',plain:true"></a></td>
				<td class="r-label r-label-1"><label>退款原因</label></td>
				<td><input id="refReason" class="hisui-combobox textbox"/></td>
				<csp:if condition=Dep2PreFlag=1>
				<td class="r-label r-label-1"><label>门诊预交金票号</label></td>
				<td><input id="accPreRcptNo" class="textbox" style="font-weight: bold;" disabled/></td>
				</csp:if>
			</tr>
		</table>
		<div style="text-align:center;padding-bottom:10px;">
			<a href="javascript:;" class="hisui-linkbutton dep-panel-btn" id="btn-refund">退押金(F10)</a>
			<div style="display:inline-block;margin:0 5px;"></div>
			<a href="javascript:;" class="hisui-linkbutton dep-panel-btn" id="btn-refReprint">补打收据</a>
			<div style="display:inline-block;margin:0 5px;"></div>
			<csp:if condition=Dep2PreFlag=1>
			<a href="javascript:;" class="hisui-linkbutton dep-panel-btn" id="btn-transOPAcc">转门诊账户</a>
			<div style="display:inline-block;margin:0 5px;"></div>
			</csp:if>
		</div>
	</div>
	<div data-options="region:'center',border:false" style="border-top:1px solid #cccccc;">
		<table id="refDepList"></table>
	</div>
</div>
<script type="text/javascript" src="../scripts/dhcbill/dhcipbill/dhcbill.ipbill.deposit.refund.js"></script>