<html>
<head>
<meta http-equiv="Content-Type" content="text/html;" >
<HISUI/>
<script type="text/javascript" src="../scripts/dhcnewpro/plugins/jquery/jquery.json.js" charset="utf-8"></script>
<script type="text/javascript" src="../scripts/dhcnewpro/js/common.js"></script>
<script type="text/javascript" src="../scripts/dhcnewpro/js/commonfun.js"></script>	
<script type="text/javascript" src="../scripts/dhcnewpro/dhcem/aimconfig.js"></script>
<script Language="Javascript">
		var LgHospID="#(%session.Get("LOGON.HOSPID"))#"; //医院ID
</script>
</head>
<body class="hisui-layout">
   <!--south end-->     
   <div data-options="region:'west',title:'',split:true,headerCls:'panel-header-gray'" style="width:680px;border:0;padding:10px 5px 3px 10px">
   <div id="toolbar" class="toolbar" >
			<table cellspacing="0" cellpadding="0" >
				<tr>
			      <td><a class="hisui-linkbutton" data-options="iconCls:'icon-add',plain:true" onclick="javascript:addRowSys()" >新增</a></td>
			      <td><a class="hisui-linkbutton" data-options="iconCls:'icon-save',plain:true" onclick="javascript:saveSys()">保存</a> </td>
			      <td><a class="hisui-linkbutton" data-options="iconCls:'icon-cancel',plain:true" onclick="javascript:cancelSys()">删除</a></td>	
			    </tr>
			</table>
		</div>
     <table id="datagrid" class="hisui-datagrid" fit="true" title="创伤评分" headerCls="panel-header-gray" 
			data-options="
			toolbar:'#toolbar',
		    rownumbers:true,
		    method:'get',
		    border:true,
		    fitColumns:true,
		    singleSelect:true,
		    pagination:true,
		    nowrap: false,
		    onDblClickRow:onClickRowSys, 
		    onClickRow:ClickRowSys,
			url:'dhcapp.broker.csp?ClassName=web.DHCEmAIS&MethodName=ListSys'">
			<thead>
				<tr>
					<th data-options="field:'AISItmDesc',width:100,editor:{type:'validatebox',options:{required:true}}">项目描述</th>
					<th data-options="field:'AISActiveFlag',align:'center',width:80,
											formatter:function(value,row,index){
												if (value=='Y'){return '是';} 
												else {return '否';}
											},
											editor:{
												type:'combobox',
												options:{
													valueField:'value',
													textField:'text',
													url:'dhcapp.broker.csp?ClassName=web.DHCEmAIS&MethodName=ListIsActive',
													required:true,
													editable:false
												}
											}">是否可用</th>
					<th id="Hosp" data-options="field:'AISHospDr',width:160,align:'center',hidden:true,
					                      
											editor:{
												type:'combobox',
												options:{
													valueField:'value',
													textField:'text',
													url:'dhcapp.broker.csp?ClassName=web.DHCEMCommonUtil&MethodName=GetHospDs',
													required:false,
													editable:false
												}
											}">医院</th>
					<th data-options="field:'AISHospDrID',hidden:true">AISHospDrID</th>
					<th data-options="field:'ID',hidden:true">id</th>
				</tr>
			</thead>
		</table>
</div>
   </div>   <!--west end--> 
   <div data-options="region:'center',title:'',headerCls:'panel-header-gray'" style="border:0;padding:10px 10px 3px 0;">
   <!-- toolbar -->
		<div id="toolbar1" class="toolbar">	
			<table cellspacing="0" cellpadding="0" >
				<tr>
			      <td><a class="hisui-linkbutton" data-options="iconCls:'icon-add',plain:true" onclick="javascript:addRowSysItm()" >新增</a></td>
			      <td><a class="hisui-linkbutton" data-options="iconCls:'icon-save',plain:true" onclick="javascript:saveSysItm()">保存</a> </td>
			      <td><a class="hisui-linkbutton" data-options="iconCls:'icon-cancel',plain:true" onclick="javascript:cancelSysItm()">删除</a></td>	
			    </tr>
			</table>
		</div>
		<table id="datagrid1" class="hisui-datagrid" fit="true" title="创伤评分明细" headerCls="panel-header-gray"
			data-options="
			toolbar:'#toolbar1',
			url:'dhcapp.broker.csp?ClassName=web.DHCEmAISItem&MethodName=ListSysItm&SAId=',
		    rownumbers:true,
		    border:true,
		    method:'get',
		    fitColumns:true,
		    singleSelect:true,
		    pagination:true,
		    nowrap: false,
		    onDblClickRow:onClickRowSysItm, 
		    onClickRow:ClickRowSysItm
			">
			<!--url:'dhcapp.broker.csp?ClassName=web.DHCEMSysItm&MethodName=ListSysItm&SAId=0'-->
			<thead>
				<tr>
				    <th data-options="field:'AISParRefDr',hidden:true">AISParRefDr</th>
					<th data-options="field:'AISItmDesc',width:100,editor:{type:'validatebox',options:{required:true}}">描述</th>
					<th data-options="field:'AISScore',width:100,editor:{type:'validatebox',options:{required:true}}">分数</th>
					<th data-options="field:'AISActiveFlag',align:'center',width:80,
											formatter:function(value,row,index){
												if (value=='Y'){return '是';} 
												else {return '否';}
											},
											editor:{
												type:'combobox',
												options:{
													valueField:'value',
													textField:'text',
													url:'dhcapp.broker.csp?ClassName=web.DHCEmAIS&MethodName=ListIsActive',
													required:true,
													editable:false
												}
											}">是否可用</th>
					<th data-options="field:'ID',hidden:true">id</th>
				</tr>
			</thead>
		</table>
   </div>  <!--center end-->  
</body>  
</html>
