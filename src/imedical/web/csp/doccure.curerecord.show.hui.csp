<div class="hisui-layout" data-options="fit:true,border:false">
	<div id="dregion" data-options="region:'center',border:false,split:true" style="padding:10px 10px 10px 10px">
		<input name="DCAARowId" id="DCAARowId" type="hidden"  value="#($g(%request.Data("DCAARowId",1)))#">
		<input name="DCRRowId" id="DCRRowId" type="hidden"  value="#($g(%request.Data("DCRRowId",1)))#">
		<input name="OEORERowID" id="OEORERowID" type="hidden"  value="#($g(%request.Data("OEORERowID",1)))#">
		<input name="source" id="source" type="hidden"  value="#($g(%request.Data("source",1)))#">
		<input name="OperateType" id="OperateType" type="hidden"  value="#($g(%request.Data("OperateType",1)))#">
		<div id="dpan" class="hisui-panel"  title="" style="padding:0px"
		data-options="border:true,iconCls:'icon-edit',headerCls:'panel-header-card',fit:true,closable:false, collapsible:false,minimizable:false,maximizable:false">   			
			<table  class="form_table" width="100%" height="100%" cellspacing="0" cellpadding="0" border="0">
				<tbody>
					<tr>
						<th>治疗标题</th>
						<td colspan="3">       
							<textarea rows="1" id="DCRTitle" name="DCRTitle"></textarea>
						</td>
					</tr>
					<tr>
						<th>治疗开始时间</th>
						<td>  
							<input type="text" class="hisui-datetimebox textbox" name="DCRCureDate" id="DCRCureDate" style="width:180px"/>     
						</td>
						<th>治疗结束时间</th>
						<td>       
							<input type="text" class="hisui-datetimebox textbox" name="DCRCureEndDate" id="DCRCureEndDate" style="width:180px"/>     
						</td>
					</tr>
					<tr>
						<th>治疗记录</th>
						<td colspan="3">       
							<textarea rows="6" id="DCRContent" name="DCRContent"></textarea>
						</td>
					</tr>
					<tr>
						<th>治疗反应</th>
						<td colspan="3">       
							<textarea rows="2" id="DCRResponse" name="DCRResponse"></textarea>
						</td>
					</tr>
					<tr>
						<th>治疗效果</th>
						<td colspan="3">       
							<textarea rows="2" id="DCREffect" name="DCREffect"></textarea>
						</td>
					</tr>
					<tr class="ifhidden">
						<th class="ifhidden">记录创建人</th>
					<td class="ifhidden"><input type="text" name="CreateUser" id="CreateUser" class="textbox" style="width:150px" disabled/></td>		
						<th class="ifhidden">记录创建时间</th>
					<td class="ifhidden"><input type="text" name="CreateDate" id="CreateDate" class="textbox" style="width:145px" disabled/></td>
					</tr>
					
					<tr class="ifhidden">
						<th class="ifhidden">最后更新人</th>
					<td class="ifhidden"><input type="text" id="UpdateUser" name="UpdateUser" class="textbox" style="width:150px" disabled/></td>
						<th class="ifhidden">最后更新时间</th>
					<td class="ifhidden"><input type="text" id="UpdateDate" name="UpdateDate" class="textbox" style="width:145px" disabled/></td> 		
					</tr>
					<tr>
						<td class="btn" colspan="4">       
							<a href="javascript:void(0)"id="btnSave" data-options="iconCls:'icon-w-save'"  class="hisui-linkbutton">保存</a> 
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
 </div>
