<!-- 主页面-->
<div class="hisui-layout" data-options="fit:true">
		<div data-options="region:'west'"  style="width:300px;border:none;padding:10px 0px 10px 10px;">
		<div class="hisui-panel" data-options="fit:true,title:'筛查条件',headerCls:'panel-header-gray',iconCls:'icon-paper',">	  
			<table class="search-table">
				<tr>
					<td class="r-label">
						<label for="cboHospital">院区</label>
					</td>
					<td>
						<input class="hisui-combobox textbox" id="cboHospital" style="width:200px" />
					</td>
				</tr>
				<tr>
					<td class="r-label">
						<label for="DateFrom">开始月份</label>
					</td>
					<td>
						<input id="DateFrom" style="width:200px"/>	
					</td>
				</tr>
				<tr>
					<td class="r-label">
						<label for="DateTo">至</label>
					</td>
					<td>
						<input id="DateTo" style="width:200px"/>	
					</td>
				</tr>
				<tr>
					<td class="r-label">
						<label for="cboLocation">送检科室</label>
					</td>
					<td>
						<input class="hisui-combobox textbox" id="cboLocation" style="width:200px" />
					</td>
				</tr>
				<tr>
					<td class="r-label">
						<label for="cboMRBRule">多耐类型</label>
					</td>
					<td id="MRBRule">
						
					</td>
				</tr>
				<tr>
					<td class="r-label">
						<label for="cboType">查询类型</label>
					</td>
					<td>
						 <input class="hisui-radio" type="radio" label="按多耐" name="cboType" value="1">
						<input class="hisui-radio" type="radio" label="按日期" name="cboType" value="2">
					</td>
				</tr>
				<tr>
					<td class="r-label">
					</td>
					<td>
						 <input class="hisui-radio" type="radio" label="按科室" name="cboType" value="3">
					</td>
				</tr>
			</table>
			<div style="text-align:center">
				<a id = "btnQuery" href="#" class="hisui-linkbutton" data-options="iconCls:'icon-w-find'">查询</a>
			</div>
		</div>
	</div>
	<div data-options="region:'center',border:false,collapsible:false" fit="true" style="padding:10px">	 
		<div  class="hisui-panel" data-options="fit:true,title:'多重耐药菌检出率统计',headerCls:'panel-header-gray',iconCls:'icon-paper'" >
			<div id="EchartDiv" style="width:65%;height:400px;margin-top:30px;padding:10px"></div>
			<div id="QueryDesc" style=" padding: 10px; border-radius: 2px; background-color:#F9F9F9;font-size:8px"></div>
		</div>
		
	</div>
</div>
