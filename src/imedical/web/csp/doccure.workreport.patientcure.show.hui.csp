<div class="hisui-layout" data-options="fit:true,border:false">
	<div data-options="region:'north',border:false,collapsible:false" style="height:175px;padding:10px 10px 0 10px;">
		<div class="hisui-panel" style="border:1px solid #ccc;border-radius:0;"
		data-options="title:'治疗患者信息查询',iconCls:'icon-apply-check',headerCls:'panel-header-gray',fit:true">  
			<table class="search-table">
				<tr>
					<td class="first-r-label">
						<label id="_HospUserListLabel" style='color:red;'>医院</label>
					</td>
					<td colspan="3">
						<input id="_HospUserList"/>
					</td>
				</tr>
				<tr>
					<!--<td class="first-r-label">
						<label for="cardType">&nbsp;&nbsp;&nbsp;卡类型</label>
					</td>
					<td>
						<input id="cardType" class="hisui-validbox textbox" name="cardType" style="width:130px"/>
					</td>-->
					<td class="first-r-label">
						<label for="CardTypeNew">&nbsp;&nbsp;&nbsp;卡类型</label>
					</td>
					<td>
						<input id="CardTypeNew" disabled class="hisui-validbox textbox" name="CardTypeNew" style="width:125px"/>
					</td>
					<td class="r-label">
						<label class="alllab" for="CardNo">卡号</label>
					</td>
					<td>
						<input id="CardNo" class="hisui-validbox textbox" name="CardNo" style="width:130px"/>
					</td>
					<td class="r-label">
						<label class="alllab" for="patNo">登记号</label>
					</td>
					<td>
						<input id="patNo" class="hisui-validbox textbox" name="patNo" style="width:130px"/>
						<input name="PatientID" id="PatientID" type="hidden"  value=""/>
					</td>
					<td class="r-label">
						<label class="alllab" for="ApplyNo">申请单号</label>
					</td>
					<td>
						<input id="ApplyNo" class="hisui-validbox textbox" name="ApplyNo" style="width:130px"/>
					</td>
					<td class="r-label">
						<a id="btnReadCard" class="hisui-linkbutton" data-options="iconCls:'icon-w-card'">读卡</a>
					</td>
					<td class="r-label">
			       		&nbsp;
					</td>
				</tr>
				<tr>
					<td class="first-r-label">
						<label class="alllab" for="StartDate">开始日期</label>
			
					</td>
					<td>
						<input id="StartDate" class="hisui-validbox textbox" class="hisui-datebox" style="width:130px"></input>
					</td>
					<td class="r-label">
						<label class="alllab" for="EndDate">结束日期</label>
					</td>
					<td>
						<input id="EndDate" class="hisui-validbox textbox" class="hisui-datebox" style="width:136px"></input>
					</td>
					
					<td class="r-label">
						<label class="alllab" for="patName">姓名</label>
					</td>
					<td>
						<input id="patName" class="hisui-validbox textbox" name="patName" style="width:130px"/>
					</td>
					<td class="r-label">
						<label class="alllab" for="">&nbsp;</label>
					</td>
					<td>
						&nbsp;
					</td>
					<td class="r-label">
						<a id="btnFind" class="hisui-linkbutton" data-options="iconCls:'icon-w-find'">查询</a>
					</td>
					<td class="">
			       		<a id="btnClear" class="hisui-linkbutton" data-options="iconCls:'icon-w-clean'">清屏</a>
					</td>
				</tr>
			</table>
		</div>
	</div>
	<div data-options="region:'center',title:'',border:false,collapsible:false,headerCls:'panel-header-gray',iconCls:'icon-reset'" style="padding:0 10px 10px 10px;">
		<div class="hisui-panel" fit="true" style="height:100%;border:1px solid #ccc;border-top:0;border-radius:0 0 4px 4px;">
			<table id="PatientCureTab"></table>
		</div>
	</div>
</div>

<div id="add-dialog" class="hisui-dialog"  title="治疗明细" data-options="iconCls:'icon-save',shadow:false,modal:true,closed:true">
		<div class="hisui-panel" fit="true" style="height:100%;border:1px solid #ccc;border-top:0;border-radius:0 0 4px 4px;">
			<table id="tabCureDetail" toolbar="#diag-table-toolbar"></table>
		</div>
</div>
