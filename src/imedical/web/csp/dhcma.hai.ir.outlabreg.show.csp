<!-- 主页面-->
<div class="hisui-layout" data-options="fit:true">
	<div id="centerP" data-options="region:'center',border:false,collapsible:false"  class="ma-panel"> 
		<table id='OutLabRegList' data-options="toolbar:'#ToolBar'"></table>
		<div id="ToolBar">	
			<table class="search-table" >
				<tr>
					<td class="r-label">
						<label for="txtPatName" style="width:200px">检索条件</label>
					</td>
					<td>
						<input class="textbox" id="txtPatName" style="width:173px" placeholder="姓名/病案号/登记号" >
					</td>
					<td colspan="8">
						<div style="padding-left:15px;">			    
							<span class="infoLabel">患者姓名:</span><span id="PatName"></span>
							<span class="sline">/</span>
							<span class="infoLabel">年龄:</span><span id="Age"></span>
							<span class="sline">/</span>
							<span class="infoLabel">病案号:</span><span id="txtMrNo"></span>
							<span class="sline">/</span>
							<span class="infoLabel">入院日期:</span><span id="txtAdmDate"></span>
							<span class="sline">/</span>
							<span class="infoLabel">出院日期:</span><span id="txtDisDate"></span>
						</div>
					</td>
				</tr>
				<tr>
					<td class="r-label">
						<label for="cboMRBOutLabType">报告方式</label>
					</td>
					<td>
						<input class="textbox" id="cboMRBOutLabType" style="width:180px" />
					</td>
					<td class="r-label">
						<label for="cboTestSet">检验医嘱</label>
					</td>
					<td>
						<input class="textbox" id="cboTestSet" style="width:186px" />
					</td>
					<td class="r-label">
						<label for="cboSpecimen">标本</label>
					</td>
					<td>
						<input class="textbox" id="cboSpecimen" style="width:186px" />
					</td>
					<td class="r-label">
						<label for="SubmissDate">送检日期</label>
					</td>
					<td>
						<input class="hisui-datebox textbox" id="SubmissDate" style="width:180px" />
					</td>
					<td class="r-label">
						<label for="LabRepDate">报告日期</label>
					</td>
					<td>
						<input class="hisui-datebox textbox" id="LabRepDate" style="width:189px" />
					</td>
				</tr>
			
				<tr>
					<td class="r-label">
						<label for="cboBacteria">病原体1</label>
					</td>
					<td>
						<input class="textbox" id="cboBacteria" style="width:180px" />
					</td>
					<td class="r-label">
						<label for="cboMRBType">多耐分类1</label>
					</td>
					<td>
						<input class="textbox" id="cboMRBType" style="width:186px" />
					</td>
					
					<td class="r-label">
						<label for="cboBacteria2">病原体2</label>
					</td>
					<td>
						<input class="textbox" id="cboBacteria2" style="width:186px" />
					</td>
					<td class="r-label">
						<label for="cboMRBType2">多耐分类2</label>
					</td>
					<td>
						<input class="textbox" id="cboMRBType2" style="width:180px" />
					</td>
					<td colspan=2>
						<div style="float: right;">
						<a href="#" id="aBtnSave" class="hisui-linkbutton hover-dark" data-options="iconCls:'icon-w-save'"style="margin-left:8px;">保存</a>
						<a href="#" id="aBtnDelete" class="hisui-linkbutton hover-dark" data-options="iconCls:'icon-w-cancel'"style="margin-left:8px;">删除</a>
						</div>
					</td>
				</tr>	
			</table>
		</div>
	</div>
</div>
<!-- 病原学提取 -->
<div id="LayerOpenINFLabSync" style="overflow:hidden;padding:10px;display:none;">  
	<table id="gridINFLabSync"></table>
</div>
<!-- 病人列表 -->
<div id="LayerOpenPatList" style="overflow:hidden;padding:10px;display:none;">  
	<table id="gridPatList"></table>
</div>