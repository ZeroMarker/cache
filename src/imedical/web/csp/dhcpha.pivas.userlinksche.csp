<!DOCTYPE html>
<!--排班管理-人员班次对照
	csp:dhcpha.pivas.userlinksche.csp
	js: scripts/pharmacy/pivas/userlinksche.js
-->
<HTML XMLNS=TRAK>

<HEAD>
    <title>
        <TRAK:TRANSLATE id=title>##(%session.Get("TITLE"))##</TRAK:TRANSLATE>
    </title>
    <TRAK:HEAD>
    </TRAK:HEAD>
    <HISUI/>
    <link rel="stylesheet" type="text/css" href="../scripts/pharmacy/plugins/kalendae/build/kalendae.css">
    <link rel="stylesheet" type="text/css" href="../scripts/pharmacy/common/css/dhcpha.hisui.css"></link>
    <style type="text/css">
        .kalendae {
            background: white;
            border-radius: 3px;
            -moz-border-radius: 3px;
            /* -webkit-border-radius: 5px; */
            font-size: 14px;
            font-family: 'Microsoft YaHei', 'Helvetica';
        }
        
        .kalendae .k-calendar {
            width: 250px;
        }
        
        .kalendae .k-title {
            text-align: center;
            height: 18px;
            font-weight: bold;
        }
        
        .kalendae .k-header span {
            text-align: center;
            font-weight: bold;
            width: 32px;
            height: 32px;
            line-height: 32px;
            color: rgb(102, 102, 102)；
        }
        
        .kalendae .k-title,
        .kalendae .k-header,
        .kalendae .k-days {
            width: 250px;
        }
        
        .kalendae .k-caption {
            font-size: 14px;
            line-height: 18px;
        }
        
        .kalendae .k-days span {
            width: 30px;
            height: 30px;
            line-height: 30px;
            padding: 0px;
            text-align: center;
        }
        
        .kalendae .k-days span.k-selected.k-active {
            background: #00A3DD;
            color: white;
        }
        
        .kalendae .k-separator {
            display: inline-block;
            zoom: 1;
            width: 2px;
            vertical-align: top;
            background: #ddd;
            height: 230px;
            margin: 0px 10px 0px 0px;
        }
        
        .kalendae .k-days span.k-out-of-month {
            visibility: hidden;
        }
    </style>
</HEAD>

<body>
    <div class="hisui-layout" fit="true" border="false">
        <div data-options="region:'center'" class="dhcpha-hisui-container">
            <div class="hisui-layout" fit="true">
                <div data-options="region:'center',title:'人员列表',headerCls:'panel-header-gray',iconCls:'icon-panel-work'" class="dhcpha-hisui-border" style="border-top:none">
                    <div id="gridUser" data-options="fit:true" border="false">
                    </div>
                </div>
                <div data-options="region:'east',width:800,split:true" border="false">
                    <div class="hisui-tabs tabs-gray" fit="true" data-options="tabPosition:'top'">
                        <div data-options="title:'常规班次对照',selected:false">
                            <div class="hisui-layout" fit="true" border="false">
                                <div data-options="region:'center',border:false">
                                    <table id="gridUserSche"></table>
                                </div>
                            </div>
                        </div>
                        <div data-options="title:'固定班次对照',selected:false">
                            <div class="hisui-layout" fit="true" border="false">
                                <div data-options="region:'center',border:false">
                                    <table id="gridUserScheFix"></table>
                                </div>
                            </div>
                        </div>
                        <div data-options="title:'休班日期对照',selected:false">
                            <div class="hisui-layout" fit="true" border="false">
                                <div data-options="region:'center',border:false">
                                    <table id="gridUserScheDate"></table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="gridUserBar">
        <table>
            <tr>
                <td  style="height:30px">
                    <input id="cmbPivaLoc" />
                </td>
            </tr>
           <tr>
                <td  style="height:30px">
                    <input id="txtAlias" style="width:323px" placeholder=" 模糊检索..."/>
                </td>
            </tr>
        </table>
    </div>
    <div id="gridUserScheBar">
        <table>
            <tr>
                <td>
                    <a class="hisui-linkbutton" plain='true' iconCls="icon-add" id="btnAdd">选择</a>
                </td>

                <td>
                    <div class="datagrid-btn-separator"></div>
                </td>
                <td>
                    <a class="hisui-linkbutton" plain='true' iconCls="icon-remove" id="btnDelete">删除</a>
                </td>
            </tr>
        </table>
    </div>
    <div id="gridUserScheFixBar">
        <table>
            <tr>
                <!--td>
        			 <input id="cmbYear"/>
                </td>
                <td>
                    <div class="datagrid-btn-separator"></div>
                </td-->
                <td>
                    <a class="hisui-linkbutton" plain='true' iconCls="icon-add" id="btnAddFix">新增</a>
                </td>
                <td>
                    <div class="datagrid-btn-separator"></div>
                </td>
                <td>
                    <a class="hisui-linkbutton" plain='true' iconCls="icon-edit" id="btnEditFix">编辑</a>
                </td>
                <td>
                    <div class="datagrid-btn-separator"></div>
                </td>
                <td>
                    <a class="hisui-linkbutton" plain='true' iconCls="icon-remove" id="btnDeleteFix">删除</a>
                </td>
            </tr>
        </table>
    </div>
    <div id="gridUserScheFixWin" class="hisui-dialog" title="固定班次规则" closed="true" style="width:315px;height:300px;" data-options="modal:true,
	buttons:[{
		text:'确定',
		handler:function(){
			SaveUserScheFix();
		}
	},{
		text:'取消',
		handler:function(){
			$('#gridUserScheFixWin').window('close');
		}
	}]">
        <div class="hisui-layout" fit="true">
            <div data-options="region:'center'" class="dhcpha-hisui-container" style="padding:0px">
                <div class="hisui-layout" data-options="fit:true">
                    <div data-options="region:'center'" border="false">
                        <table class="dhcpha-north-tbl">
                            <tr>
                                <td>
                                    固定班次
                                </td>
                                <td>
                                    <input id="cmbSchedul" class='hisui-combobox' />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    每月初第<input id="idMonthDays" type="text" style="display:none" />
                                </td>
                                <td>
                                    <input id="cmbMonthDays" class='hisui-combobox' />
                                </td>
                                <td>
                                    天
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    每月末第<input id="idMonthEndDays" type="text" style="display:none" />
                                </td>
                                <td>
                                    <input id="cmbMonthEndDays" class='hisui-combobox' />
                                </td>
                                <td>
                                    天
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    每周第<input id="idWeekDays" type="text" style="display:none" />
                                </td>
                                <td>
                                    <input id="cmbWeekDays" class='hisui-combobox' />
                                </td>
                                <td>
                                    天
                                </td>
                                <tr>
                                    <td>
                                        指定日期<input id="idDays" type="text" style="display:none" />
                                    </td>
                                    <td>
                                        <input class='hisui-validatebox' id="kalSelect" readonly  style="width:193px" />
                                    </td>
                                </tr>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="gridScheWin" class="hisui-dialog" title="选择班次规则" closed="true" style="width:310px;height:500px;" data-options="modal:true,
	buttons:[{
		text:'确定',
		handler:function(){
			SaveUserSche();
		}
	},{
		text:'取消',
		handler:function(){
			$('#gridScheWin').window('close');
		}
	}]">
        <div class="hisui-layout" fit="true">
            <div data-options="region:'center'" class="dhcpha-hisui-container" style="padding:10px">
                <div class="hisui-layout" data-options="fit:true">
                    <div data-options="region:'center'" class="dhcpha-hisui-border" style="">
                        <table id="gridSche">
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
	<div id="gridUserScheDateBar">
        <table>
            <tr>
                <td>
                    <a class="hisui-linkbutton" plain='true' iconCls="icon-add" id="btnAddDate">新增</a>
                </td>
                <td>
                    <div class="datagrid-btn-separator"></div>
                </td>
                <td>
                    <a class="hisui-linkbutton" plain='true' iconCls="icon-save" id="btnSaveDate">保存</a>
                </td>
                <td>
                    <div class="datagrid-btn-separator"></div>
                </td>
                <td>
                    <a class="hisui-linkbutton" plain='true' iconCls="icon-remove" id="btnDeleteDate">删除</a>
                </td>
            </tr>
        </table>
    </div>
    <script type="text/javascript" src="../scripts/pharmacy/plugins/kalendae/build/kalendae.standalone.js"></script>
    <script type="text/javascript" src="../scripts/pharmacy/common/js/dhcpha.hisui.extend.js"></script>
    <script type="text/javascript" src="../scripts/pharmacy/common/js/dhcpha.hisui.com.js"></script>
    <script type="text/javascript" src="../scripts/pharmacy/pivas/common.js"></script>
    <script type="text/javascript" src="../scripts/pharmacy/pivas/userlinksche.js"></script>
</body>

</HTML>