<!DOCTYPE html>
<html lang="en">
<head>
<script type="text/javascript" src="../scripts_lib/hisui-0.1.0/dist/js/jquery-1.11.3.min.js"></script>
<script type="text/javascript" src="../scripts_lib/hisui-0.1.0/dist/js/jquery.hisui.js"></script>

<style type="text/css">
/*  2020-06-11新增部分 */
	.service-reg-bar {
		width: 900px;
		heght:60px;
		display:block;
	    background-color: #fff;
	    margin: 0 auto;
	    border: none;
	    padding: 15px 0 13px;	
	}

	.service-reg-bar>li{
		width: 300px;
	    float: left;
	    text-align: center;
	    list-style-type: none;
	    position: relative;
	}

	.service-reg-bar>li>span
	{
		background: none repeat scroll 0 0 #fff;
	    border: 4px solid #ccc;
	    border-radius: 30px;
	    color: #ccc;
	    display: block;
	    margin: 3px auto;
	    padding: 5px 0px;
	    width: 30px;
	    height: 20px;
	    position: relative;
	    z-index: 2;
	}

	.service-reg-bar .step-line {
	    background: none repeat scroll 0 0 #ccc;
	    border: 0 none;
	    height: 6px;
	    left: 0px;
	    position: absolute;
	    top: 19px;
	    width: 150px;
	    margin-top: 18px;
	}
	.service-reg-bar .step-line-short {
	    left: 150px;
	}
	.service-reg-bar .step-line-long {
	    width: 300px;
	}
	.service-reg-bar>li.current {
	    color: #40a2de;
	}
	.service-reg-bar>li.current>span {
	    border-color: #40a2de;
	    color: #40a2de;
	}
	.service-reg-bar>li.current>hr {
	    background-color: #40a2de;
	}

	.service-reg-btn{
		text-align: center;
	}

	.service-reg-content{
		margin:0 auto;	
		padding:20px;
	}
	.service-reg-step1 , .service-reg-step2,service-reg-step3{
		margin:0 auto;	
	}
	.service-reg-step1>table,  .service-reg-step2>table{
		margin:0 auto;
		
	}
	.service-type{
		display:block;
		border: 1px solid  #cecaca;;
		width: 500px;
		line-height: 30px;
		padding: 0px 10px;
		margin-bottom: 5px;
	}
	.service-type>td{
		display:block;	
	}
	.service-type.active,.service-type:hover{
		color:#40a2de;
		border-color:#40a2de;
	}
	.service-type.active span.picfg,.service-type:hover span.picfg{
		display:inline-block;
	}
	span.picfg{
		width: 19px;
		height: 19px;
		padding: 5px;
		float: right;
		display:none;
	}
	.funtoolbar{
		display:inline-block;	
	}
	.serCoding>.combo{
		margin-right:20px;	
	}
	.panel-header, .panel-body {
    border-color: #ddd;
}
</style>
</head>
<body class="hisui-layout" fit="true">
<div data-options="region:'center'" id="serviceList">
	
	<div class="datagrid-view hisui-panel" fit="true" id="divMethodListDg">
    	<table id="ServiceGrid"  data-type="uncompleted" ></table>
    </div>
    <!-- <div id='divServiceGrid'>
    	<table id="ServiceGrid"></table>
    </div> -->
</div>
<!-- 查询 -->
	<div id="serviceBar" style="padding-top:5px;padding-bottom:5px;display:none">   
		<table class="Functionbar" >
			<tr>
				<td class="r-label">服务代码</td>
				<td>
					<input id="serCode" class="textbox" style="margin-right:20px">
				</td>
				<td class="r-label">服务名称</td>
				<td >
					<input id="serDesc" class="textbox" style="margin-right:20px">
				</td>
				<td class="r-label">服务状态</td>
				<td class="serCoding">
					<select id="serStatus" class="hisui-combobox" style="width:155px;" data-options="enterNullValueClear:false,blurValidValue:true">
						<option value="">全部</option>
						<option value="Y">运行</option>
						<option value="N">停止</option>
					</select>
				</td>
				<td class="r-label">服务类型</td>
				<td class="serCoding">
					<select id="serType" class="hisui-combobox" style="width:155px;" data-options="enterNullValueClear:false,blurValidValue:true">
						<option value="">全部</option>
						<option value="SOAP">SOAP</option>
						<option value="HL7">HL7</option>
						<option value="REST">REST</option>
						<option value="FILE">FILE</option>	
					</select>
				</td>
				<td >
					<a class="hisui-linkbutton" data-options="iconCls:'icon-search',plain:true" onclick="findService()">查询</a>
				</td>
				<td>
					 <a class="hisui-linkbutton" data-options="iconCls:'icon-reload',plain:true" onclick="reloadService()">刷新</a>
				</td>
				<td>
					 <a class="hisui-linkbutton" data-options="iconCls:'icon-add',plain:true" onclick="showAddModal()">新增</a>
				</td>
			</tr>
		
		</table>
	</div> 

<!-- 新增模态框 -->
<div id="addServiceDialog" class="hisui-window" title='新增服务' data-options="iconCls:'icon-add',modal:true,closed:true,top:'50px',resizable:false," style="width:600px;height:300px;text-align:center;display:none" >
	<div  style="padding: 20px;">
		<form id="ff1" method="post" accept-charset="utf-8">
			<table id="t1" style="margin: 0 auto;">
		    	<tr style="line-height: 35px;">               
		        	<td class="r-label">服务名称</td>
					<td style="margin-right: 50px;display: inline-block;">
						<input class="hisui-validatebox textbox" name="sername" data-options="required:true" style="width:100%;">
					</td>
					<td class="r-label">服务描述</td>
					<td>
						<input class="textbox" name="serdesc" style="width:100%;">
					</td>
					
	            </tr>
	            <tr style="line-height: 35px;">  
	            	<td class="r-label">服务IP</td>
					<td style="margin-right: 50px;display: inline-block;">
						<input class="hisui-validatebox textbox" name="serhost" data-options="required:true" style="width:100%;">
					</td>
					<td class="r-label">服务状态</td>
					<td>
						<div id="serflag" name='serflag' class="hisui-switchbox"  data-options="onText:'运行',offText:'停止',
						size:'small',animated:true,onClass:'primary',offClass:'gray',width:83,height:32" >
						</div>
					</td>
					
				</tr>
	            <tr style="line-height: 35px;">  
	            	<td class="r-label">总线代码</td>
					<td style="margin-right: 50px;display: inline-block;">
						<input class="hisui-validatebox textbox" name="busCode" data-options="required:true" style="width:100%;">
					</td>
					<td class="r-label">服务端口</td>
					<td>
						<input class="hisui-validatebox textbox" name="serport" data-options="required:true" style="width:100%;">
					</td>  
				</tr> 
				<tr style="line-height: 35px;">  
	            	<td class="r-label">方法代码</td>
					<td style="margin-right: 50px;display: inline-block;">
						<input class="hisui-validatebox textbox" name="medCode" data-options="required:true" style="width:100%;">
					</td>
					<td class="r-label">方法名称</td>
					<td>
						<input class="textbox" name="medDesc" style="width:100%;">
					</td>  
				</tr> 
	        </table>
	    </form>
	</div>
	<div style="text-align:center; margin-top: 30px;">
		<a class="hisui-linkbutton" data-options="iconCls:'icon-ok'" id="methodDataSaveBtn" onclick="addService()">保 存</a>
		<a class="hisui-linkbutton" data-options="iconCls:'icon-cancel'" id="methodInputAddBtn" onclick="cancel()">取消</a>
	</div>
</div>
</body>
