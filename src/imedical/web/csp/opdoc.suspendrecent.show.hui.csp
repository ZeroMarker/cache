<div class="hisui-layout" fit="true">
	<div data-options="region:'center',border:false,border:false,collapsible:false">
		<table class="search-table">
			<tr>
				<td class="r-label">
					<label class="left_label" for="Loc">#(..Get("科室"))#</label>
				</td>
				<td>
					<input class="hisui-combobox" id="Loc"/>
				</td>
			</tr>
			<tr>
				<td class="r-label">
					<label class="left_label" for="Doc">#(..Get("医生"))#</label>
				</td>
				<td>
					<input class="hisui-combobox" id="Doc"/>
				</td>
			</tr>
			<tr>
				<td class="r-label">
					<label class="left_label" for="suspendreason">#(..Get("离开原因"))#</label>
				</td>
				<td>
					<input class="hisui-combobox" id="suspendreason"/>
				</td>
			</tr>
			<tr>
				<td class="r-label">
					<label class="left_label" for="suspendTime">#(..Get("离开时长"))#</label>
				</td>
				<td>
					<input class="textbox" id="suspendTime"/>#(..Get("分钟"))#
				</td>
			</tr>
			<tr>
				<td colSpan="2" style="text-align:center;">
					<a id="leave" href="#" class="hisui-linkbutton" data-options="iconCls:'icon-w-export'">离开</a>	
					<a id="back" href="#" class="hisui-linkbutton" data-options="iconCls:'icon-w-import'">归来</a>
				</td>
			</tr>
		</table>
	</div>
</div>