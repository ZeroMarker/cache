<html>
<head>
	<HISUI/>
	<title>	提示框 </title>
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
	<style type="text/css">
	*{
		margin:0px;
		padding:0px;
		font-size:13px;
		overflow:hidden;
		font-family:"Microsoft Yahei";
	}
	
	#prompt{
		font-weight:bold;
		padding:5px;
	}
	
	#tool{
		margin:25px 0 0 80px;
	}
	a{
		margin-left:5px;
	}
	img{
		vertical-align:middle;
		padding:5px;
	}
   </style>
    <script language="javascript">
	$(function(){
		var prompt = window.dialogArguments;
		$("#prompt").text(prompt);
		
		window.returnValue = "cancel";
		//监听enter事件
		document.onkeydown=function(ev){
            var event=ev ||event
            if(event.keyCode==13){
                $("#save").click();
            }
        }
		$("#save").click(function(){
			window.returnValue = "save";
			closeWindow();	
		});
		
		$("#unsave").click(function(){
			window.returnValue = "unsave";
			closeWindow();	
		});	
		/*	
		$("#cancel").click(function(){
			window.returnValue = "cancel";
			closeWindow();	
		});	
		*/
	});
	
	//关闭窗口
	function closeWindow()
	{
		window.opener = null;
		window.open('','_self');
		window.close();	
	}
   </script>
</head>
<body >

	<div id="desc">
		<img src="../scripts/emr/image/icon/questionmark.png"/>
		<span id="prompt">#(..Get("保存提示"))#</span>
	</div>
	<div id="tool">
		<a class="hisui-linkbutton"  id="save" >#(..Get("保存"))#</a>
		<a class="hisui-linkbutton"  id="unsave" >#(..Get("不保存"))#</a>
		<!--<a class="hisui-linkbutton"  id="cancel" >#(..Get("取消"))#</a>-->
	</div>

</body>
</html>
