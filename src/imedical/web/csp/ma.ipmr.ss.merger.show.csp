<div id="main" class="hisui-layout" data-options="fit:true">
	<div data-options="region:'center',border:false,collapsible:false">
		<table id="gridVol" data-options="toolbar:'#QueryToolBar',border:true" ></table>
	</div>
</div>

<div id="QueryToolBar" style="display: none;" class="hisui-toolbar">
	<div data-options="" style="">
		<table class="search-table">
			<tr>
			    <td class="r-label"><label>#(..Get("医院"))#</label></td>
				<td><input class="hisui-combobox textbox" id="cboHospital" style="width:147px;" /></td>
				<td class="r-label"><label>#(..Get("病案类型"))#</label></td>
				<td><input class="hisui-combobox textbox" id="cboMrType" style="width:147px;" /></td>
				<td class="r-label"><label>#(..Get("号码类型"))#</label></td>
				<td><input class="hisui-combobox textbox" id="cboNoType" style="width:147px;" /></td>
				<td class="r-label"><label>#(..Get("旧病案号"))#</label></td>
				<td><input class="hisui-textbox textbox" id="txtOldMrNo" style="width:140px;" /></td>
				<td class="r-label"><a class="hisui-linkbutton hover-dark" id="btnQry" data-options="iconCls:'icon-w-find'">查询</a></td>
			</tr>
		</table>
	</div>
	<div class="tool-bar-line" style="border-bottom-color:#cccccc; border-bottom-width: 1px; border-bottom-style: dashed;">	</div>
	<table cellspacing="0" cellpadding="0" style="padding-bottom: 7px;padding-top: 7px;">
		<tr>
	      <td><a href="#" class="hisui-linkbutton" plain="true" iconCls="icon-write-order" id="btnMerger">修改病案号</a></td>
	      <td><span style="margin-left:10px;"></span><a href="#" class="hisui-linkbutton" plain="true" iconCls="icon-clear-screen" id="btnClear">清空</a></td>
	    </tr>
	</table>
</div>

<!-- 2. 编辑框 -->
<div id="MergerDialog" style="width:250px;height:auto;padding:10px;display:none;">
	<table class="form-table">
		<tr>
		    <td class="form-r-label"><label><font color=red>*</font>#(..Get("旧病案号"))#</label></td>
			<td><input class="hisui-textbox textbox" style="width:130px;" id="oldMrNo" readonly="true" disabled data-options="required:true"></input></td>
		</tr>
		<tr>
			<td class="form-r-label"><label><font color=red>*</font>#(..Get("新病案号"))#</label></td>
			<td><input class="hisui-textbox textbox" style="width:130px;" id="newMrNo" ></input></td>
		</tr>
	</table>
</div>