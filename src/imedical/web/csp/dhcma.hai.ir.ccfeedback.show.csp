<!-- 主页面-->
<div class="hisui-layout" data-options="fit:true">
	<div data-options="region:'west',border:false,collapsible:false"  class="ma-panel" style="width:300px;padding:10px;">
		<div class="hisui-panel" data-options="fit:true,title:'查询条件',headerCls:'panel-header-gray',iconCls:'icon-paper'">	  
			<table class="search-table">
				<tr>
					<td class="r-label">
						<label for="cboHospital">院区</label>
					</td>
					<td>
						<input class="hisui-combobox textbox" id="cboHospital" style="width:192px" />
					</td>
				</tr>
				<tr>
					<td class="r-label">
						<label for="cboLocation">科室</label>
					</td>
					<td>
						<input class="hisui-combobox textbox" id="cboLocation" style="width:192px" />
					</td>
				</tr>
				<tr>
					<td class="r-label">
						<label for="dtDateFrom">开始日期</label>
					</td>
					<td>
						<input class="hisui-datebox textbox" id="dtDateFrom" style="width:192px"/>	
					</td>
				</tr>
				<tr>
					<td class="r-label">
						<label for="dtDateTo">至</label>
					</td>
					<td>
						<input class="hisui-datebox textbox" id="dtDateTo" style="width:192px"/>	
					</td>
				</tr>
			</table>
			<div style="text-align:center">
				<a id = "btnQuery" href="#" class="hisui-linkbutton" data-options="iconCls:'icon-w-find'">查询</a>  
			</div>
		</div>
	</div>
	<div data-options="region:'center',border:false,collapsible:false"  class="ma-panel" style="padding:10px 10px 10px 0px;" >
		<div id="divMain" ></div>
	</div>
</div>

<div id="Edit" style="width:800px;height:250px;top:150px;padding:10px;display:none;">  
		<div>
			<div class="l-label">
				<label for="txtCode">问题详情:&nbsp;&nbsp;</label>
				<label id="txtCode"></label>
			</div>
		</div>
		<div style="padding-top:10px;">
			<div class="l-label" colspan="2"> 
				<textarea class="textbox" id="txtOpinion" style="width:770px;height:80px;overflow:hidden;" type="text" placeholder="处置意见…"/></textarea>
			</div>
		</div>
		<div style="padding-top:10px;">
			<div class="l-label" > 
				<label for="txtTypeDesc">问题类型:&nbsp;&nbsp;</label>
				<label id="txtTypeDesc"></label>
				<label id="txtRegTime" style="float:right;"></label>
			</div>
		</div>
</div>