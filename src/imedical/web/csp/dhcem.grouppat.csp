<!-- dhcem.grouppat.csp -->
<html>
<head>
<HISUI/>
<title>	群伤录入 </title>
 <script Language="Javascript">
	var LgGroupID="#(%session.Get("LOGON.GROUPID"))#";      //安全组ID
	var LgGroupDesc="#(%session.Get("LOGON.GROUPDESC"))#";  //安全组
	var LgUserID="#(%session.Get("LOGON.USERID"))#";        //用户ID
	var LgUserCode="#(%session.Get("LOGON.USERCODE"))#";    //用户工号
	var LgUserName="#(%session.Get("LOGON.USERNAME"))#";    //用户姓名
	var LgCtLocID="#(%session.Get("LOGON.CTLOCID"))#";      //科室ID
	var LgHospID="#(%session.Get("LOGON.HOSPID"))#";        //医院ID
	var session=new Array();
	session["LOGON.HOSPID"]=LgHospID;
</script>
<style>
	.panel-tool{display:none}
	.datebox .combo-arrow{
		position:relative;
		left:-4px;	
	}
</style>
<script type="text/javascript" src="../scripts/dhcnewpro/dhcem/grouppat.js"></script>    
</head>
<body>
<div id="cc" class="hisui-layout" data-options="fit:true">
    <div data-options="region:'west',title:'',border:false" style="width:270px;padding:10px 5px 10px 10px">
    	<div class="hisui-panel" title="群伤录入" style="padding:10px" data-options="fit:true,headerCls:'panel-header-gray',iconCls:'icon-paper',closable:true,collapsible:true,minimizable:true,maximizable:true">
	    	<table style="padding-top:10px" cellspacing="0" cellpadding="0" width="230px" height="">
				<tr style="height:40px">
					<td align="right" class="r-label" style="color:red">*群伤类型</td>
					<td width="100px"><input id="GroupHurtType" class="hisui-combobox" /></td>
				</tr>
				<tr style="height:40px">
					<td align="right" class="r-label" style="color:red">*总人数</td>
					<td width="100px"><input id="GroupHurtPatTotal" class="textbox" /></td>
				</tr>
				<tr style="height:40px">
					<td align="right" class="r-label">群伤时间</td>
					<td width="100px"><input id="GroupHurtDate" class="hisui-datetimebox" data-options=""/></td>
				</tr>
				<tr style="height:40px">
					<td align="right" class="r-label">群伤地点</td>
					<td width="100px"><input id="GroupHurtSite" class="textbox"/></td>
				</tr>
				<tr style="height:40px">
					<td align="right" class="r-label">群伤描述</td>
					<td width="100px"><textarea rows="3" id="GroupHurtDesc" class="textbox"></textarea></td>
				</tr>
		
				<tr style="height:40px;display:none">
					<td align="right" class="r-label">姓名</td>
					<td width="100px"><input id="GroupHurtName" class="textbox"/></td>
				</tr>
				<tr style="height:40px;display:none">
					<td align="right" class="r-label">性别</td>
					<td width="100px"><input id="GroupHurtSex" class="hisui-combobox"/></td>
				</tr>
				<tr style="height:40px;display:none">
					<td align="right" class="r-label">出生日期</td>
					<td width="100px"><input id="GroupHurtBirth" class="textbox"/></td>
				</tr>
				<tr style="height:40px;display:none">
					<td align="right" class="r-label">年龄</td>
					<td width="100px"><input id="GroupHurtAge" class="textbox"/></td>
				</tr>
				<tr style="height:40px;display:none">
					<td align="right" class="r-label">民族</td>
					<td width="100px"><input id="GroupHurtNation" class="hisui-combobox"/></td>
				</tr>
				<tr style="height:40px">
					<td align="right" class="r-label"></td>
					<td width="100px"><a href="#" data-options="iconCls:'icon-w-save'" class="hisui-linkbutton" onclick="SaveGroupHurtPat()">保存</a></td>
				</tr>
			</table>	
    	</div>
    	
    	
   	</div>
    
    <div data-options="region:'center',title:'',border:false" style="padding:10px 10px 10px 5px">
    	<div class="hisui-panel" title="群伤查询" style="padding-top:7px" data-options="fit:true,headerCls:'panel-header-gray',iconCls:'icon-paper',closable:true,collapsible:true,minimizable:true,maximizable:true">
    		<table id="GroupPatGrid" class="hisui-datagrid" fit="true"
			data-options="
				toolbar:'#GroupHurttb',
			    rownumbers:true,
			    border:false,
			    fitColumns:false,
			    singleSelect:true,
			    pagination:true,
			    nowrap: true,
			    pageSize:10,
			    pageList:[10,20,30],
			    onDblClickRow:ConveyInfo">
				 <thead>  
			        <tr>  
			        	<th data-options="field:'PatientID',width:100,hidden:true">患者id</th>
			        	<th data-options="field:'GroupHurtType',width:150">群伤类型</th>
			        	<th data-options="field:'GroupHurtSite',width:150">群伤地点</th>
			        	<th data-options="field:'GroupHurtDesc',width:150">群伤描述</th>
			        	<th data-options="field:'GroupHurtDateTime',width:150">群伤时间</th>
			            <th data-options="field:'GroupHurtReg',width:100">登记号</th>  
			            <th data-options="field:'GroupHurtName',width:120">姓名</th>  
			            <th data-options="field:'GroupHurtSex',width:100">性别</th> 
			            <th data-options="field:'GroupHurtSexDr',width:100,hidden:true">性别dr</th> 
			            <th data-options="field:'GroupHurtAge',width:100,hidden:true">年龄</th> 
			            <th data-options="field:'GroupHurtNation',width:80,hidden:true">民族</th>
			            <th data-options="field:'GroupHurtBirth',width:100">出生日期</th> 
			            <th data-options="field:'GroupHurtNationDr',width:100,hidden:true">民族dr</th>
			            <th data-options="field:'GroupHurtcountrydr',width:100,hidden:true">国家dr</th>
			        </tr>  
			    </thead> 
			</table>
    	</div>
    </div>
</div>


<!--datagrid 中toolbar-->
<div id="GroupHurttb" style="height:40px;padding-top:5px;padding-left:10px">
	开始时间&nbsp;&nbsp;&nbsp;<input class="hisui-datebox" id="GroupHurtStDate" style="width:120px">&nbsp;&nbsp;&nbsp;
	结束时间&nbsp;&nbsp;&nbsp;<input class="hisui-datebox" id="GroupHurtEndDate" style="width:120px">&nbsp;&nbsp;&nbsp;
	<a href="#" class="hisui-linkbutton" iconCls="icon-w-find" id="QueryGroupHurt">查询</a>
</div>  
</body>
</html>
