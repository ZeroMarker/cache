<style>
.sline, .infoLabel {
	color: #787878;
}

.patientInfo {
	padding-bottom: 10px;
	padding-left: 60px;
	display: inline-block;
	position: absolute;
	top: 7px;
}

.patientInfo span {
	padding-left: 5px;
}

.patName {
	font-size: 16px;
	margin-right: 15px;
}

.unman {
 	background:url(../images/unman.png) no-repeat;
 	background-position: center center;
 	width: 30px;
 	height: 30px;
 	position: absolute;
 	top: 3px;
    left: 10px;
}

.man {
 	background:url(../images/man.png) no-repeat;
 	background-position: center center;
 	width: 30px;
 	height: 30px;
 	position: absolute;
 	top: 3px;
    left: 10px;
}

.woman {
 	background: url(../images/woman.png) no-repeat;
 	background-position: center center;
 	width: 30px;
 	height: 30px;
