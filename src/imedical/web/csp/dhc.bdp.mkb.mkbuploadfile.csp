             hide();
        }*/
        function deletefile(){
	        var ftpFlag="false" //tkMakeServerCall("web.DHCBL.MKB.MKBDocManage","findFTPFlag");
			var ftpDesc=tkMakeServerCall("web.DHCBL.MKB.MKBDocManage","findPortS");
			if(parent.$('#MKBDMPath').val()=="")
			{
				//$(".filebox-text").val("")
				$('#file').filebox('clear');
				
			}else
			{
	            parent.$.messager.confirm('提示', '确定要删除所上传的文件数据吗?', function(r){
					if (r){
			            var path=parent.$('#MKBDMPath').val();
			            if(ftpFlag=="true")
			            {
		                    var deleteisExists=parent.tkMakeServerCall("web.DHCBL.BDP.FTPUploadFileLy","FTPFileExit",ftpDesc,"doc\\",path);
		                    if(deleteisExists){
		                        var re =parent.tkMakeServerCall("web.DHCBL.BDP.FTPUploadFileLy","DeleFile",ftpDesc,"doc\\",path);
		                    }		            
				        }	            
			            else if(ftpFlag=="false")
			            {
				            var deleteisExists=parent.tkMakeServerCall("web.DHCBL.BDP.BDPUploadFile","IsExistsFile","scripts\\bdp\\MKB\\Doc\\Doc\\"+path);
				            if(deleteisExists){
				              var re =parent.tkMakeServerCall("web.DHCBL.BDP.BDPUploadFile","DeleteFile","scripts\\bdp\\MKB\\Doc\\Doc\\"+path);
				            }		            
				        }
			            var re=1;
			            if(re==1){
			                //$('#show').text('删除成功!');
			                parent.$('#MKBDMDesc').val("");
			                parent.$('#MKBDMType').val("");
			                parent.$('#MKBDMPath').val("");
			            }
		           	}
				});				
			}
        }
    </script>
    
</head> 
<body  style="margin:0;padding:0">
    <table style="padding:0;margin-bottom:0px;" align="left">
        <tr>
            <td>               
                <form enctype="multipart/form-data"  method="post" action="dhc.bdp.mkb.mkbuploadfile.csp" onsubmit="return Read();">
                   <table> <tr><td style="padding-left:0px"><input class='hisui-filebox'  id="file" data-options="prompt:'请选择文件',width:200" style="cursor:pointer" size=25 name=FileStream multiple></td>
                    <td style="padding-left:25px">&nbsp;&nbsp;<input class='button' type="submit"  style="cursor:pointer;" value="上传"></td><td style="padding-left:25px">&nbsp;<input class='button' type="button" style="cursor:pointer" value="删除" onclick="deletefile()"></td></tr></table>
                </form>
            </td>
        </tr>
