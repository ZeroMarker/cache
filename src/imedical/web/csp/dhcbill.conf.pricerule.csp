 * FileName: dhcbill.conf.pricerule.csp
 * Author: tanfb
 * Date: 2022-11-30
 * Description: 收费优惠规则维护
-->
<!DOCTYPE html>
<csp:method name=OnPreHTTP arguments="" returntype=%Boolean>
 if ##class(websys.SessionEvents).SessionExpired() quit 1
 quit 1
</csp:method>
<html>
<head>
	<TITLE><EXTHEALTH:TRANSLATE id=title>##(%session.Get("TITLE"))##</EXTHEALTH:TRANSLATE></TITLE>
	<EXTHEALTH:HEAD></EXTHEALTH:HEAD>
	<HISUI/>
    <DHCBILL/>
    <ADDINS require="CmdShell"></ADDINS>
	<style>
	.layout-panel-west {
		    padding-right: 10px;
		}
	</style>
</head>
<body style="padding:10px;">
	<div class="hisui-layout" data-options="fit:true" style="padding-right: 10px;">
		<div data-options="region:'west',title:'优惠类型',collapsible:false,headerCls:'panel-header-gray',iconCls:'icon-paper-info'" style="width:600px;">
			<div class="hisui-layout" data-options="fit:true">
				<div data-options="region:'north',border:false" style="overflow:hidden;border-radius:0px;border-bottom:1px dashed #cccccc;">
					<table class="search-table">
						<tr>
							<td class='r-label'><label>#(..Get("院区"))#</label></td>
							<td><input id="hospital" class="textbox" style="width:286px;" placeholder=""/></td>
						</tr>
						<tr>
							<td class='r-label'><label>#(..Get("查询条件"))#</label></td>
							<td><input id="search" placeholder="输入首字母简拼,回车检索" class="textbox" style="width:280px;"/></td>
							<td class='r-label'><a id="btnFind" href="#" class="hisui-linkbutton" style="width:80px" >查询</a></td>		
						</tr>
					</table>
				</div>
				<div data-options="region:'center',border:false">
				    <div id="rToolBar" class="hisui-toolbar" >
				        <table cellspacing="0" cellpadding="0">
					        <tbody>
						        <tr>
							        <td><a href="#" class="hisui-linkbutton" iconCls="icon-add" id="rBtnAdd" plain="true">新增</a></td>
							        <td><a href="#" class="hisui-linkbutton" iconCls="icon-write-order" id="rBtnUpdate" plain="true">修改</a></td>
							        <td><a href="#" class="hisui-linkbutton" iconCls="icon-no" id="rBtnStop" plain="true">停用</a></td>
							        <td><a href="#" class="hisui-linkbutton" iconCls="icon-save" id="rBtnSave" plain="true">保存</a></td>							       
							        <td><a href="#" class="hisui-linkbutton" iconCls="icon-import" id="btnImport" plain="true">导入</a></td>
							        <td><a href="#" class="hisui-linkbutton" iconCls="icon-export" id="btnExport" plain="true">导出</a></td>
						        </tr>
					        </tbody>
				        </table>
			        </div>
					<table id="ruleTable"></table>
				</div>
			</div>
		</div>
		<div data-options="region:'center',title:'优惠条件',headerCls:'panel-header-gray',iconCls:'icon-write-order'" style="">
			<div class="hisui-layout" data-options="fit:true">
				<div data-options="region:'north',border:false" style="height:90px;overflow:hidden;border-radius:0px;border-bottom:1px dashed #cccccc;">
					<table class="search-table" style="padding-top:0px">
							<tr>
								<td><label class='r-label'>#(..Get("生效日期"))#</label></td>
								<td><div><input id="ActiveStartDate" placeholder="新增时的默认生效日期" class="hisui-datebox textbox" style="width:180px" /></div></td>		
							</tr>
							<tr>
							    <td><label class='r-label'>#(..Get("失效日期"))#</label></td>
								<td><div><input id="ActiveEndDate" placeholder="新增时的默认失效日期" class="hisui-datebox textbox" style="width:180px"/></div></td>
								<td class='r-label'><a id="btnreset"  onclick="Reset()"  href="#" class="hisui-linkbutton" style="width:80px" >重置</a></td>
							</tr>
					</table>  
				</div>
				<div data-options="region:'center',border:false">
				    <div id="aToolBar" class="hisui-toolbar" >
				        <table cellspacing="0" cellpadding="0">
					        <tbody>
						        <tr>
							        <td><a href="#" class="hisui-linkbutton" iconCls="icon-add" id="aBtnAdd" plain="true">新增</a></td>
							        <td><a href="#" class="hisui-linkbutton" iconCls="icon-write-order" id="aBtnUpdate" plain="true">修改</a></td>
							        <td><a href="#" class="hisui-linkbutton" iconCls="icon-no" id="aBtnStop" plain="true">停用</a></td>
							        <td><a href="#" class="hisui-linkbutton" iconCls="icon-save" id="aBtnSave" plain="true">保存</a></td>							       
						        </tr>
					        </tbody>
				        </table>
			        </div>
					<table id="AllowPointTable"></table>
				</div>
			</div>
		</div>
	</div>

	<script type="text/javascript" src="../scripts/dhcbillconfig/pricerule.js"></script>
</body>
</html>
