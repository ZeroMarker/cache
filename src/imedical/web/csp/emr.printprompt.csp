<html>
<head>
	<title>	提示框 </title>
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
	<script type="text/javascript" src="../scripts/emr/lib/JQuery/jquery-1.8.0.min.js"></script>
	<style type="text/css">
	*{
		margin:0px;
		padding:0px;
		font-size:13px;
		overflow:hidden;
		font-family:"Microsoft Yahei";
	}
	
	#desc{
		padding:15px 5px 5px 5px;
		height:100px;
 
	}
	
	#prompt{
		font-size:15px;
		font-weight:bold;
	}
	
	#tool{
		height:50px;
		line-height:50px;
		background-color:#F0F0F0;
		padding-top:10px;
	    width:100%;
	}
	input{
		width:80px;
		height:30px;	
		float:right; 
		margin-left:3px;
	}
	img{
		vertical-align:middle;
	}
   </style>
    <script language="javascript">
	$(function(){
		var prompt = window.dialogArguments;
		$("#prompt").text(prompt);
		
		window.returnValue = "cancel";
		
		$("#confirm").live("click",function(){
			window.returnValue = "confirm";
			closeWindow();
		});
		$("#cancel").live("click",function(){
			window.returnValue = "cancel";
			closeWindow();
		});
	});
	
	//关闭窗口
	function closeWindow()
	{
		window.opener = null;
		window.open('','_self');
		window.close();	
	}
   </script>
</head>
<body >

	<div id="desc">
		<img src="../scripts/emr/image/icon/questionmark.png"/>
		<span id="prompt"></span>
	</div>
	<div id="tool">
		<input type="button" id="cancel" value="取消"/>
		<input type="button" id="confirm" value="确认"/>	 
	</div>

</body>
</html>
