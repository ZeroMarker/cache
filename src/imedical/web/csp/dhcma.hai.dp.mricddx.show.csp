<div class="hisui-layout" data-options="fit:true" style="border:none;">
	<div data-options="region:'center',border:false,collapsible:false" style="padding:10px;">
		<table id="gridMRICDDxMap" data-options="toolbar:'#ToolBar'"></table>
		<div id="ToolBar" style="padding:5px;" >
			<a class="hisui-linkbutton" id="btnAll"  data-options="iconCls:'icon-all-select',plain:true,stopAllEventOnDisabled:true"> 全部 </a>
			<a class="hisui-linkbutton" id="btnPend" data-options="iconCls:'icon-compare-no',plain:true,stopAllEventOnDisabled:true"> 未对照 </a>
			<a class="hisui-linkbutton" id="btnFin"  data-options="iconCls:'icon-compare-yes',plain:true,stopAllEventOnDisabled:true" > 已对照 </a>
			<a class="hisui-linkbutton" id="btnSyn"  data-options="iconCls:'icon-radio',plain:true,stopAllEventOnDisabled:true" > 自动匹配 </a>
			<a class="hisui-linkbutton" id="btnEdit" data-options="iconCls:'icon-write-order',plain:true,stopAllEventOnDisabled:true"> 修改 </a>
			<a class="hisui-linkbutton" id="btnAdd"  data-options="iconCls:'icon-compare',plain:true,stopAllEventOnDisabled:true"> 对照 </a>
			<a class="hisui-linkbutton" id="btnDelete"  data-options="iconCls:'icon-undo',plain:true,stopAllEventOnDisabled:true" > 撤销 </a>
			<div style="float:right;padding-right:2px;">
				<input class="hisui-searchbox" id="searchbox" style="width:240px;" data-options="prompt:'搜索'" />			 
			</div>
		</div>
	</div>		
	<div data-options="region:'east',border:false,collapsible:false" style="width:480px;padding:10px 10px 10px 0px;">
		<table id="gridMRICDDx" data-options="toolbar:'#ToolBar2'"></table>
		<div id="ToolBar2" style="padding:3px;overflow:hidden;" >
			<a class="hisui-linkbutton" id="btnAdd_one" data-options="iconCls:'icon-add',plain:true,stopAllEventOnDisabled:true"> 新增 </a>
			<a class="hisui-linkbutton" id="btnEdit_one" data-options="iconCls:'icon-write-order',plain:true,stopAllEventOnDisabled:true"> 修改 </a>
			<a class="hisui-linkbutton" id="btnDelete_one" data-options="iconCls:'icon-cancel',plain:true,stopAllEventOnDisabled:true" > 删除 </a>
		</div>
	</div>	
</div>
<div id="winEdit" style="border:none;overflow:hidden;padding-right:10px;display:none">
	<table class="search-table">
		<tr>
			<td class="r-label">
				<label for="txtBTCode">代码</label>
			</td>
			<td>
				<input class="textbox" id="txtBTCode" style="width:260px"/>
			</td>
		</tr>
		<tr>
			<td class="r-label">
				<label for="txtBTDesc">名称</label>
			</td>
			<td>
				<input class="textbox" id="txtBTDesc" style="width:260px"/>
			</td>
		</tr>
		<tr>
			<td class="r-label" colspan="1">
				<label for="chkActive" >是否有效</label>
			</td>
			<td>
				<input class='hisui-checkbox' type="checkbox" id="chkActive" checked/>
			</td>
		</tr>
	</table>
</div>

<div id="winEdit2" style="border:none;overflow:hidden;padding-right:10px;display:none">
	<table class="search-table">
		<tr>
			<td class="r-label">
				<label for="txtMapNote">标准备注</label>
			</td>
			<td>
				<input class="textbox" id="txtMapNote" style="width:260px"/>
			</td>
		</tr>
		<tr>
			<td class="r-label" colspan="1">
				<label for="chkMapActive" >是否有效</label>
			</td>
			<td>
				<input class='hisui-checkbox' type="checkbox" id="chkMapActive" checked/>
			</td>
		</tr>
	</table>
</div>