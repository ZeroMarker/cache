<!DOCTYPE html>
<!--排班管理-请假管理-申请请假
	csp: dhcpha.pivas.leave.csp
	js:  scripts/pharmacy/pivas/leave.js
-->
<HTML XMLNS=TRAK>
<HEAD>
    <title>
        <TRAK:TRANSLATE id=title>##(%session.Get("TITLE"))##</TRAK:TRANSLATE>
    </title>
    <TRAK:HEAD></TRAK:HEAD>
    <HISUI/>
    <link rel="stylesheet" type="text/css" href="../scripts/pharmacy/common/css/dhcpha.hisui.css"></link>
<style>
</style>
</HEAD>
<body >
    <div class="hisui-layout"  fit="true" border="false">
        <div data-options="region:'center',split:true,border:false,headerCls:'panel-header-gray'" class="dhcpha-hisui-container">
        	<div class="hisui-layout" fit="true" border="false">
        		<div data-options="region:'center',split:true,headerCls:'panel-header-gray',title:''" class="dhcpha-hisui-border"  style="border-radius: 4px;">
        			<table id="gridLeave"></table>
				</div>
			</div>
        </div> 
    </div>
 	<div id="gridLeaveBar">
    	<table>
    		<tr>
    		<td>
    		<input id="cmbLeaveStatus"/>
    		</td>
		        <td>
		        	<div class="datagrid-btn-separator"></div>
				</td>
	    		<td>
		        	<a class="hisui-linkbutton" plain='true' iconCls="icon-add" id="btnAdd">新增</a>
		        </td>
		        <td>
		        	<div class="datagrid-btn-separator"></div>
				</td>
				<td>
		        	<a class="hisui-linkbutton" plain='true' iconCls="icon-edit" id="btnEdit">编辑</a>
		        </td>
		        <td>
		        	<div class="datagrid-btn-separator"></div>
				</td>
		        <td>
		        	<a class="hisui-linkbutton" plain='true' iconCls="icon-remove" id="btnDelete">删除</a>
		        </td>
		    </tr>
		</table>   
 	</div>
    <div id="gridLeaveWin" class="hisui-dialog" title="请假信息" closed="true" style="width:430px;height:340px;" data-options="iconCls:'',modal:true,
	buttons:[{
		text:'确定',
		handler:function(){
			Save();
		}
	},{
		text:'取消',
		handler:function(){
			$('#gridLeaveWin').window('close');
		}
	}]">
	    <div class="hisui-layout" fit="true" >
        <div data-options="region:'center'" class="dhcpha-hisui-container" style="padding:0px">
        <div class="hisui-layout" data-options="fit:true" >
            <div data-options="region:'center'" border="false">
            <table class="dhcpha-north-tbl">
            	<tr>
            	<td>
					 <span style="color:red">*</span>请假类型
				</td>
            	<td>
					 <input id="cmbLeaveType" class='hisui-combobox'/>
				</td>
				</tr>
            	<tr>
            	<td>
            		<span style="color:red">*</span>日期范围
            	</td>
            	<td>
					 <input id="dateStart" class='hisui-datebox' style="width:154px" data-options="validType:'validDate[\'yyyy-MM-dd\']'"/>
					 至
					 <input id="dateEnd" class='hisui-datebox' style="width:154px" data-options="validType:'validDate[\'yyyy-MM-dd\']'"/>
				</td>
				</tr>
          	<tr>
            	<td>
            		<span style="color:red">*</span>请假原因
            	</td>
            	<td>
					 <textarea id="txtReason" style="width:325px;height:150px;"/></textarea>
				</td>
				</tr>

	         </table>
	         </div>
        </div>
        </div>
        </div>
    </div>

    <script type="text/javascript" src="../scripts/pharmacy/common/js/dhcpha.hisui.extend.js"></script>
	<script type="text/javascript" src="../scripts/pharmacy/common/js/dhcpha.hisui.com.js"></script>
	<script type="text/javascript" src="../scripts/pharmacy/common/js/dhcpha.store.js"></script>
	<script type="text/javascript" src="../scripts/pharmacy/common/js/dhcpha.tools.js"></script>
	<script type="text/javascript" src="../scripts/pharmacy/pivas/common.js"></script>
	<script type="text/javascript" src="../scripts/pharmacy/pivas/leave.js"></script>
</body>
</HTML>