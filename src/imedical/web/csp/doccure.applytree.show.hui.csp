<div id="layout_main" class="hisui-layout" data-options="fit:true,border:false">
	<csp:if condition='ParaType="OEOrdEntryUpdate"'>
	
	<csp:else>
		<div data-options="region:'west',title:'',border:false,collapsible:false,headerCls:'panel-header-gray'" style="width:300px;padding:10px 0px 10px 10px;">
			<div class="hisui-panel" data-options="title:'治疗分类',fit:true,headerCls:'panel-header-gray',iconCls:'icon-add-note'" style="border:1px solid #ccc;border-top:0;padding:10px 0px 0px 0px;border-radius:0px 0px 4px 4px;">			
				<div class="hisui-panel" id="tree_panel" style=" border-style: none;border-radius:0px;border-color:#cccccc;border-bottom-style: dotted;padding:0px 0px 10px 10px"
				data-options="headerCls:'panel-header-card',closable:false, collapsible:false,minimizable:false,maximizable:false">
					<input id="QryArcDesc" class="hisui-searchbox" style="width:270px" data-options="searcher:LoadCureItemTree,prompt:'请输入名称/拼音码'"></input> 
				</div>
				<ul id="CureItemTree" class="hisui-tree" data-options="lines:true"></ul> 
			</div>
		</div>
	</csp:if>
	<div id="dregion" data-options="region:'center',border:false,split:true" style="padding:10px">
		<!--治疗申请与治疗申请信息浏览共用-->
		<csp:Include Page="doccure.apply.curedetail.show.hui.csp">
	</div>
	<div data-options="region:'east',border:false,collapsible:false,headerCls:'panel-header-gray'" style="width:480px;padding:10px 10px 10px 0px;">
		<div id="apply_addentry_panel" class="hisui-panel" data-options="title:'待添加列表',fit:true,headerCls:'panel-header-gray',iconCls:'icon-paper-upgrade-add'" style="border:1px solid #ccc;border-top:0;padding:0px 0px 0px 0px;border-radius:0px 0px 4px 4px;">
			<table id="CureEntryItemList"></table>
		</div>
	</div>
</div>