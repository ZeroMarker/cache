<div class="hisui-layout" data-options="fit:true">
	<div data-options="region:'north',border:true" style="height:55px;padding:10px;">
		 <span id="_HospListLabel" style='color:red;margin-right:6px'>所属院区</span>
	  	 <input id="_HospList" type="text"></input>
	</div>
	<div data-options="region:'west',split:true,iconCls:'icon-w-list'" title="化疗单模板" style="width:750px;">
		<div class="hisui-layout" data-options="fit:true">
			<div data-options="region:'north',border:false" style="height:370px;padding:10px 10px 0px 10px;">
				<div class="hisui-layout" data-options="fit:true">
					<div data-options="region:'north',border:true" style="height:55px;border-bottom:1px dashed #ccc;padding:10px">
						<div class="note-head" style="float:left;margin-top:3px;">
							<div class="c-label"></div>
							<div class="c-title">模板</div>
						</div>
						<div style="float:left;margin-left:20px;">
							<span class="span">模板类型</span>
				  			<input id="i-type" type="text"></input>
							<span class="c-span"></span>
							<span class="span">化疗单名称</span>
							<input id="InDesc" type="text" class="textbox">
							<span class="c-span"></span>
							<a id="i-find" class="hisui-linkbutton" data-options="iconCls:'icon-w-find'">查询</a>
						</div>
					</div>
					<div data-options="region:'center',border:true" style="padding；10px;">
						<div id="i-tpl"></div>
					</div> 
				</div>
			</div> 
			<div data-options="region:'center',border:false" style="padding:10px;">
				<div class="hisui-layout" data-options="fit:true">
					<div data-options="region:'north'" style="height:40px;border-bottom:1px dashed #ccc;padding:10px;">
						<div class="note-head">
							<div class="c-label"></div>
							<div class="c-title">周期</div>
						</div>
					</div> 
					<div data-options="region:'center',border:true">
						<div id="i-stage"></div>
					</div>
				</div>
				
			</div> 
		</div>
	</div> 
	<div data-options="region:'center',border:true,iconCls:'icon-w-config'" title="化疗组/项目" style="padding:10px;">
		<div class="hisui-layout" data-options="fit:true">
			<div data-options="region:'north',border:false" style="height:360px;">
				<div class="hisui-layout" data-options="fit:true">
					<div data-options="region:'north'" style="height:40px;border-bottom:1px dashed #ccc;padding:10px;">
						<div class="note-head">
							<div class="c-label"></div>
							<div class="c-title">化疗组</div>
						</div>
					</div> 
					<div data-options="region:'center'">
						<div id="i-group"></div>
					</div> 
				</div>
				
			</div> 
			<div data-options="region:'center',border:false" style="padding-top:10px;">
				<div class="hisui-layout" data-options="fit:true">
					<div data-options="region:'north'" style="height:40px;border-bottom:1px dashed #ccc;padding:10px;">
						<div class="note-head">
							<div class="c-label"></div>
							<div class="c-title">化疗组项目</div>
						</div>
					</div> 
					<div data-options="region:'center'">
						<div id="i-item"></div>
					</div> 
				</div>
				
			</div> 
		</div>
	</div> 
</div>