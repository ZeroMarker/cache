<div id="main" class="hisui-layout" data-options="fit:true">
	<div data-options="region:'center',border:false,collapsible:false">
		<table id="gridVol" data-options="toolbar:'#QueryToolBar',border:true" ></table>
	</div>
</div>
<div id="QueryToolBar" style="display:none;">
	<table class="search-table">
		<tr>
		    <td class="r-label"><label>#(..Get("医院"))#</label></td>
			<td><input class="hisui-combobox textbox" id="cboHospital" style="width:147px;" /></td>
			<td class="r-label"><label>#(..Get("病案类型"))#</label></td>
			<td><input class="hisui-combobox textbox" id="cboMrType" style="width:147px;" /></td>
			<td class="r-label"><label>#(..Get("病案号"))#</label></td>
			<td><input class="hisui-textbox textbox" id="txtMrNo" style="width:140px;" /></td>
			<td class="r-label"><label>#(..Get("上架号"))#</label></td>
			<td><input class="hisui-textbox textbox" id="txtFillNo" style="width:140px;" /></td>
			<td class="r-label"><label>#(..Get("登记号"))#</label></td>
			<td><input class="hisui-textbox textbox" id="txtRegNo" style="width:140px;" /></td>
			<td class="r-label"><a class="hisui-linkbutton hover-dark" id="btnQry" data-options="iconCls:'icon-w-find'">查询</a></td>
		</tr>
		<tr>
			<td class="r-label"><label>#(..Get("姓名"))#</label></td>
			<td><input class="hisui-textbox textbox" id="txtPatName" style="width:140px;" /></td>
		    <td class="r-label"><label>#(..Get("证件号码"))#</label></td>
			<td><input class="hisui-textbox textbox" id="txtIDNumber" style="width:140px;" /></td>
			<td class="r-label"><label>#(..Get("关键字"))#</label></td>
			<td><input class="hisui-textbox textbox" id="txtKeyWord" style="width:140px;" /></td>
			<td class="r-label"><label>#(..Get("就诊日期"))#</label></td>
			<td><input class="hisui-datebox textbox" id="admDateFrom" style="width:147px;" /></td>
			<td class="r-label"><label>#(..Get("至"))#</label></td>
			<td><input class="hisui-datebox textbox" id="admDateTo" style="width:147px;" /></td>
			<!--
			<td class="r-label"><label>#(..Get("出院日期"))#</label></td>
			<td><input class="hisui-datebox textbox" id="discDateFrom" style="width:147px;" /></td>
			-->
			<td class="r-label"><a class="hisui-linkbutton hover-dark" id="btnClean" data-options="iconCls:'icon-w-clean'">清空</a></td>
		</tr>
		<tr>
		    <td class="r-label"><label>#(..Get("出院科室"))#</label></td>
			<td><input class="hisui-combobox textbox" id="cboDiscLoc" style="width:147px;" /></td>
			<td class="r-label"><label>#(..Get("出院病区"))#</label></td>
			<td><input class="hisui-combobox textbox" id="cboDiscWard" style="width:147px;" /></td>
			<td class="r-label"><label>#(..Get("出院日期"))#</label></td>
			<td><input class="hisui-datebox textbox" id="discDateFrom" style="width:147px;" /></td>
			<td class="r-label"><label>#(..Get("至"))#</label></td>
			<td><input class="hisui-datebox textbox" id="discDateTo" style="width:147px;" /></td>
		</tr>
	</table>
</div>