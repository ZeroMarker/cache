<!-- 主页面-->
<div class="hisui-layout" data-options="fit:true">
	<div data-options="region:'center',border:false,collapsible:false" class="ma-panel" fit="true" style="padding:10px">
		<table id="gridPlanManage" data-options="toolbar:'#ToolBar'"></table>
		<div id="ToolBar" style="padding:3px" >
			<a class="hisui-linkbutton" id="btnAdd"  data-options="iconCls:'icon-add',plain:true,stopAllEventOnDisabled:true"> 新增 </a>
			<a class="hisui-linkbutton" id="btnEdit" data-options="iconCls:'icon-write-order',plain:true,stopAllEventOnDisabled:true"> 修改 </a>
			<a class="hisui-linkbutton" id="btnDelete"  data-options="iconCls:'icon-cancel',plain:true,stopAllEventOnDisabled:true" > 删除 </a>
		</div>
	</div>
</div>
<div id="winEdit" style="overflow:hidden;padding-right:10px;display:none">
	<table class="search-table">
		<tr>
			<td class="r-label">
				<label for="txtPlanName">预案名</label>
			</td>
			<td>
				<input class="hisui-validatebox textbox" id="txtPlanName" data-options="required:true" style="width:300px" >
			</td>
		</tr>
		<tr>
			<td class="r-label">
				<label for="cboPlanType">预案类型</label>
			</td>
			<td>
				<input class="hisui-combobox textbox hisui-validatebox" id="cboPlanType" data-options="required:true" style="width:307px">
			</td>
		</tr>
		<tr>
			<td class="r-label">
				<label for="txtKeys">关键词</label>
			</td>
			<td>
				<input class="textbox hisui-validatebox" id="txtKeys" placeholder="英文逗号分隔" data-options="required:true" style="width:300px" >
			</td>
		</tr>
		<tr>
			<td class="r-label">
				<label for="txtContent">内容</label>
			</td>
			<td>
				<textarea class="textbox hisui-validatebox" id="txtContent" data-options="required:true" style="width:300px;height:200px" > </textarea>
			</td>
		</tr>
		<tr>
			<td class="r-label">
				<label for="chkActive">是否有效</label>
			</td>
			<td>
				<input class='hisui-checkbox' type="checkbox" id="chkActive" checked >
			</td>
		</tr>
		</tr>
			<td colspan="2" class="search-btnlist" Style="text-align:center">
				<a id="winBtnEdit" class="hisui-linkbutton" >保存</a>
				<a id="winBtnClose" class="hisui-linkbutton">关闭</a>
			</td>
		</tr>
	</table>
</div>	