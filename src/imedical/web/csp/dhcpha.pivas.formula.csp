<!DOCTYPE html>
<!--审核指标公式维护
	csp:dhcpha.pivas.formula.csp
	js: scripts/pharmacy/pivas/formula.js
-->
<HTML XMLNS=TRAK>

<HEAD>
    <title>
        <TRAK:TRANSLATE id=title>##(%session.Get("TITLE"))##</TRAK:TRANSLATE>
    </title>
    <TRAK:HEAD></TRAK:HEAD>
    <HISUI/>
    <link rel="stylesheet" type="text/css" href="../scripts/pharmacy/common/css/dhcpha.hisui.css">
    <link rel="stylesheet" type="text/css" href="../scripts/pharmacy/pivas/css/ui.css">
</HEAD>

<body style="background:white;">
    <div class="dhcpha-win-mask">
        <img src="../scripts/pharmacy/common/image/page-loading.gif"></img>
    </div>
    <div class="hisui-layout" fit="true" border="false">
        <div data-options="region:'center'" class="dhcpha-hisui-container">
            <div class="hisui-layout" fit="true" border="false">
                <div data-options="region:'west',title:'药学成分指标',width:300,split:true,headerCls:'panel-header-gray',iconCls:'icon-panel-drug-mol',collapsible:false">
                    <table id="gridIngIndex"></table>
                </div>
                <div data-options="region:'center',title:'药学成分指标公式',headerCls:'panel-header-gray',iconCls:'icon-panel-fx'">
                    <table id="gridIngIndItm"></table>
                </div>
            </div>
        </div>
    </div>
    <div id="gridIngIndexBar">
        <table cellspacing=0 cellpadding=0>
            <tr>
                <td>
                    <a class="hisui-linkbutton" plain='true' iconCls="icon-add" id="btnAdd">新增</a>
                </td>
                <td>
                    <a class="hisui-linkbutton" plain='true' iconCls="icon-save" id="btnSave">保存</a>
                </td>
                <td>
                    <a class="hisui-linkbutton" plain='true' iconCls="icon-remove" id="btnDelete">删除</a>
                </td>
            </tr>
        </table>
        </span>
    </div>
    <div id="gridIngIndItmBar">
        <table cellspacing=0 cellpadding=0>
            <tr>
                <td>
                    <a class="hisui-linkbutton" plain='true' iconCls="icon-add" id="btnAddItm">新增</a>
                </td>
                <td>
                    <a class="hisui-linkbutton" plain='true' iconCls="icon-edit" id="btnUpdateItm">修改</a>
                </td>
                <td>
                    <a class="hisui-linkbutton" plain='true' iconCls="icon-remove" id="btnDeleteItm">删除</a>
                </td>
                <td>
            </tr>
        </table>
        </span>
    </div>
    <div id="gridIngIndItmWin" class="hisui-dialog" title="指标明细" closed="true" style="width:700px;height:500px;" data-options="iconCls:'icon-panel-fx',modal:true,
	buttons:[{
		text:'确定',
		handler:function(){
			SaveIngIndItm();
		}
	},{
		text:'取消',
		handler:function(){
			$('#gridIngIndItmWin').window('close');
		}
	}]">
        <div class="hisui-layout" fit="true" border="false">
            <div data-options="region:'center'" class="dhcpha-hisui-container">
                <div class="hisui-layout" data-options="fit:true">
                    <div data-options="region:'north',height:250,split:true" border="false">
                        <div class="hisui-layout" data-options="fit:true" border="false">
                            <div data-options="region:'west',width:200" border="false">
                                <table cellpadding=0 cellspacing=0>
                                    <tr>
                                        <td>代码<input id="txtIngIndItmCode" type="text" class="hisui-validatebox" /></td>
                                    </tr>
                                    <tr>
                                        <td style="padding-top: 10px;">名称<input id="txtIngIndItmDesc" type="text" class="hisui-validatebox" /></td>
                                    </tr>
                                    <tr>
                                        <td style="padding-top: 10px;">下限<input id="txtIngIndItmMin" type="text" class="hisui-validatebox" /></td>
                                    </tr>
                                    <tr>
                                        <td style="padding-top: 10px;">上限<input id="txtIngIndItmMax" type="text" class="hisui-validatebox" /></td>
                                    </tr>
                                    <tr>
                                        <td style="padding-top: 10px;">单位<input id="txtIngIndItmUom" type="text" class="hisui-validatebox" /></td>
                                    </tr>
                                    <tr>
                                        <td style="padding-top: 10px;">备注<input id="txtIngIndItmRemark" type="text" class="hisui-validatebox" /></td>
                                    </tr>
                                </table>
                            </div>
                            <div data-options="region:'center'" border="false">
                                <div>
                                    <textarea id="txtIngIndItmFormula" style="width:470px;height:225px;overflow:hidden"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div data-options="region:'center'" border="false">
                        <div id="cacuTable">
                            <div style="padding-left:5px">
                                <a class="hisui-linkbutton">+</a>
                                <a class="hisui-linkbutton">-</a>
                                <a class="hisui-linkbutton">*</a>
                                <a class="hisui-linkbutton">/</a>
                                <a class="hisui-linkbutton">(</a>
                                <a class="hisui-linkbutton">)</a>
                                <a class="hisui-linkbutton">总液体量</a>
                                <a class="hisui-linkbutton">体重</a>
                                <a class="hisui-linkbutton">身高</a>
                                <a class="hisui-linkbutton">体表面积</a>
                                <!--a class="hisui-linkbutton">计算体重</a-->
                            </div>
                        </div>
                        <div id="IngredientButtons">                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="../scripts/pharmacy/common/js/dhcpha.hisui.extend.js"></script>
    <script type="text/javascript" src="../scripts/pharmacy/common/js/dhcpha.hisui.com.js"></script>
    <script type="text/javascript" src="../scripts/pharmacy/pivas/common.js"></script>
    <script type="text/javascript" src="../scripts/hisui/websys.comm.js"></script>
    <script type="text/javascript" src="../scripts/pharmacy/pivas/formula.js"></script>
</body>

</HTML>