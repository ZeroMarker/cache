<!-- 主页面-->
<div class="hisui-layout" data-options="fit:true">
	<div data-options="region:'center',border:false,collapsible:false" style="padding:10px;">
		<table id="gridESurReport" data-options="toolbar:'#QueryToolBar'"></table>
        <div id="QueryToolBar" >			
			<table class="search-table">
				<tr>
					<td class="r-label">
						<label >报告日期:</label>
					</td>
					<td class="r-label">
						<input class="hisui-datebox textbox" id="DateFrom" style="width:127px"/>
					</td>
					<td class="r-label">
						<label >至</label>
					</td>
					<td class="r-label">
						<input class="hisui-datebox textbox" id="DateTo" style="width:127px"/>
					</td>
					<td class="r-label">
						<label >姓名</label>
					</td>
					<td class="r-label">
						<input class="textbox" id="PatName" style="width:127px"/>
					</td>
					<td class="r-label">
						<label >报告状态</label>
					</td>
					<td class="r-label">
						<div id="chkRepStatus" style="width:160px">
						</div>
					</td>
					<td class="l-label" colspan="2">
						<a class="hisui-linkbutton"  id="btnQuery" data-options="stopAllEventOnDisabled:true,iconCls:'icon-w-find'" style="width:90px;margin-left:20px;" >查询</a>
						<a class="hisui-linkbutton"  id="btnImport"  data-options="iconCls:'icon-w-export'" style="width:90px;margin-left:10px;" >导出</a>
					</td>
				</tr>
			</table>
		</div>
	</div>
</div>