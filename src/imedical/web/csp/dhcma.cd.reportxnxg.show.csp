<!-- 主页面-->
<div id="XNXGReport" class="hisui-layout" data-options="fit:true" style="width:100%;height:100%;">
	<div data-options="region:'center',border:false,collapsible:false">
		<div class="page-body" id="divbody" style="width:1285px;">
			<div class="report-header">
				<span>心脑血管事件报告卡</span>
			</div>
			<div class="report-content">
				<div class="hisui-panel" id="BaseInfo" data-options="title:'基本信息',headerCls:'panel-header-gray',iconCls:'icon-paper'">
					<table id="BaseInfoTab"  class="report-tab">
						<tr class="report-tr">
							<td class="report-td">卡片编号</td>
							<td><input class="textbox" id="txtKPBH" disabled /></td>
							<td class="report-td">登记号</td>
							<td><input class="textbox" id="txtRegNo" disabled /></td>
							<td class="report-td"><font color='red'>*</font>报卡类型</td>
							<td><input class="textbox" id="cboBGKLX"/></td>
						</tr>
						<tr class="report-tr">
							<td class="report-td"><font color='red'>*</font>姓名</td>				
							<td><input class="textbox" id="txtPatName" disabled /></td>
							<td class="report-td"><font color='red'>*</font>性别</td>					
							<td><input class="textbox" id="txtSex" disabled /></td>
							<td class="report-td"><font color='red'>*</font>年龄</td>					
							<td>
								<input class="textbox" id="txtAge" style="width:60px;" disabled />
								<input class="textbox" id="cboPatAgeDW" style="width:84px;" disabled />
							</td>
							<td class="report-td"><font color='red'>*</font>出生日期</td>				
							<td><input class="hisui-datebox textbox" id="txtBirthDay"/></td>
							<td class="report-td"><font color='red'>*</font>身份证号</td>				
							<td><input class="textbox" id="txtPatCardNo"/></td>
					   </tr>
					   <tr class="report-tr">
							<td class="report-td"><font color='red'>*</font>民族</td>				
							<td><input class="textbox" id="cboNation" /></td>
							<td class="report-td"><font color='red'>*</font>文化</td>					
							<td><input class="textbox" id="cboEducation"/></td>
							<td class="report-td"><font color='red'>*</font>婚姻情况</td>					
							<td><input class="textbox" id="cboMarital"/></td>
							<td class="report-td"><font color='red'>*</font>联系电话</td>					
							<td><input class="textbox" id="txtLXDH"/></td>
						</tr>
					   
					   <tr class="report-tr">	
							<td class="report-td"><font color='red'>*</font>职业</td>					
							<td colspan="3"><input class="textbox" id="cboOccupation" style="width:414px;"/></td>
							<td class="report-td" ><font color='red'>*</font>具体工种</td>					
							<td colspan="3"><input class="textbox" id="cboCRGZ" style="width:415px;"/></td>
							<td class="report-td">工作单位</td>				
							<td><input class="textbox" id="txtCompany"/></td>
							
					   </tr>
					   <tr class="report-tr">
							<td class="report-td"><font color='red'>*</font>居住地址 省</td>				
							<td><input class="textbox" id="cboCurrProvince"/></td>
							<td class="report-td"><font color='red'>*</font>市</td>				
							<td><input class="textbox" id="cboCurrCity"/></td>
							<td class="report-td"><font color='red'>*</font>县</td>					
							<td><input class="textbox" id="cboCurrCounty" /></td>
							<td class="report-td"><font color='red'>*</font>乡/镇</td>					
							<td><input class="textbox" id="cboCurrVillage" /></td>
							<td class="report-td"><font color='red'>*</font>村(小区)</td>					
							<td><input class="textbox" id="txtCurrRoad" /></td>
					    </tr>
					    <tr class="report-tr">
							<td class="report-td"><font color='red'>*</font>详细地址</td>				
							<td colspan="9"><input class="textbox" id="txtCurrAddress" style="width:1179px;"></td>
					   </tr>
					   <tr class="report-tr">
							<td class="report-td"><font color='red'>*</font>户口地址 省</td>				
							<td><input class="textbox" id="cboRegProvince"/></td>
							<td class="report-td"><font color='red'>*</font>市</td>				
							<td><input class="textbox" id="cboRegCity"/></td>
							<td class="report-td"><font color='red'>*</font>县</td>					
							<td><input class="textbox" id="cboRegCounty" /></td>
							<td class="report-td"><font color='red'>*</font>乡/镇</td>					
							<td><input class="textbox" id="cboRegVillage" /></td>
							<td class="report-td"><font color='red'>*</font>村(小区)</td>					
							<td><input class="textbox" id="txtRegRoad" /></td>
					    </tr>
					    <tr class="report-tr">
							<td class="report-td"><font color='red'>*</font>详细地址</td>				
							<td colspan="9"><input class="textbox" id="txtRegAddress" style="width:1179px;"></td>
					   </tr>
					</table>
				</div>
				
				<div class="hisui-panel" id="DetailInfo" data-options="title:'心脑血管明细信息',headerCls:'panel-header-gray',iconCls:'icon-paper'">
					<table id="DetailInfoTab"  class="report-tab">
						<tr class="report-tr">
							<td class="report-td" ><font color='red'>*</font>诊断</td>					
							<td><input class="textbox" id="cboCRZD" /></td>
							<td class="report-td">ICD编码</td>					
							<td><input class="textbox" id="txtICD" disabled /></td>
							<td class="report-td">冠心病</td>					
							<td><input class="textbox" id="cboGXB"/></td>
							<td class="report-td">脑卒中</td>					
							<td colspan="3"><input class="textbox" id="cboNZZ"/>(只可填写冠心病与脑卒中其中一种疾病)</td>
					    </tr>
	
						<tr class="report-tr">
							<td class="report-td">首要症状</td>					
							<td colspan="8">
								<div id="radSYZZList">
								</div>
							</td>
					    </tr>
						
						<tr class="report-tr">
							<td class="report-td"><font color='red'>*</font>病史</td>					
							<td colspan="8">
								<div id="radBSList">
								</div>
							</td>
					    </tr>
						<tr class="report-tr">
							<td class="report-td"><font color='red'>*</font>发病日期</td>				
							<td><input class="hisui-datebox textbox" id="txtFBRQ"/></td>
							<td class="report-td"><font color='red'>*</font>确诊日期</td>					
							<td><input class="hisui-datebox textbox" id="txtQZRQ" /></td>
							<td class="report-td">是否首次发病</td>					
							<td><input class='hisui-checkbox' type="checkbox" id="chkIsFB" /></td>
							<td class="report-td"><font color='red'>*</font>确诊单位</td>					
							<td><input class="textbox" id="cboQZDW"/></td>
							<td class="report-td"><font color='red'>*</font>报卡单位</td>					
							<td><input class="textbox" id="txtRepDW"/></td>
					    </tr>
						<tr class="report-tr">
							<td class="report-td">报卡科室</td>				
							<td><input class="textbox" id="cboCRReportLoc" disabled /></td>
							<td class="report-td"><font color='red'>*</font>报卡医生</td>					
							<td><input class="textbox" id="txtDoctor" disabled /></td>
							<td class="report-td"><font color='red'>*</font>报卡日期</td>				
							<td><input class="hisui-datebox textbox" id="dtRepDate" disabled /></td>
							<td class="report-td">死亡原因</td>					
							<td><input class="textbox" id="cboDeathReason" /></td>
							<td class="report-td">死亡日期</td>				
							<td><input class="hisui-datebox textbox" id="txtSWRQ"/></td>
					    </tr>
						<tr class="report-tr">
							<td class="report-td">死亡诊断</td>				
							<td><input class="textbox" id="cboCRSWZD" /></td>
							<td class="report-td">死亡ICD</td>					
							<td><input class="textbox" id="txtSWICD" disabled /></td>
							<td class="report-td">死亡具体原因</td>					
							<td><input class="textbox" id="txtSWJTYY" /></td>
					    </tr>
						<tr class="report-tr">
							<td colspan="3" class="report-td">本次卒中发病时间与CT/核磁共振检查时间间隔</td>				
							<td><input class="textbox" id="cboSJJG" /></td>
					    </tr>
						<tr class="report-tr">
							<td class="report-td"><font color='red'>*</font>诊断依据:</td>				
					    </tr>
						<tr class="report-tr">
							<td class="report-td">磁共振</td>				
							<td><input class="textbox" id="cboCGZ" /></td>
							<td class="report-td">血清酶</td>				
							<td><input class="textbox" id="cboXQM" /></td>
							<td class="report-td">心电图</td>				
							<td><input class="textbox" id="cboXDT" /></td>
							<td class="report-td">CT</td>				
							<td><input class="textbox" id="cboCT" /></td>
							<td class="report-td">血管造影</td>				
							<td><input class="textbox" id="cboXGZY" /></td>
					    </tr>
						<tr class="report-tr">
							<td class="report-td">临床症状</td>				
							<td><input class="textbox" id="cboLCZZ" /></td>
							<td class="report-td">脑脊液</td>				
							<td><input class="textbox" id="cboNJY"  /></td>
							<td class="report-td">尸检</td>				
							<td><input class="textbox" id="cboSJ"  /></td>
							<td class="report-td">脑电图</td>				
							<td><input class="textbox" id="cboNDT"  /></td>
							<td class="report-td">医生检查</td>				
							<td><input class="textbox" id="cboYSJC"  /></td>
					    </tr>
						<tr class="report-tr">
							<td class="report-td">死后推断</td>				
							<td><input class="textbox" id="cboSHTD" /></td>
					    </tr>
						<tr class="report-tr">
							<td></td>
							<td class="report-td" colspan="4" style="text-align:left;margin-left:20px">病史摘要(主诉、临床表现和检查情况)</td>				
						</tr>
						<tr class="report-tr">
							<td></td>
							<td colspan="8" style="text-align:left"><textarea class="textbox" id="txtBSZY" data-options="multiline:true" style="width:850px;height:60px" ></textarea></td>	
						</tr>
					</table>
				</div>
			</div>
		</div>
		<div class="page-footer">	
			<a id="btnSave" class="hisui-linkbutton">保存</a>
			<a id="btnCheck" class="hisui-linkbutton">审核</a>
			<a id="btnCanCheck" class="hisui-linkbutton">取消审核</a>
			<a id="btnDelete" class="hisui-linkbutton">作废</a>
			<a id="btnExport" class="hisui-linkbutton">导出</a>
			<a id="btnPrint" class="hisui-linkbutton">打印</a>	
			<a id="btnCancle" class="hisui-linkbutton">关闭</a>		
		</div>
	</div>
</div>