 * Anchor: ZhYW
 * Date: 2019-09-19
 * Description: 中途结算/拆分账单
-->
<!DOCTYPE html>
<csp:method name=OnPreHTTP arguments="" returntype=%Boolean>
 if ##class(websys.SessionEvents).SessionExpired() quit 1
 quit 1
</csp:method>
<html>
<head>
	<TITLE><EXTHEALTH:TRANSLATE id=title>##(%session.Get("TITLE"))##</EXTHEALTH:TRANSLATE></TITLE>
	<EXTHEALTH:HEAD></EXTHEALTH:HEAD>
	<HISUI/>
	<DHCBILL/>
	<link rel='stylesheet' type='text/css' href='../scripts/dhcbill/themes/default/dhcbill.ipbill.intpay.css'/>
</head>

<body style="padding:10px;">
	<div class="hisui-panel" data-options="bodyCls:'panel-header-gray'" style="width:700px;border-radius:4px;">
		<table class="search-table" style="width:100%;">
			<tr>
				<td class="r-label td-first-col"><label>开始日期</label></td>
				<td><input id="stDate" class="hisui-datebox textbox"/></td>
				<td class="r-label"><label>结束日期</label></td>
				<td><input id="endDate" class="hisui-datebox textbox"/></td>
				<td><input id="isFullFlag" class='hisui-checkbox' type="checkbox" checked label="算满"></td>
			</tr>
			<tr>
				<td class="r-label"><label>开始时间</label></td>
				<td><input id="stTime" class="hisui-timespinner textbox" data-options="showSeconds:true"/></td>
				<td class="r-label"><label>结束时间</label></td>
				<td><input id="endTime" class="hisui-timespinner textbox" data-options="showSeconds:true"/></td>
				<td><input id="isPilotFlag" class='hisui-checkbox' type="checkbox" label="临床药理"></td>
				<td></td>
			</tr>
			<tr>
				<td class="r-label"><label>科室</label></td>
				<td><input id="dept" class="hisui-combobox textbox"/></td>
				<td class="r-label"><label>婴儿</label></td>
				<td><input id="baby" class="hisui-combogrid textbox"/></td>
			</tr>
			<tr>
				<td class="r-label"><label>指定金额</label></td>
				<td><input id="intAmt" class="hisui-numberbox textbox" data-options="precision:2,min:0" style="color: #FF0000;font-weight: bold;"/></td>
				<td class="r-label"><label>金额</label></td>
				<td><input id="amount" class="hisui-numberbox textbox" data-options="precision:2,min:0,disabled:true" style="color: #FF0000;font-weight: bold;"/></td>
			</tr>
		</table>
		<div style="padding-top:30px;height:75px;">
			<div style="text-align:center;">
				<a href="javascript:;" class="hisui-linkbutton biggerBtn" id="btn-calc">收集金额</a>
				<a href="javascript:;" class="hisui-linkbutton biggerBtn" id="btn-split" style="margin-left:40px;background: #21BA45;">拆分账单</a>
			</div>
		</div>
	</div>
	<script type="text/javascript" src="../scripts/dhcbill/dhcipbill/dhcbill.ipbill.intpay.js"></script>
</body>
</html>
