<!DOCTYPE html>
<!--配液医嘱查询
	csp:dhcpha.pivas.oequery.csp
	js: scripts/pharmacy/pivas/oequery.js
-->
<csp:method name=OnPreHTTP arguments="" returntype=%Boolean>
    d ##Class(ext.websys.SessionEvents).SessionExpired() q 1
</csp:method>
<HTML XMLNS=TRAK>

<HEAD>
    <title>
        <TRAK:TRANSLATE id=title>##(%session.Get("TITLE"))##</TRAK:TRANSLATE>
    </title>
    <TRAK:HEAD>
    </TRAK:HEAD>
    <HISUI/>
    <link rel="stylesheet" type="text/css" href="../scripts/pharmacy/common/css/dhcpha.hisui.css"></link>
    <style type="text/css">

    </style>
</HEAD>

<body>
    <div class="hisui-layout" fit="true">
        <div data-options="region:'center',split:true,headerCls:'panel-header-gray'" class="dhcpha-hisui-container">
            <div class="hisui-layout" fit="true" border="false">
                <div data-options="region:'north',title:'配液医嘱查询',split:true,iconCls:'icon-panel-pivas-query',headerCls:'panel-header-gray',collapsible:false" class="dhcpha-north-r1">
                    <table class="dhcpha-north-tbl">
                        <tr>
                            <td>
                                <label for="dateOrdStart">用药时间</label>
                                <input id="dateOrdStart" class="hisui-datebox" data-options="width:120">
                                <input id="timeOrdStart" class="hisui-timespinner" showSeconds="true" data-options="width:100"> 至
                                <input id="dateOrdEnd" class="hisui-datebox" data-options="width:120">
                                <input id="timeOrdEnd" class="hisui-timespinner" showSeconds="true" data-options="width:100">
                            </td>
                            <td style="padding-left:20px">
                                <input id="cmbPivasLoc" class="hisui-combobox">
                            </td>
                            <td>
                                <input id="cmbWard" class="hisui-combobox">
                            </td>
                            <td>
                                <input id="txtPatNo" class="hisui-validatebox" placeholder="登记号...">
                            </td>
                            <td>
                                <a class="hisui-linkbutton" plain="false" iconCls="icon-w-find" id="btnFind">查询</a>
                            </td>
                        </tr>
                    </table>
                </div>
                <div data-options="region:'west',title:'病人列表',split:true,headerCls:'panel-header-gray',iconCls:'icon-panel-pat',width:300">
                    <table id="gridPat"></table>
                </div>
                <div data-options="region:'center',title:'医嘱明细',split:true,headerCls:'panel-header-gray',iconCls:'icon-panel-common'">
                    <table id="gridOrdItm"></table>
                </div>
                <!--div data-options="region:'east',title:'配液状态记录',split:true,headerCls:'panel-header-gray',width:350">
				<table id="gridRecord" ></table>
		</div-->
            </div>
        </div>
    </div>
    <script type="text/javascript" src="../scripts/pharmacy/common/js/dhcpha.hisui.extend.js"></script>
    <script type="text/javascript" src="../scripts/pharmacy/common/js/dhcpha.hisui.com.js"></script>
    <script type="text/javascript" src="../scripts/pharmacy/pivas/common.js"></script>
    <script type="text/javascript" src="../scripts/pharmacy/pivas/timeline.js"></script>
    <script type="text/javascript" src="../scripts/pharmacy/pivas/oequery.js"></script>
</body>

</HTML>