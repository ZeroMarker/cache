<div class="hisui-layout" data-options="fit:true" style="border:none;">
		<div data-options="region:'west'" style="width:900px;border:none;">
			<div  class="hisui-panel" fit="true"  style="border:none;border-right:0px;padding:10px 5px 10px 10px;">
				<table id="gridCRuleDef" data-options="toolbar:'#custtb'"></table>
				<div id="custtb" style="padding:3px;display:none" >
					<a class="hisui-linkbutton" id="btnAdd"  data-options="iconCls:'icon-add',plain:true,stopAllEventOnDisabled:true"> 新增 </a>
					<a class="hisui-linkbutton" id="btnEdit" data-options="iconCls:'icon-write-order',plain:true,stopAllEventOnDisabled:true"> 修改 </a>
					<a class="hisui-linkbutton" id="btnDelete"  data-options="iconCls:'	icon-cancel',plain:true,stopAllEventOnDisabled:true" > 删除 </a>
					<div style="float:right;padding-right:2px;">
						<input class="hisui-searchbox" id="searchbox" style="width:260px;" data-options="prompt:'搜索'" />			 
					</div>	
				</div>
			</div>	
		</div>
		
		<div data-options="region:'center'" style="padding:0;border:none;">
			<div class="hisui-panel" fit="true" style="border:none;padding:10px 10px 10px 5px;">
				<div class="hisui-panel"  data-options="fit:true" >
					<table id="gridCRuleDefExt" data-options="toolbar:'#custtb2',border:false"></table>
					<div id="custtb2" style="padding:3px;overflow:hidden;display:none" >
						<a class="hisui-linkbutton" id="btnAdd_one" data-options="iconCls:'icon-add',plain:true,stopAllEventOnDisabled:true"> 新增 </a>
						<a class="hisui-linkbutton" id="btnEdit_one" data-options="iconCls:'icon-write-order',plain:true,stopAllEventOnDisabled:true"> 修改 </a>
						<a class="hisui-linkbutton" id="btnDelete_one" data-options="iconCls:'icon-cancel',plain:true,stopAllEventOnDisabled:true" > 删除 </a>
						
						<!--<div style="float:right;padding-right:10px;">
							<input class="hisui-searchbox" id="searchbox_two" style="width:260px;" data-options="prompt:'搜索'" />			 
						</div>-->
					</div>
				</div>	
			</div>
		</div>
</div>
<div id="layer" style="border:none;overflow:hidden;padding-right:10px;display:none">
	<table class="search-table">
		<tr>
			<td class="r-label">
				<label for="cboInfPos">感染诊断描述</label>
			</td>
			<td>
				<div class="hisui-combobox" id="cboInfPos" style="width:266px" placeholder="感染诊断描述..."></div>
			</td>
		</tr>
		<tr>
			<td class="r-label">
				<label for="txtTitle">标准定义</label>
			</td>
			<td>
				<input class="textbox" id="txtTitle" style="width:260px" placeholder="标准定义..."/>
			</td>
		</tr>
		<tr>
			<td class="r-label">
				<label for="txtNote">标准解读</label>
			</td>
			<td>
				<input class="textbox" id="txtNote" style="width:260px" placeholder="标准解读..."/>
			</td>
		</tr>
		<tr>
			<td class="r-label">
				<label for="txtIndNo">排序码</label>
			</td>
			<td>
				<input class="textbox" id="txtIndNo" style="width:260px" placeholder="排序码...."/>
			</td>
		</tr>
		<tr>
			<td class="r-label">
				<label for="txtMaxAge">年龄大于</label>
			</td>
			<td>
				<input class="textbox" id="txtMaxAge" onkeyup="value=value.replace(/[^\d]/g,'')" style="width:260px" placeholder="年龄大于...."/>
			</td>
		</tr>
		<tr>
			<td class="r-label">
				<label for="txtMinAge">年龄小于</label>
			</td>
			<td>
				<input class="textbox" id="txtMinAge" onkeyup="value=value.replace(/[^\d]/g,'')" style="width:260px" placeholder="年龄小于...."/>
			</td>
		</tr>
		<tr>
			<td class="r-label" colspan="1">
				<label for="chkActive" >是否有效</label>
			</td>
			<td>
				<input class='hisui-checkbox' type="checkbox" id="chkActive" checked/>
			</td>
		</tr>
	</table>
</div>

