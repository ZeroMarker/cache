<html>
<head>
<!-- Put your page Title here -->
<title>药历查询</title>
<TRAK:HEAD></TRAK:HEAD>
<DHCAPP:EASYUI/>
<script type="text/javascript" src="../scripts/dhcpha/clinical/querymedrecord.js"></script>
</head>
<body>
	<div id="mainpanel" class="easyui-layout" fit="true">
		<div data-options="region:'north',title:'药历查询'" style="width:500px;height:125px;">
			<!-- 查询条件 -->
			<table style="font-size:14px">
				<tr style="height:20px">
					<td width="40"></td>
					<td></td>
					<td></td>
					<td width="30"></td>
					<td></td>
					<td></td>
					<td width="30"></td>
					<td></td>
					<td></td>
					<td width="30"></td>
					<td></td>
				</tr>
				<tr>
					<td></td>
					<td align="right" class="input-label">开始日期：</td>
					<td width="150px"><input id="stdate" type="text" class="easyui-datebox"/></td>
					<td></td>
					<td align="right" class="input-label">病案号:</td>
					<td width="150px"><input id="idnum"/></td>
					<td></td>
					<td align="right" class="input-label">病&nbsp&nbsp&nbsp&nbsp区:</td>
					<td width="150px"><input id="wing"/></td>
					<td></td>
					<td ><a class="easyui-linkbutton" data-options="iconCls:'icon-search'" id="find">查询</a> </td> 
				</tr>
				<tr>
					<td></td>
					<td align="right" class="input-label">结束日期：</td>
					<td width="150px"><input id="enddate" type="text" class="easyui-datebox"/></td>
					<td></td>
					<td align="right" class="input-label">登记号:</td>
					<td width="150px"><input id="patno"/></td>
					
					<td></td>
					<td align="right" class="input-label">药历状态:</td>
					<td width="150px"><input id="statue"/></td>
				</tr>
			</table>
		</div>
		<!--数据列区域-->
		<div data-options="region:'center',title:'药历列表'">
			<div id="medrecordlist" toolbar="#subtoolbar"></div>
		</div>
	</div>
</body>
</html>

