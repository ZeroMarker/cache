<!-- 主页面-->
<div class="hisui-layout" data-options="fit:true" style="border:none">
	<div data-options="region:'center'" fit="true" style="text-align:center;border:none">
		<div  class="hisui-panel" fit="true"  style="border:none">
			<table id="gridLabBacteria" data-options="toolbar:'#custtb'" border="0"></table>
			<div id="custtb" style="padding:3px" >
				<a class="hisui-linkbutton" id="btnAdd"  data-options="iconCls:'icon-add',plain:true,stopAllEventOnDisabled:true"> 新增 </a>
				<a class="hisui-linkbutton" id="btnEdit" data-options="iconCls:'icon-write-order',plain:true,stopAllEventOnDisabled:true"> 修改 </a>
				<a class="hisui-linkbutton" id="btnDelete"  data-options="iconCls:'icon-cancel',plain:true,stopAllEventOnDisabled:true" > 删除 </a>
				<div style="float: right;">
					<input id="search" data-options="prompt:'搜索'" class="hisui-searchbox"/>
				</div>
			</div>
		</div>
	</div>	
</div>

	<div id="winEdit" style="border:none;overflow:hidden;padding-right:10px;display:none">
		<table class="search-table">
			<tr>
				<td class="r-label" style="width:70px">
					<label for="txtBacCode"><font color="red">*</font>代码</label>
				</td>
				<td>
					<input class="textbox" id="txtBacCode" style="width:260px"/>
				</td>
			</tr>
			<tr>
				<td class="r-label" style="width:70px">
					<label for="txtBacDesc"><font color="red">*</font>名称</label>
				</td>
				<td>
					<input class="textbox" id="txtBacDesc" style="width:260px"/>
				</td>
			</tr>
			<tr>
				<td class="r-label" style="width:70px">
					<label for="txtBacName"><font color="red">*</font>英文名</label>
				</td>
				<td>
					<input class="textbox" id="txtBacName" style="width:260px"/>
				</td>
			</tr>
			<tr>
				<td class="r-label" style="width:70px">
					<label for="cboBacType">细菌类型</label>
				</td>
				<td>
					<input class="hisui-combobox textbox" id="cboBacType" style="width:267px"/>
				</td>
			</tr>
			<tr>
				<td class="r-label" style="width:70px">
					<label for="cboBacCat">细菌分类</label>
				</td>
				<td>
					<input class="hisui-combobox textbox" id="cboBacCat" style="width:267px"/>
				</td>
			</tr>
			<tr>
				<td class="r-label" style="width:70px">
					<label for="txtWCode" >whone码</label>
				</td>
				<td>
					<input class="textbox" id="txtWCode" style="width:260px"/>
				</td>
			</tr>
			<tr>
				<td class="r-label">
					<label for="chkIsCommon">是否常见菌</label>
				</td>
				<td>
					<input class='hisui-checkbox' type="checkbox" id="chkIsCommon" />
				</td>
			</tr>
			<tr>
				<td class="r-label">
					<label for="chkIsSkinBact">是否皮肤共生菌</label>
				</td>
				<td>
					<input class='hisui-checkbox' type="checkbox" id="chkIsSkinBact" />
				</td>
			</tr>
			<tr>
				<td class="r-label">
					<label for="chkActive">是否有效</label>
				</td>
				<td>
					<input class='hisui-checkbox' type="checkbox" id="chkActive" checked/>
				</td>
			</tr>
		</table>
	</div>