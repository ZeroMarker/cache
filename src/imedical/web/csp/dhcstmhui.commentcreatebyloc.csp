<!--生成点评单
csp:dhcstmhui.commentcreatebyloc.csp
js:dhcstmhisui/Comment/Comment.js
-->
<!DOCTYPE html>
<csp:method name=OnPreHTTP arguments="" returntype=%Boolean>
 i ##Class(websys.SessionEvents).SessionExpired() q 1
 q 1
</csp:method>
<html lang="zh-CN">
<head>
	<title><TRAK:TRANSLATE id=title>##(%session.Get("TITLE"))##</TRAK:TRANSLATE></title>
	<EXTHEALTH:HEAD></EXTHEALTH:HEAD>
	<HISUI/>
	<DHCSTMHISUI/>
</head>
<body class="hisui-layout" data-options="fit:true">
	<div class="GridPadding" data-options="region:'center',border:false,collapsible:false">
		<div class="hisui-panel" data-options="title:'高值医嘱统计',iconCls:'icon-paper',fit:true,headerCls:'panel-header-gray'"> 
			<div class="hisui-layout" data-options="fit:true">
				<div class="BorderLine" data-options="region:'north',border:false,collapsible:false">
					<table id="Conditions" class="Condition">
						<tr>
				            <td>高值医嘱数量</td>
				            <td><input id="conHvOrdNum" class='hisui-numberbox' disabled="true" data-options="requied:true"></td>
							<td align="right"><a href="#" id="QueryBT" class="hisui-linkbutton" data-options="iconCls:'icon-w-find'">统计医嘱数量</a></td>
							<td align="right"><a href="#" id="ClearBT" class="hisui-linkbutton" data-options="iconCls:'icon-w-clean'">清屏</a></td>
						</tr>
					</table>
				</div>
				<div data-options="region:'center',border:false,collapsible:false">
					<table id="FindConditions" class="Condition">
					<input id="Inci" name="Inci" type="hidden">
						<tr>
							<td>起始日期</td>
							<td><input id="StartDate" name="StartDate" class="hisui-datebox" style="width:160px;"></td>
							<td>开单科室</td>
							<td><input id="OriLoc" name="OriLoc" class="hisui-combobox" style="width:160px;"></td>
							<td>类组</td>
							<td><input id="StkGrpId" name="StkGrpId" class="textbox hisui-stkscgcombotree" style="width:155px;"></td>
							<td><label>物资名称</label><input id="InciDesc" name="InciDesc" class="textbox" style="width:155px;"></td>
						</tr>
						<tr>
							<td>截止日期</td>
							<td><input id="EndDate" name="EndDate" class="hisui-datebox" style="width:160px;"></select></td>
							<td>开单医生</td>
							<td><input id="Doctor" name="OriDoctor" class="hisui-combobox" style="width:160px;"></td>
							<td>库存分类</td>
							<td><input id="StkCat" name="StkCat" class="textbox hisui-combobox" style="width:155px;"></td>
						</tr>
					</table>
				</div>	
			</div>
		</div>
	</div>
	<div class="GridPadding" data-options="region:'south',border:false,collapsible:false" style="padding-top:0;height:300px;">
		<div class="hisui-panel" title="生成点评单" data-options="headerCls:'panel-header-gray',iconCls:'icon-paper',fit:true">
			<div class="BorderLine" data-options="region:'north',border:false,collapsible:false">
				<table id="CreateNoConditions" class="Condition">
					<tr>
				    	<td>点评单号</td>
				        <td><input id="conComNo" name="conComNo" class='textbox' disabled="true" data-options="requied:true" style="width:200px;"></td>
						<td align="right"><a href="#" id="CreateBT" class="hisui-linkbutton" data-options="iconCls:'icon-w-save'">抽取高值医嘱</a></td>
					</tr>
				</table>
			</div>	
			<div data-options="region:'center',border:false,collapsible:false">
				<table id="CreateConditions" class="Condition">
					<tr>
				        <td><input id="chkRandomNum" name='saveType' class="hisui-radio" type="radio" label='随机数' value='rNum'></td>
						<td><input id="conSaveRandomNum"  name="conSaveRandomNum" class='hisui-numberbox' style="width:160px;"></td>
						<td>间隔数</td>
						<td><input id="conSpaceQty" name="conSpaceQty"  class='hisui-numberbox' style="width:160px;"></td>
						<td>理论所需总数</td>
						<td><input id="conTheoryQty" name="conTheoryQty"  class='hisui-numberbox' disabled="true" style="width:160px;"><td>
					</tr>
					<tr>
				        <td><input id="chkPercent" name='saveType' class="hisui-radio" type="radio" label='百分比'  value='percent'></td>
						<td><input id="conSavePercent"  name="conSavePercent" class='hisui-numberbox' style="width:160px;"></td>
						<td>抽查数</td>
						<td><input id="conWriteQty"  name="conWriteQty" class='hisui-numberbox' disabled="true" style="width:160px;"></td>
						<td>建议间隔数</td>
						<td><input id="conASpaceQty"  name="conASpaceQty" class='hisui-numberbox' disabled="true" data-options="display:true" style="width:160px;"><td>
					</tr>
				</table>
			</div>	
		</div>
	</div>
	<script type="text/javascript" src="../scripts/dhcstmhisui/CommentCreate/CreateComment.js"></script>
</body>
</html>