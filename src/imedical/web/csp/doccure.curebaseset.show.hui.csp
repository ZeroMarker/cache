<div class="hisui-layout" data-options="fit:true,border:false">
	<div id="laypanel" class="hisui-panel"  title="" style="padding:20px 10px 10px"
	data-options="border:false,iconCls:'icon-edit',headerCls:'panel-header-gray',fit:true,closable:false, collapsible:false,minimizable:false,maximizable:false">   
		<table class="laytable" ALIGN="center"> 
			<tr>
				<td rowspan=2>
					<div class="hisui-panel" style="padding:15px 0px 0px;height:550px;width:300px" title="治疗项目子分类"
					data-options="headerCls:'panel-header-card',closable:false, collapsible:false,minimizable:false,maximizable:false"> 
						<select multiple="multiple" id="List_DHCDocCureItemCat" style="border-style:none;height:100%;width:99%;padding:0px 0px 0px 10px"></select>
					</div>
				</td>
				<td rowspan=2>
					<label style="padding:0px 20px"></label>
				</td>
				<td rowspan=2>
					<div class="hisui-panel" style="padding:15px 0px 0px;height:550px;width:300px" title="治疗科室分类"
					data-options="headerCls:'panel-header-card',closable:false, collapsible:false,minimizable:false,maximizable:false"> 
						<select  multiple="multiple" id="List_DHCDocCureLoc" style="border-style:none;height:100%;width:99%;padding:0px 0px 0px 10px"></select>
					</div>
				</td>
				<td rowspan=2>
					<label style="padding:0px 20px"></label>
				</td>
				<td>
					<div class="hisui-panel" style="padding:20px 0px 0px 10px;height:210px;width:300px" title="其他项目配置"
					data-options="headerCls:'panel-header-card',closable:false, collapsible:false,minimizable:false,maximizable:false"> 
					<table> 
						<tr>
							<td>
								<input class='hisui-checkbox' type="checkbox" id="Check_DHCDocCureNeedTriage" label="是否启用分诊">
								<!--<div id="Check_DHCDocCureNeedTriage" class="hisui-switchbox" style="margin-left:5px" data-options="onText:'启用',offText:'禁用',size:'small',animated:true">
								</div>-->
							</td>
						</tr>
						<tr>
							<td>
								<input class='hisui-checkbox' type="checkbox" id="Check_DHCDocCureWorkQrySelf" label="治疗工作平台仅查看预约到本人的记录">
							</td>
						</tr>
					</table>
					</div> 
				</td>
			</tr> 
			<tr>
				<td>
					<div class="hisui-panel" style="padding:20px 0px 0px 10px;height:350px;width:300px" title="治疗记录图片上传FTP设置"
					data-options="headerCls:'panel-header-card',closable:false, collapsible:false,minimizable:false,maximizable:false"> 
					<table class="search-table"> 
						<tr>
							<td class="r-label">
								<label for="Text_DHCDocCureFTPIPAddress">IP地址<label>
							</td>
							<td>
								<input class='hisui-validatebox textbox' type="textbox" id="Text_DHCDocCureFTPIPAddress"/>
							</td>
						</tr>
						<tr>
							<td class="r-label">
								<label for="Text_DHCDocCureFTPPort">端口号<label>
							</td>
							<td>
								<input class='hisui-validatebox textbox' type="textbox" id="Text_DHCDocCureFTPPort"/>
							</td>
						</tr>
						<tr>
							<td class="r-label">
								<label for="Text_DHCDocCureFTPUserCode">默认用户<label>
							</td>
							<td>
								<input class='hisui-validatebox textbox' type="textbox" id="Text_DHCDocCureFTPUserCode"/>
							</td>
						</tr>
						<tr>
							<td class="r-label">
								<label for="Text_DHCDocCureFTPPassWord">用户密码<label>
							</td>
							<td>
								<input class='hisui-validatebox textbox' type="password" id="Text_DHCDocCureFTPPassWord"/>
							</td>
						</tr>
						<tr>
							<td class="r-label">
								<label for="Text_DHCDocCureFTPPassWordC">确认用户密码<label>
							</td>
							<td>
								<input class='hisui-validatebox textbox' type="password" id="Text_DHCDocCureFTPPassWordC"/>
							</td>
						</tr>
						<tr>
							<td class="r-label">
								<label for="Text_DHCDocCureFTPUploadPath">上传路径<label>
							</td>
							<td>
								<input class='hisui-validatebox textbox' type="textbox" id="Text_DHCDocCureFTPUploadPath" placeholder="路径格式:/filepath/"/>
							</td>
						</tr>
					</table>
					</div> 
				</td>
			</tr> 
			<tr>
				<td align="center" colspan='5'>
					<a class="hisui-linkbutton" id="Confirm" style="margin:10px 0px;" data-options="iconCls:'icon-w-save'">保存</a>
				</td>
			</tr>         
		</table>
	</div>
</div>