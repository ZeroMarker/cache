<div class="hisui-layout" data-options="fit:true,border:false">
	<div data-options="region:'north',border:false,collapsible:false,headerCls:'panel-header-gray'" style="height:92px;padding:0px;">
		<div class="hisui-panel" style="border:none;border-bottom-style:dashed;border-bottom-color:#ccc;border-bottom-width:1px;border-radius:4px 4px 0 0;">
			<input name="Rowid" id="Rowid" type="hidden"  value="">
			<table class="search-table">
				<tr>
					<td class="r-label">
						<label id="_HospListLabel" style='color:red;' class='r-label'>医院</label>
					</td>
				
					<td colspan="3">
						<input id="_HospList" />
					</td>
				</tr>
				<tr>
					<td class="f-label">
						<label class="left_label" style="padding-right:10px" for="GRPLocCode">一级科室代码</label>
					</td>
					<td>
						<input class="hisui-validatebox textbox" id="GRPLocCode" name="GRPLocCode" style="width:120px"/>
					</td>
					<td class="r-label">
						<label class="left_label" for="GRPLocDesc">一级科室名称</label>
					</td>
					<td>
						<input id="GRPLocDesc" class="hisui-validatebox textbox" name="GRPLocDesc" style="width:120px">
					</td>
					<td class="r-label">
						<label class="left_label" for="StartDate">开始日期</label>
					</td>
					<td>
						<input class="hisui-datebox textbox" id="StartDate" style="width:120px"/>
					</td>
					<td class="r-label">
						<label class="left_label" for="EndDate">结束日期</label>
					</td>
					<td>
						<input class="hisui-datebox textbox" id="EndDate" style="width:120px"/>
					</td>
					
					<td class="r-label">
						<a id="BClear" href="#" class="hisui-linkbutton" data-options="iconCls:'icon-w-clean'">清屏</a>
					</td>
				</tr>
			</table>
		</div>
	</div>
	<div data-options="region:'center',border:false,split:true" style="padding:0px">
		<div class="hisui-panel" style="padding:0px;border-color:#ccc"
		data-options="border:false,iconCls:'icon-edit',headerCls:'panel-header-gray',fit:true,closable:false, collapsible:false,minimizable:false,maximizable:false">   
			<table id="MajorCTLocListTab"></table> 
		</div>
		<div id="add-diag" class="hisui-dialog" title="二级科室" style="padding:10px;width:650px;height:600px;" data-options="iconCls:'icon-w-save',shadow:false,modal:true,closed:true">
			<div class="hisui-panel" style="padding:0px;border-color:#ccc;"
			data-options="border:true,headerCls:'panel-header-card-gray',fit:true,closable:false, collapsible:false,minimizable:false,maximizable:false">
				<table id="MinorCTLocListTab"></table> 
			</div>
		</div>
	</div>
</div>