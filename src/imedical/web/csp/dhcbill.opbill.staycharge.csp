<!-- 
 * FileName: dhcbill.opbill.staycharge.csp
 * Anchor: ZhYW
 * Date: 2019-08-19
 * Description: 急诊留观结算
-->
<!DOCTYPE html>
<csp:method name=OnPreHTTP arguments="" returntype=%Boolean>
 if ##class(websys.SessionEvents).SessionExpired() quit 1
 quit 1
</csp:method>
<html>
	<TITLE><EXTHEALTH:TRANSLATE id=title>##(%session.Get("TITLE"))##</EXTHEALTH:TRANSLATE></TITLE>
	<EXTHEALTH:HEAD></EXTHEALTH:HEAD>
	<HISUI/>
	<DHCBILL/>
	<ADDINS/>
	<link rel='stylesheet' type='text/css' href='../scripts/dhcbill/themes/default/dhcbill.opbill.staycharge.css'/>
	<script type='text/javascript' src='../scripts/DHCWeb.OPCommonManageCard.js'></script>
	<script type='text/javascript' src='../scripts/DHCInsuPort.js'></script>
	<script type='text/javascript' src='../scripts/DHCWeb.OPYBComm.js'></script>
	<server>
		do ##class(web.UDHCCardCommLinkRegister).GetCardHardJSFunction()
		w "<input id='ReadAccExpEncrypt' type='hidden' value='"_##class(%CSP.Page).Encrypt($lb("web.UDHCAccManageCLSIF.getaccinfofromcardno"))_"'>",!
		w "<input id='ReadOPDataEncrypt' type='hidden' value='"_##class(%CSP.Page).Encrypt($lb("web.UDHCOPINVPrtIF.GetOPPrtData"))_"'>",!
		w "<input id='DHCVersion' type='hidden' value='"_##class(%CSP.Page).Encrypt($lb("web.DHCOPConfig.GetVersion"))_"'>",!
		w "<input id='paymRowId' type='hidden' value='"_##class(web.DHCOPBillStayCharge).GetChargePayMID()_"'>",!
		w "<input id='accMRowId' type='hidden'>",!
		w "<input id='billId' type='hidden'>",!
	</server>
</head>

<body class="hisui-layout" data-options="fit:true">
	<div data-options="region:'north',border:false" style="height:66px;border-bottom:1px solid #ccc;padding:0 10px;overflow:hidden;">
		<a href="javascript:;" class="hisui-linkbutton big" id="btn-readCard" data-options="iconCls:'icon-big-card-reader',plain:true">读卡(F4)</a>
		<a href="javascript:;" class="hisui-linkbutton big" id="btn-charge" data-options="iconCls:'icon-big-paid',plain:true,disabled:true">结算(F9)</a>
		<div class="datagrid-btn-separator big"></div>
		<a href="javascript:;" class="hisui-linkbutton big" id="btn-ordDtl" data-options="iconCls:'icon-big-paper-search',plain:true">医嘱明细</a>
		<a href="javascript:;" class="hisui-linkbutton big" id="btn-clear" data-options="iconCls:'icon-big-clear',plain:true">清屏(F7)</a>
	</div>
	<div data-options="region:'center',border:false" style="padding:10px;">
		<div class="hisui-layout" data-options="fit:true">
			<div data-options="region:'north',border:false" style="height:206px;">
				<div class="hisui-panel" data-options="title:'急诊留观结算',fit:true,headerCls:'panel-header-gray',iconCls:'icon-fee-arrow'">
					<table class="search-table" style="width:100%;">
						<tr>
							<td class="r-label td-first-col-58"><label>卡类型</label></td>
							<td><input id="cardType" class="hisui-combobox textbox"/></td>
							<td class="r-label"><label>卡号</label></td>
							<td><input id="cardNo" class="textbox"/></td>
							<td class="r-label"><label>登记号</label></td>
							<td><input id="patientNo" class="textbox"/></td>
							<td class="r-label"><label>患者姓名</label></td>
							<td><input id="patName" class="textbox" style="font-weight: bold;" disabled/></td>
							<td class="r-label"><label>票据号</label></td>
							<td><input id="receiptNo" class="textbox" style="font-weight: bold;" disabled/><a href="javascript:;" id="btn-tip" class="hisui-linkbutton" data-options="iconCls:'icon-tip',plain:true"></a></td>
						</tr>
						<tr>
							<td class="r-label"><label>就诊号</label></td>
							<td><input id="episodeId" class="textbox" style="font-weight: bold;" disabled></td>
							<td class="r-label"><label>总费用</label></td>
							<td><input id="patShareAmt" class="hisui-numberbox textbox" data-options="precision:2,disabled:true" style="color: #FF0000;font-weight: bold;"/></td>
							<td class="r-label"><label>应收/应退</label></td>
							<td><input id="amountToPay" class="hisui-numberbox textbox" data-options="precision:2,disabled:true" style="color: #FF0000;font-weight: bold;"/></td>
							<td class="r-label"><label>留观押金</label></td>
							<td><input id="accMLeft" class="hisui-numberbox textbox" data-options="precision:2,disabled:true" style="color: #FF0000;font-weight: bold;"/></td>
							<td class="r-label"><label>出院日期</label></td>
							<td><input id="disDate" class="textbox" style="font-weight: bold;" disabled/></td>
						</tr>
						<tr>
							<td class="r-label"><label>科室</label></td>
							<td><input id="dept" class="textbox" style="font-weight: bold;" disabled/></td>
							<td class="r-label"><label>病区</label></td>
							<td><input id="ward" class="textbox" style="font-weight: bold;" disabled/></td>
							<td class="r-label"><label>床号</label></td>
							<td><input id="bedCode" class="textbox" style="font-weight: bold;" disabled/></td>
							<td class="r-label"><label>费别</label></td>
							<td><input id="insType" class="textbox" disabled/></td>
							<td class="r-label"><label>记账金额</label></td>
							<td><input id="payorAmt" class="hisui-numberbox textbox" data-options="precision:2,disabled:true" style="font-weight: bold;"/></td>
						</tr>
						<tr>
							<td class="r-label"><label>折扣金额</label></td>
							<td><input id="discAmt" class="hisui-numberbox textbox" data-options="precision:2,disabled:true" style="font-weight: bold;"/></td>
							<td class="r-label"><label for="selfPayCK">按自费结算</label></td>
							<td><input id="selfPayCK" class="hisui-checkbox" type="checkbox"/></td>
						</tr>
					</table>
				</div>
			</div>
			<div data-options="region:'center',border:false" style="padding-top:10px;">
				<table id="accDepList"></table>
			</div>
		</div>
	</div>
	<script type="text/javascript" src="../scripts/dhcbill/dhcopbill/dhcbill.opbill.staycharge.js"></script>
</body>
</html>