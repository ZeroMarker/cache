            //if(!LocId){
	        //	$.messager.alert($g("提示"), $g("必须选择病区"), 'info');
	        //}
	        
	        //if (!DisStaDate || !DisEndDate){
		    //	$.messager.alert($g("提示"), $g("必须选择出院时间段"), 'info');
		    //}
		    
		    if (!LocId && !DisStaDate && !DisEndDate && RegNo == "" && MedNo == "" && Name == ""){
