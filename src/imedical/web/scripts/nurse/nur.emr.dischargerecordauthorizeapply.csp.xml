			var url = "nur.emr.dischargerecordauthorizeapplylist.csp?type=SMTZ&regNo="+currentRegNo;
			url = getMWTokenUrl(url);
			websys_createWindow(url, $g("申请历史"), "top=10,left=10,width=98%,height=90%,toolbar=no,location=no,directories=no,status=yes,menubar=no,scrollbars=yes,resizable=yes");
		});
