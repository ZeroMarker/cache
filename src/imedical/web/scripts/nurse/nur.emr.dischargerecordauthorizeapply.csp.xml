	function GetQueryObject() {
	    var url = location.search;
	    var theRequest = new Object();

	    if (url.indexOf("?") != -1) {
	        var str = url.substr(1);
	        strs = str.split("&");
	        for (var i = 0; i < strs.length; i++) {
	            var item = strs[i];
	            var key = item.split("=")[0];
	            var value = item.split("=")[1];
	            theRequest[key] = decodeURI(value);
	        }
	    }
	    return theRequest;
	}
