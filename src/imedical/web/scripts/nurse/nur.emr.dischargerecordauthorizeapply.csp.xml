		$("#patSearch").click(function (argument) {
            var LocId = $("#locBox").combobox("getValue");
            var DisStaDate = $("#dtb1").datebox("getValue");
            var DisEndDate = $("#dtb2").datebox("getValue");;
            var RegNo = $("#regNo").val();
            var MedNo = $("#medNo").val();
