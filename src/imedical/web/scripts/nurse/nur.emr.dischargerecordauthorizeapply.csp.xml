			if (!!msgData){
				if (MsgIsOK(msgData)){
					patDatas.total = msgData.data.length;
					patDatas.rows = msgData.data;
					$('#dg').datagrid('loadData',patDatas);
					if(!!queryRegNo && !!queryMouldType){
				
