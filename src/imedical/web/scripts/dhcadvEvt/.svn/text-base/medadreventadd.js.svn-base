// 查询
function queryAdrEvent()
{
	var adrEventCode=$('#code').val();
	var adrEventDesc=$('#desc').val();
	var params=adrEventCode+"^"+adrEventDesc;
	$('#adreventdg').datagrid('load',{params:params}); 
}
